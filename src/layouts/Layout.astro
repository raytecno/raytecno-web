---
/**
 * Layout principal con soporte multiidioma
 * Incluye hreflang tags para SEO internacional
 */
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import SEOHead from "@/components/SEOHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { type Lang } from "@/config/pages";

export interface Props {
  title: string;
  description?: string;
  lang?: Lang;
  alternateUrls?: { lang: Lang; url: string }[];
}

const { 
  title, 
  description, 
  lang = 'es',
  alternateUrls = []
} = Astro.props;

// URL base del sitio
const siteUrl = 'https://raytecno.es';
---

<!doctype html>
<html lang={lang === 'pt-br' ? 'pt-BR' : lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    
    <!-- SEO con soporte multiidioma -->
    <SEOHead title={title} description={description} lang={lang} />
    
    <!-- Hreflang tags para SEO internacional -->
    {alternateUrls.length > 0 && alternateUrls.map(({ lang: hrefLang, url }) => (
      <link 
        rel="alternate" 
        hreflang={hrefLang === 'pt-br' ? 'pt-BR' : hrefLang} 
        href={`${siteUrl}${url}`} 
      />
    ))}
    
    <!-- x-default para Google (idioma por defecto) -->
    {alternateUrls.length > 0 && (
      <link 
        rel="alternate" 
        hreflang="x-default" 
        href={`${siteUrl}${alternateUrls.find(u => u.lang === 'es')?.url || '/'}`} 
      />
    )}
  </head>
  <body>
    <!-- Header con navegación -->
    <Header lang={lang} />
    
    <!-- Contenido principal -->
    <slot />
    
    <!-- Footer -->
    <Footer lang={lang} />
    
    <!-- WhatsApp flotante -->
    <WhatsAppButton lang={lang} />

    <!-- Script global para navegación con anchors -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        document.addEventListener("click", function (e) {
          const link = e.target.closest("a");
          if (!link) return;

          const href = link.getAttribute("href");
          if (!href) return;

          const hashMatch = href.match(/^(\/[^#]*)(#.+)$/);
          if (!hashMatch) return;

          const [, basePath, hash] = hashMatch;
          const currentPath = window.location.pathname;

          const normalizedBase = basePath.replace(/\/$/, "") || "/";
          const normalizedCurrent = currentPath.replace(/\/$/, "") || "/";

          if (normalizedBase === normalizedCurrent) {
            const target = document.querySelector(hash);
            if (target) {
              e.preventDefault();
              target.scrollIntoView({ behavior: "smooth" });
              history.pushState(null, "", hash);
            }
            return;
          }

          e.preventDefault();
          window.location.href = href;
        });
      });
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Inter", system-ui, sans-serif;
    line-height: 1.6;
    color: #1e293b;
    background: #f8fafc;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "Playfair Display", serif;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>
