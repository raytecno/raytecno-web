---
/**
 * Template: Galería
 * Muestra capturas de pantalla del ERP desde Azure Storage
 */
import Layout from "@/layouts/Layout.astro";
import { getTranslations } from "@/i18n";
import { getAlternateUrls, type Lang } from "@/config/pages";
import { getMenuImages } from "../azure-storage.js";

interface Props {
  lang: string;
  pageId: string;
}

const { lang } = Astro.props;
const t = getTranslations(lang as Lang);
const alternateUrls = getAlternateUrls("galeria");

// Obtener imágenes desde Azure Storage
let images: { url: string; name: string }[] = [];
try {
  images = await getMenuImages();
} catch (error) {
  console.error("Error loading gallery images:", error);
}
---

<Layout
  title={t.gallery.metaTitle}
  description={t.gallery.metaDescription}
  lang={lang as Lang}
  alternateUrls={alternateUrls}
>
  <!-- Hero Section -->
  <section class="gallery-hero">
    <div class="container">
      <h1>{t.gallery.title}</h1>
      <p>{t.gallery.subtitle}</p>
      <div class="badge">
        <span class="badge-count">{images.length}</span>
        <span class="badge-text">{t.common.all}</span>
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="gallery-section">
    <div class="container">
      {
        images.length > 0 ? (
          <div class="gallery-grid">
            {images.map((img, index) => (
              <div class="gallery-item" data-index={index}>
                <img src={img.url} alt={img.name} loading="lazy" />
                <div class="item-overlay">
                  <span class="item-name">{img.name}</span>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              width="64"
              height="64"
            >
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
              <circle cx="8.5" cy="8.5" r="1.5" />
              <polyline points="21 15 16 10 5 21" />
            </svg>
            <p>{t.gallery.empty}</p>
          </div>
        )
      }
    </div>
  </section>

  <!-- Back Button -->
  <section class="back-section">
    <div class="container">
      <a href={`/${lang}`} class="back-button">
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          width="20"
          height="20"
        >
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        {t.gallery.back}
      </a>
    </div>
  </section>
</Layout>

<style>
  .gallery-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 80px 0 60px;
    text-align: center;
    color: white;
  }

  .gallery-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 16px;
  }

  .gallery-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
    margin: 0 0 24px;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    backdrop-filter: blur(4px);
  }

  .badge-count {
    font-weight: 700;
    font-size: 1.1rem;
  }

  .badge-text {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .gallery-section {
    padding: 60px 0;
    background: #f8fafc;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
  }

  .gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: white;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .gallery-item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 12px 16px;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover .item-overlay {
    opacity: 1;
  }

  .item-name {
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .empty-state {
    text-align: center;
    padding: 80px 24px;
    color: #94a3b8;
  }

  .empty-state svg {
    opacity: 0.4;
    margin-bottom: 16px;
  }

  .empty-state p {
    font-size: 1.1rem;
  }

  .back-section {
    padding: 40px 0;
    background: white;
    border-top: 1px solid #e2e8f0;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: #f1f5f9;
    color: #475569;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .back-button:hover {
    background: #e2e8f0;
    color: #1e293b;
  }

  @media (max-width: 768px) {
    .gallery-hero h1 {
      font-size: 2rem;
    }

    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 16px;
    }

    .gallery-item img {
      height: 160px;
    }
  }
</style>
