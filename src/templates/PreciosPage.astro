<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtns = document.querySelectorAll(".toggle-btn");
    const saasPlans = document.getElementById("saasPlans");
    const perpetualPlans = document.getElementById("perpetualPlans");

    toggleBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        toggleBtns.forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");

        const plan = btn.getAttribute("data-plan");
        if (plan === "saas") {
          saasPlans?.classList.add("active");
          perpetualPlans?.classList.remove("active");
        } else {
          saasPlans?.classList.remove("active");
          perpetualPlans?.classList.add("active");
        }
      });
    });
  });
</script>
