            <div class="metal-icon silver">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <div class="metal-info">
              <h2>{tt.silver}</h2>
              <span class="symbol">XAG</span>
            </div>
            <div class="change-badge" id="silverChange">--</div>
          </div>
          <div class="card-body">
            <div class="main-price">
              <span class="price-value" id="silverGram">--</span>
              <span class="price-unit">/g</span>
            </div>
            <div class="price-details">
              <div class="detail">
                <span class="detail-label">{tt.pricePerOunce}</span>
                <span class="detail-value" id="silverOunce">--</span>
              </div>
              <div class="detail">
                <span class="detail-label">{tt.pricePerKg}</span>
                <span class="detail-value" id="silverKg">--</span>
              </div>
            </div>
            <div class="price-range">
              <div class="range-item">
                <span class="range-label">{tt.low24h}</span>
                <span class="range-value low" id="silverLow">--</span>
              </div>
              <div class="range-bar">
                <div class="range-current" id="silverRangeCurrent"></div>
              </div>
              <div class="range-item">
                <span class="range-label">{tt.high24h}</span>
