              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Calculadora rápida -->
      <div class="quick-calc">
        <h3>{tt.calcTitle}</h3>
        <div class="calc-row">
          <div class="calc-input-group">
            <input type="number" id="calcAmount" value="100" min="0" step="1" />
            <select id="calcUnit">
              <option value="g">{tt.grams}</option>
              <option value="oz">{tt.ounces}</option>
              <option value="kg">{tt.kilos}</option>
            </select>
            <span class="calc-of">de</span>
            <select id="calcMetal">
              <option value="gold">{tt.gold}</option>
              <option value="silver">{tt.silver}</option>
            </select>
          </div>
          <div class="calc-result">
            <span class="calc-label">{tt.value}:</span>
            <span class="calc-value" id="calcValue">--</span>
          </div>
        </div>
      </div>

      <!-- Metales secundarios -->
      <div class="secondary-metals">
        <div class="secondary-card">
          <span class="secondary-name">{tt.platinum}</span>
          <span class="secondary-price" id="platinumPrice">--</span>
          <span class="secondary-change" id="platinumChange">--</span>
        </div>
        <div class="secondary-card">
          <span class="secondary-name">{tt.palladium}</span>
          <span class="secondary-price" id="palladiumPrice">--</span>
          <span class="secondary-change" id="palladiumChange">--</span>
