      <a href={contactUrl} class="cta-button">
        {tt.ctaButton}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </section>
  </main>
</Layout>

<script define:vars={{ currency, lang }}>
  const TROY_OUNCE = 31.1035;

  // Precios simulados (en producción usar API real)
  const mockPrices = {
    EUR: {
      gold: { price: 84.50, change: 0.45, low: 83.80, high: 85.20 },
      silver: { price: 0.94, change: -0.22, low: 0.92, high: 0.96 },
      platinum: { price: 29.80, change: 0.15 },
      palladium: { price: 28.50, change: -0.35 },
    },
    USD: {
      gold: { price: 91.80, change: 0.52, low: 91.00, high: 92.50 },
      silver: { price: 1.02, change: -0.18, low: 1.00, high: 1.04 },
      platinum: { price: 32.40, change: 0.12 },
      palladium: { price: 31.00, change: -0.28 },
    },
    BRL: {
      gold: { price: 458.00, change: 0.38, low: 455.00, high: 462.00 },
      silver: { price: 5.10, change: -0.25, low: 5.00, high: 5.20 },
      platinum: { price: 162.00, change: 0.10 },
      palladium: { price: 155.00, change: -0.40 },
    },
  };

  const prices = mockPrices[currency.code] || mockPrices.EUR;

  function formatPrice(value, decimals = 2) {
    return currency.symbol + ' ' + value.toLocaleString(currency.locale, {
      minimumFractionDigits: decimals,
      maximumFractionDigits: decimals
    });
  }

  function formatChange(value) {
    const sign = value >= 0 ? '+' : '';
    return sign + value.toFixed(2) + '%';
  }

  function updatePrices() {
    // Oro
    document.getElementById('goldGram').textContent = formatPrice(prices.gold.price);
    document.getElementById('goldOunce').textContent = formatPrice(prices.gold.price * TROY_OUNCE, 0);
    document.getElementById('goldKg').textContent = formatPrice(prices.gold.price * 1000, 0);
    document.getElementById('goldLow').textContent = formatPrice(prices.gold.low);
    document.getElementById('goldHigh').textContent = formatPrice(prices.gold.high);
    
    const goldChangeEl = document.getElementById('goldChange');
    goldChangeEl.textContent = formatChange(prices.gold.change);
    goldChangeEl.className = 'change-badge ' + (prices.gold.change >= 0 ? 'positive' : 'negative');

    const goldRange = prices.gold.high - prices.gold.low;
    const goldPosition = ((prices.gold.price - prices.gold.low) / goldRange) * 100;
    document.getElementById('goldRangeCurrent').style.left = goldPosition + '%';

    // Plata
    document.getElementById('silverGram').textContent = formatPrice(prices.silver.price);
    document.getElementById('silverOunce').textContent = formatPrice(prices.silver.price * TROY_OUNCE);
    document.getElementById('silverKg').textContent = formatPrice(prices.silver.price * 1000, 0);
    document.getElementById('silverLow').textContent = formatPrice(prices.silver.low);
    document.getElementById('silverHigh').textContent = formatPrice(prices.silver.high);
    
    const silverChangeEl = document.getElementById('silverChange');
    silverChangeEl.textContent = formatChange(prices.silver.change);
    silverChangeEl.className = 'change-badge ' + (prices.silver.change >= 0 ? 'positive' : 'negative');

    const silverRange = prices.silver.high - prices.silver.low;
    const silverPosition = ((prices.silver.price - prices.silver.low) / silverRange) * 100;
    document.getElementById('silverRangeCurrent').style.left = silverPosition + '%';

    // Metales secundarios
    document.getElementById('platinumPrice').textContent = formatPrice(prices.platinum.price) + '/g';
    const platChangeEl = document.getElementById('platinumChange');
    platChangeEl.textContent = formatChange(prices.platinum.change);
    platChangeEl.className = 'secondary-change ' + (prices.platinum.change >= 0 ? 'positive' : 'negative');

    document.getElementById('palladiumPrice').textContent = formatPrice(prices.palladium.price) + '/g';
    const pallChangeEl = document.getElementById('palladiumChange');
    pallChangeEl.textContent = formatChange(prices.palladium.change);
    pallChangeEl.className = 'secondary-change ' + (prices.palladium.change >= 0 ? 'positive' : 'negative');

    // Última actualización
    const now = new Date();
    document.getElementById('lastUpdate').textContent = now.toLocaleTimeString(currency.locale, {
      hour: '2-digit',
      minute: '2-digit'
    });

    calculateValue();
  }

  function calculateValue() {
    const amount = parseFloat(document.getElementById('calcAmount').value) || 0;
    const unit = document.getElementById('calcUnit').value;
    const metal = document.getElementById('calcMetal').value;
    
    let grams = amount;
    if (unit === 'oz') grams = amount * TROY_OUNCE;
    if (unit === 'kg') grams = amount * 1000;
    
    const pricePerGram = metal === 'gold' ? prices.gold.price : prices.silver.price;
    const value = grams * pricePerGram;
    
    document.getElementById('calcValue').textContent = formatPrice(value, 2);
  }

  document.getElementById('calcAmount').addEventListener('input', calculateValue);
  document.getElementById('calcUnit').addEventListener('change', calculateValue);
  document.getElementById('calcMetal').addEventListener('change', calculateValue);

  updatePrices();
  setInterval(() => {
    const now = new Date();
    document.getElementById('lastUpdate').textContent = now.toLocaleTimeString(currency.locale, {
      hour: '2-digit',
      minute: '2-digit'
    });
  }, 30000);
</script>

