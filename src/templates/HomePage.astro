---
/**
 * Template: HomePage
 * PÃ¡gina de inicio con Hero, PorQueRayGold, Testimonios, VideoDemo
 * 
 * @file src/templates/HomePage.astro
 */
import Layout from "@/layouts/Layout.astro";
import { getHomeTranslations } from "@/i18n/home";
import { getAlternateUrls, getPageUrl, type Lang } from "@/config/pages";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = getHomeTranslations(lang);
const h = t.home;
const alternateUrls = getAlternateUrls("modulos" as any); // Home usa misma URL que modulos

// URLs de imÃ¡genes
const blobBase = "https://raygoldstorage.blob.core.windows.net/web";
---

<Layout
  title={h.metaTitle}
  description={h.metaDescription}
  lang={lang as Lang}
  alternateUrls={alternateUrls}
>
  <!-- ============================================
       HERO SECTION
       ============================================ -->
  <section class="hero-section">
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-pattern"></div>
    </div>
    
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <div class="hero-badge">
            <span class="badge-icon">ðŸ’Ž</span>
            <span>{h.hero.badge}</span>
          </div>

          <h1>{h.hero.title}</h1>
          
          <p class="hero-subtitle">
            {h.hero.subtitle} <strong>{h.hero.subtitleStrong}</strong>. {h.hero.subtitleEnd}
          </p>

          <div class="hero-stats">
            <div class="stat">
              <span class="stat-number">35</span>
              <span class="stat-label">{h.hero.stats.years}</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat">
              <span class="stat-number">200+</span>
              <span class="stat-label">{h.hero.stats.jewelers}</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat">
              <span class="stat-number">8</span>
              <span class="stat-label">{h.hero.stats.modules}</span>
            </div>
          </div>

          <div class="hero-ctas">
            <a href={getPageUrl("contacto" as any, lang as Lang)} class="cta-primary">
              <span>{h.hero.ctaPrimary}</span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
            <a href={getPageUrl("modulos" as any, lang as Lang)} class="cta-secondary">
              {h.hero.ctaSecondary}
            </a>
          </div>
        </div>

        <div class="hero-visual">
          <div class="visual-card main">
            <img src={`${blobBase}/A01.png`} alt="Dashboard RayGold" />
            <div class="visual-label">
              <span class="label-dot"></span>
              {h.hero.visual.label}
            </div>
          </div>
          <div class="visual-card floating-1">
            <img src={`${blobBase}/A02.png`} alt="Ficha artÃ­culo" />
          </div>
          <div class="visual-card floating-2">
            <img src={`${blobBase}/A03.png`} alt="ConfiguraciÃ³n" />
          </div>
          
          <div class="visual-badge badge-1">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
              <path d="M22 4L12 14.01l-3-3"/>
            </svg>
            <span>{h.hero.visual.badge1}</span>
          </div>
          <div class="visual-badge badge-2">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6"/>
            </svg>
            <span>{h.hero.visual.badge2}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="scroll-indicator">
      <span>{h.hero.scroll}</span>
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M5 12l7 7 7-7"/>
      </svg>
    </div>
  </section>

  <!-- ============================================
       POR QUÃ‰ RAYGOLD
       ============================================ -->
  <section class="porque-section" id="porque">
    <div class="container">
      <div class="section-header">
        <span class="section-badge orange">{h.porque.badge}</span>
        <h2>{h.porque.title}</h2>
        <p>{h.porque.subtitle}</p>
      </div>

      <div class="diferenciadores-grid">
        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>{h.porque.items.experience.title}</h3>
            <p>{h.porque.items.experience.description}</p>
            <span class="diferenciador-stat">{h.porque.items.experience.stat}</span>
          </div>
        </div>

        <div class="diferenciador-card featured">
          <div class="diferenciador-icon diamond">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 3h12l4 6-10 13L2 9z"/>
              <path d="M2 9h20"/>
              <path d="M12 22V9"/>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>{h.porque.items.specialized.title}</h3>
            <p>{h.porque.items.specialized.description}</p>
            <span class="diferenciador-stat">{h.porque.items.specialized.stat}</span>
          </div>
        </div>

        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7"/>
              <rect x="14" y="3" width="7" height="7"/>
              <rect x="3" y="14" width="7" height="7"/>
              <rect x="14" y="14" width="7" height="7"/>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>{h.porque.items.integrated.title}</h3>
            <p>{h.porque.items.integrated.description}</p>
            <span class="diferenciador-stat">{h.porque.items.integrated.stat}</span>
          </div>
        </div>

        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 00-3-3.87"/>
              <path d="M16 3.13a4 4 0 010 7.75"/>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>{h.porque.items.support.title}</h3>
            <p>{h.porque.items.support.description}</p>
            <span class="diferenciador-stat">{h.porque.items.support.stat}</span>
          </div>
        </div>

        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 10h-1.26A8 8 0 109 20h9a5 5 0 000-10z"/>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>{h.porque.items.cloud.title}</h3>
            <p>{h.porque.items.cloud.description}</p>
            <span class="diferenciador-stat">{h.porque.items.cloud.stat}</span>
          </div>
        </div>
      </div>

      <div class="porque-cta">
        <p>{h.porque.cta.text}</p>
        <a href={getPageUrl("contacto" as any, lang as Lang)} class="cta-button">{h.porque.cta.button}</a>
      </div>
    </div>
  </section>

  <!-- ============================================
       TESTIMONIOS
       ============================================ -->
  <section class="testimonios-section">
    <div class="container">
      <div class="section-header">
        <span class="section-badge">{h.testimonios.badge}</span>
        <h2>{h.testimonios.title}</h2>
        <p>{h.testimonios.subtitle}</p>
      </div>

      <div class="testimonios-grid">
        {h.testimonios.items.map((item) => (
          <article class={`testimonio-card ${item.featured ? 'featured' : ''}`}>
            <div class="testimonio-quote">
              <svg class="quote-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"></path>
              </svg>
              <p>
                "{item.quote} <strong>{item.quoteStrong}</strong>"
              </p>
            </div>
            <div class="testimonio-result">
              <span class="result-number">{item.resultNumber}</span>
              <span class="result-text">{item.resultText}</span>
            </div>
            <div class="testimonio-author">
              <div class="author-avatar">{item.initials}</div>
              <div class="author-info">
                <strong>{item.author}</strong>
                <span>{item.company}</span>
                <span class="author-years">{item.since}</span>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- ============================================
       VIDEO DEMO
       ============================================ -->
  <section class="video-section" id="demo">
    <div class="container">
      <div class="section-header">
        <span class="section-badge purple">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="5 3 19 12 5 21 5 3"></polygon>
          </svg>
          {h.video.badge}
        </span>
        <h2 class="section-title">
          {h.video.title} <span class="gradient-text">{h.video.titleHighlight}</span>
        </h2>
        <p class="section-subtitle">{h.video.subtitle}</p>
      </div>

      <div class="video-wrapper">
        <div class="video-frame">
          <div class="glow-effect"></div>
          <div class="video-player" id="videoPlayer">
            <div class="video-poster" id="videoPoster">
              <img 
                src={`${blobBase}/Video_RayGold_poster.jpg`}
                alt="Demo de RayGold ERP"
                class="poster-image"
                onerror="this.style.display='none'"
              />
              <div class="poster-overlay">
                <button class="play-button" id="playButton" aria-label="Play video">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </button>
                <span class="play-text">{h.video.playText}</span>
              </div>
            </div>
            
            <video 
              id="demoVideo"
              class="video-element"
              poster={`${blobBase}/Video_RayGold_poster.jpg`}
              preload="metadata"
              playsinline
              controls
            >
              <source src={`${blobBase}/Video_RayGold.mp4`} type="video/mp4" />
            </video>
          </div>
        </div>

        <div class="video-features">
          <div class="feature-item">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div class="feature-text">
              <span class="feature-value">{h.video.features.duration.value}</span>
              <span class="feature-label">{h.video.features.duration.label}</span>
            </div>
          </div>
          
          <div class="feature-divider"></div>
          
          <div class="feature-item">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                <line x1="8" y1="21" x2="16" y2="21"></line>
                <line x1="12" y1="17" x2="12" y2="21"></line>
              </svg>
            </div>
            <div class="feature-text">
              <span class="feature-value">{h.video.features.modules.value}</span>
              <span class="feature-label">{h.video.features.modules.label}</span>
            </div>
          </div>
          
          <div class="feature-divider"></div>
          
          <div class="feature-item">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <div class="feature-text">
              <span class="feature-value">{h.video.features.specialized.value}</span>
              <span class="feature-label">{h.video.features.specialized.label}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="video-cta">
        <p class="cta-text">{h.video.cta.text}</p>
        <a href={getPageUrl("contacto" as any, lang as Lang)} class="cta-button">
          {h.video.cta.button}
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Variables globales */
  :root {
    --primary: #667eea;
    --primary-dark: #764ba2;
    --success: #10b981;
    --warning: #f59e0b;
    --bg-dark: #0f172a;
    --bg-darker: #0a0a0f;
    --text-light: #e2e8f0;
    --text-muted: #94a3b8;
    --border-color: #334155;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  /* ============================================
     HERO SECTION
     ============================================ */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 6rem 1.5rem 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(102, 126, 234, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1.1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1300px;
    margin: 0 auto;
  }

  .hero-text { max-width: 560px; }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(102, 126, 234, 0.15);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 50px;
    margin-bottom: 1.5rem;
  }

  .badge-icon { font-size: 1rem; }

  .hero-badge span:last-child {
    color: #c4b5fd;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .hero-section h1 {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 1.25rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 2rem;
  }

  .hero-subtitle strong { color: #e2e8f0; }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding: 1.25rem 0;
    border-top: 1px solid #334155;
    border-bottom: 1px solid #334155;
  }

  .stat { display: flex; flex-direction: column; }
  .stat-number { font-size: 1.75rem; font-weight: 700; color: white; }
  .stat-label { font-size: 0.8rem; color: #64748b; }
  .stat-divider { width: 1px; height: 40px; background: #334155; }

  .hero-ctas { display: flex; gap: 1rem; flex-wrap: wrap; }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
  }

  .cta-primary svg { width: 20px; height: 20px; transition: transform 0.2s ease; }
  .cta-primary:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4); }
  .cta-primary:hover svg { transform: translateX(4px); }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    padding: 1rem 1.75rem;
    background: transparent;
    color: #94a3b8;
    text-decoration: none;
    border: 1px solid #334155;
    border-radius: 12px;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .cta-secondary:hover {
    color: white;
    border-color: #94a3b8;
    background: rgba(255, 255, 255, 0.05);
  }

  /* Hero Visual */
  .hero-visual { position: relative; height: 500px; }

  .visual-card {
    position: absolute;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 24px 48px rgba(0, 0, 0, 0.4);
    border: 1px solid #334155;
  }

  .visual-card img { width: 100%; height: 100%; object-fit: cover; }

  .visual-card.main {
    width: 100%;
    height: 320px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
  }

  .visual-label {
    position: absolute;
    bottom: 12px;
    left: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(8px);
    border-radius: 8px;
    font-size: 0.8rem;
    color: white;
    font-weight: 500;
  }

  .label-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .visual-card.floating-1 {
    width: 180px; height: 120px;
    top: 10px; right: -20px;
    z-index: 3;
    animation: float 6s ease-in-out infinite;
  }

  .visual-card.floating-2 {
    width: 160px; height: 110px;
    bottom: 20px; left: -30px;
    z-index: 1;
    animation: float 6s ease-in-out infinite 2s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .visual-badge {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 14px;
    background: rgba(30, 41, 59, 0.95);
    backdrop-filter: blur(8px);
    border: 1px solid #334155;
    border-radius: 10px;
    z-index: 4;
  }

  .visual-badge svg { width: 18px; height: 18px; color: #10b981; }
  .visual-badge span { font-size: 0.8rem; color: white; font-weight: 500; }

  .visual-badge.badge-1 { top: 60px; left: -40px; animation: float 5s ease-in-out infinite 1s; }
  .visual-badge.badge-2 { bottom: 80px; right: 20px; animation: float 5s ease-in-out infinite 3s; }
  .visual-badge.badge-2 svg { color: #f59e0b; }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.75rem;
    animation: bounce 2s ease-in-out infinite;
  }

  .scroll-indicator svg { width: 20px; height: 20px; }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(8px); }
  }

  /* ============================================
     SECTION HEADER (comÃºn)
     ============================================ */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(102, 126, 234, 0.2);
    color: #818cf8;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 50px;
    margin-bottom: 1rem;
  }

  .section-badge.orange {
    background: rgba(245, 158, 11, 0.2);
    color: #fbbf24;
  }

  .section-badge.purple {
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    color: #a78bfa;
  }

  .section-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.75rem;
  }

  .section-header p {
    color: #94a3b8;
    font-size: 1.1rem;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* ============================================
     POR QUÃ‰ RAYGOLD
     ============================================ */
  .porque-section {
    padding: 5rem 1.5rem;
    background: #0f172a;
  }

  .diferenciadores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.25rem;
  }

  .diferenciador-card {
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid #334155;
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  .diferenciador-card:hover {
    border-color: #667eea;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .diferenciador-card.featured {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(30, 41, 59, 0.5) 100%);
    border-color: rgba(102, 126, 234, 0.5);
    grid-column: span 2;
  }

  .diferenciador-icon {
    width: 48px;
    height: 48px;
    min-width: 48px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
