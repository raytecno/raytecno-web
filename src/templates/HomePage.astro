---
/**
 * Template: HomePage
 * Página de inicio de RayGold
 * 
 * USA LOS COMPONENTES ORIGINALES con soporte multiidioma
 */
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Modulos from "@/components/Modulos.astro";
import PorQueRayGold from "@/components/PorQueRayGold.astro";
import VideoDemo from "@/components/VideoDemo.astro";
import Testimonios from "@/components/Testimonios.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import { getAlternateUrls, type Lang } from "@/config/pages";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const alternateUrls = getAlternateUrls("home");

// Meta información por idioma
const metaInfo: Record<Lang, { title: string; description: string }> = {
  es: {
    title: "RayGold - Software ERP para Joyería",
    description: "El ERP más completo para joyerías. Gestión de inventario, fabricación, ventas y contabilidad. +200 joyerías confían en nosotros desde 1990.",
  },
  en: {
    title: "RayGold - ERP Software for Jewelry",
    description: "The most complete ERP for jewelry businesses. Inventory management, manufacturing, sales and accounting. +200 jewelers trust us since 1990.",
  },
  fr: {
    title: "RayGold - Logiciel ERP pour Bijouterie",
    description: "L'ERP le plus complet pour les bijouteries. Gestion des stocks, fabrication, ventes et comptabilité. +200 bijouteries nous font confiance depuis 1990.",
  },
  ca: {
    title: "RayGold - Software ERP per a Joieria",
    description: "L'ERP més complet per a joieries. Gestió d'inventari, fabricació, vendes i comptabilitat. +200 joieries confien en nosaltres des de 1990.",
  },
  "pt-br": {
    title: "RayGold - Software ERP para Joalheria",
    description: "O ERP mais completo para joalherias. Gestão de estoque, fabricação, vendas e contabilidade. +200 joalherias confiam em nós desde 1990.",
  },
};

const meta = metaInfo[lang] || metaInfo.es;
---

<Layout
  title={meta.title}
  description={meta.description}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <!-- Hero Section - Banner principal con stats y CTAs -->
  <Hero lang={lang} />

  <!-- Módulos - 8 módulos del ERP -->
  <Modulos lang={lang} />

  <!-- Por Qué RayGold - Diferenciadores -->
  <PorQueRayGold lang={lang} />

  <!-- Video Demo - Demostración del ERP -->
  <VideoDemo lang={lang} />

  <!-- Testimonios - Casos de éxito -->
  <Testimonios lang={lang} />

  <!-- WhatsApp Button - Botón flotante -->
  <WhatsAppButton lang={lang} />
</Layout>
