    </div>
  </section>
</Layout>

<style>
  .modules-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 0 60px;
    text-align: center;
    color: white;
  }

  .modules-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 16px;
  }

  .modules-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .modules-section {
    padding: 60px 0;
    background: #f8fafc;
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }

  .module-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .module-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: var(--module-color);
  }

  .module-icon {
    width: 56px;
    height: 56px;
    background: color-mix(in srgb, var(--module-color) 15%, transparent);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .module-icon :global(svg) {
    width: 28px;
    height: 28px;
    stroke: var(--module-color);
  }

  .module-content {
    flex: 1;
  }

  .module-content h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 6px;
  }

  .module-content p {
    font-size: 0.875rem;
    color: #64748b;
    margin: 0;
    line-height: 1.5;
  }

  .module-arrow {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .module-arrow svg {
    width: 24px;
    height: 24px;
    stroke: var(--module-color);
  }

  .module-card:hover .module-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .cta-section {
    padding: 60px 0;
    text-align: center;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  }

  .cta-section h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 12px;
  }

  .cta-section p {
    font-size: 1.1rem;
    color: #64748b;
    margin: 0 0 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
  }

  @media (max-width: 768px) {
    .modules-hero h1 {
      font-size: 2rem;
    }

    .modules-grid {
      grid-template-columns: 1fr;
    }

    .module-card {
      padding: 20px;
    }
  }
</style>
