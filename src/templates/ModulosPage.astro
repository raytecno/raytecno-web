                  <div class="modulo-icon" set:html={modulo.icono} />
                  <div class="modulo-content">
                    <h3>{data.nombre}</h3>
                    <p>{data.descripcion}</p>
                  </div>
                  <div class="modulo-arrow">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
