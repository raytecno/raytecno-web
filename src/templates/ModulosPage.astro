---

<Layout
  title={pt.metaTitle}
  description={pt.metaDesc}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <!-- Hero Section -->
  <section class="modules-hero">
    <div class="container">
      <h1>{pt.title}</h1>
      <p>{pt.subtitle}</p>
    </div>
  </section>

  <!-- Modules Grid -->
  <section class="modules-section">
    <div class="container">
      <div class="modules-grid">
        {modulos.map((modulo) => {
          const moduleData = mt[modulo.key];
          return (
            <a
              href={`/${lang}/${modulo.id}`}
              class="module-card"
              style={`--module-color: ${modulo.color}`}
            >
              <div class="module-icon" set:html={modulo.icon} />
              <div class="module-content">
                <h3>{moduleData.title}</h3>
                <p>{moduleData.description}</p>
              </div>
              <div class="module-arrow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12" />
                  <polyline points="12 5 19 12 12 19" />
                </svg>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>{pt.ctaTitle}</h2>
      <p>{pt.ctaDesc}</p>
      <a href={getPageUrl("contacto", lang)} class="cta-button">
        {pt.ctaBtn}
