---
/**
 * Template: Módulos (índice)
 * Muestra los 8 módulos de RayGold con enlaces a cada submódulo
 */
import Layout from "@/layouts/Layout.astro";
import { getTranslations } from "@/i18n";
import { getAlternateUrls, getPageUrl, type Lang } from "@/config/pages";

interface Props {
  lang: string;
  pageId: string;
}

const { lang } = Astro.props;
const t = getTranslations(lang as Lang);
const alternateUrls = getAlternateUrls("modulos");

// Definición de módulos con iconos y colores
const modulos = [
  {
    id: "modulos/maestros",
    key: "maestros",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>`,
    color: "#3b82f6",
  },
  {
    id: "modulos/comercial",
    key: "comercial",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>`,
    color: "#10b981",
  },
  {
    id: "modulos/fabricacion",
    key: "fabricacion",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 20a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8l-7 5V8l-7 5V4a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/><path d="M17 18h1"/><path d="M12 18h1"/><path d="M7 18h1"/></svg>`,
    color: "#f59e0b",
  },
  {
    id: "modulos/finanzas",
    key: "finanzas",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>`,
    color: "#8b5cf6",
  },
  {
    id: "modulos/historicos",
    key: "historicos",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>`,
    color: "#6366f1",
  },
  {
    id: "modulos/estadisticas",
    key: "estadisticas",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>`,
    color: "#ec4899",
  },
  {
    id: "modulos/vendedores",
    key: "vendedores",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`,
    color: "#14b8a6",
  },
  {
    id: "modulos/ecommerce",
    key: "ecommerce",
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>`,
    color: "#f97316",
  },
];
---

<Layout
  title={t.modules.metaTitle}
  description={t.modules.metaDescription}
  lang={lang as Lang}
  alternateUrls={alternateUrls}
>
  <!-- Hero Section -->
  <section class="modules-hero">
    <div class="container">
      <h1>{t.modules.title}</h1>
      <p>{t.modules.subtitle}</p>
    </div>
  </section>

  <!-- Modules Grid -->
  <section class="modules-section">
    <div class="container">
      <div class="modules-grid">
        {
          modulos.map((modulo) => {
            const moduleData =
              t.modules.list[modulo.key as keyof typeof t.modules.list];
            return (
              <a
                href={getPageUrl(modulo.id as any, lang as Lang)}
                class="module-card"
                style={`--module-color: ${modulo.color}`}
              >
                <div class="module-icon" set:html={modulo.icon} />
                <div class="module-content">
                  <h3>{moduleData.title}</h3>
                  <p>{moduleData.description}</p>
                </div>
                <div class="module-arrow">
                  <svg
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </div>
              </a>
            );
          })
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>{t.cta.title}</h2>
      <p>{t.cta.description}</p>
      <a href={getPageUrl("contacto", lang as Lang)} class="cta-button">
        {t.cta.button}
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          width="20"
          height="20"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </section>
</Layout>

<style>
  .modules-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 80px 0 60px;
    text-align: center;
    color: white;
  }

  .modules-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 16px;
  }

  .modules-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .modules-section {
    padding: 60px 0;
    background: #f8fafc;
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }

  .module-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .module-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: var(--module-color);
  }

  .module-icon {
    width: 56px;
    height: 56px;
    background: color-mix(in srgb, var(--module-color) 15%, transparent);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .module-icon :global(svg) {
    width: 28px;
    height: 28px;
    stroke: var(--module-color);
  }

  .module-content {
    flex: 1;
  }

  .module-content h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 6px;
  }

  .module-content p {
    font-size: 0.875rem;
    color: #64748b;
    margin: 0;
    line-height: 1.5;
  }

  .module-arrow {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .module-arrow svg {
    width: 24px;
    height: 24px;
    stroke: var(--module-color);
  }

  .module-card:hover .module-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .cta-section {
    padding: 60px 0;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.1) 0%,
      rgba(118, 75, 162, 0.1) 100%
    );
  }

  .cta-section h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 12px;
  }

  .cta-section p {
    font-size: 1.1rem;
    color: #64748b;
    margin: 0 0 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
  }

  @media (max-width: 768px) {
    .modules-hero h1 {
      font-size: 2rem;
    }

    .modules-grid {
      grid-template-columns: 1fr;
    }

    .module-card {
      padding: 20px;
    }
  }
</style>
