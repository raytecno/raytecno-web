---
/**
 * Template: Contacto
 *
 * Este componente recibe el idioma y renderiza la p√°gina de contacto
 * con todas las traducciones correspondientes.
 */
import Layout from "@/layouts/Layout.astro";
import { getTranslations } from "@/i18n";
import { getAlternateUrls, type Lang } from "@/config/pages";

interface Props {
  lang: string;
  pageId: string;
}

const { lang } = Astro.props;
const t = getTranslations(lang as Lang);

// URLs alternativas para hreflang
const alternateUrls = getAlternateUrls("contacto");
---

<Layout
  title={t.contact.metaTitle}
  description={t.contact.metaDescription}
  lang={lang as Lang}
  alternateUrls={alternateUrls}
>
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="container">
      <h1>{t.contact.title}</h1>
      <p>{t.contact.subtitle}</p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <!-- Formulario -->
        <div class="contact-form-wrapper">
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="nombre">{t.contact.nombre}</label>
              <input type="text" id="nombre" name="nombre" required />
            </div>

            <div class="form-group">
              <label for="email">{t.contact.email}</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="telefono">{t.contact.telefono}</label>
              <input type="tel" id="telefono" name="telefono" />
            </div>

            <div class="form-group">
              <label for="empresa">{t.contact.empresa}</label>
              <input type="text" id="empresa" name="empresa" />
            </div>

            <div class="form-group full-width">
              <label for="mensaje">{t.contact.mensaje}</label>
              <textarea id="mensaje" name="mensaje" rows="5" required
              ></textarea>
            </div>

            <button type="submit" class="btn-submit">
              {t.contact.enviar}
            </button>
          </form>
        </div>

        <!-- Info de contacto -->
        <div class="contact-info">
          <div class="info-card">
            <h3>{t.contact.llamanos}</h3>
            <a href="tel:+34666666666" class="info-link">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
              </svg>
              +34 666 666 666
            </a>
          </div>

          <div class="info-card whatsapp">
            <h3>{t.contact.whatsapp}</h3>
            <a
              href="https://wa.me/34666666666"
              target="_blank"
              rel="noopener"
              class="info-link"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"
                ></path>
              </svg>
              {t.contact.whatsapp}
            </a>
          </div>

          <div class="info-card email">
            <h3>Email</h3>
            <a href="mailto:info@raytecno.es" class="info-link">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                ></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              info@raytecno.es
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 80px 0 60px;
    text-align: center;
    color: white;
  }

  .contact-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 16px;
  }

  .contact-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .contact-content {
    padding: 60px 0;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 360px;
    gap: 48px;
  }

  .contact-form-wrapper {
    background: white;
    padding: 32px;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .contact-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group.full-width {
    grid-column: span 2;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #475569;
    margin-bottom: 6px;
  }

  .form-group input,
  .form-group textarea {
    padding: 12px 16px;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-size: 1rem;
    transition:
      border-color 0.2s,
      box-shadow 0.2s;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
  }

  .btn-submit {
    grid-column: span 2;
    padding: 14px 32px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .info-card {
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .info-card h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: #64748b;
    margin: 0 0 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-link {
    display: flex;
    align-items: center;
    gap: 12px;
    color: #1e293b;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .info-link:hover {
    color: #667eea;
  }

  .info-card.whatsapp .info-link {
    color: #25d366;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-form {
      grid-template-columns: 1fr;
    }

    .form-group.full-width,
    .btn-submit {
      grid-column: span 1;
    }
  }
</style>
