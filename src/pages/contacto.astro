---
/**
 * Página de Contacto - RayGold
 * /contacto (español)
 *
 * Incluye: Formulario de contacto + Modal Login/Registro Demo
 */
import Layout from "../layouts/Layout.astro";
import { defaultLang, type Language } from "../i18n/config";
import { useTranslations } from "../i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

// Determinar rutas según idioma
const homePath = lang === defaultLang ? "/" : `/${lang}/`;
const modulosPath = lang === defaultLang ? "/#modulos" : `/${lang}/#modules`;
const porquePath = lang === defaultLang ? "/#porque" : `/${lang}/#why`;
const tecnologiaPath =
  lang === defaultLang ? "/tecnologia" : `/${lang}/technology`;
const preciosPath = lang === defaultLang ? "/precios" : `/${lang}/pricing`;
const contactoPath = lang === defaultLang ? "/contacto" : `/${lang}/contact`;
---

<Layout
  title={`${t("contact.title")} | RayGold ERP`}
  description={t("contact.subtitle")}
  lang={lang}
>
  <!-- HEADER -->
  <header class="header">
    <div class="header-inner">
      <a href={homePath} class="logo">
        <svg class="logo-icon" viewBox="0 0 40 40" fill="none">
          <path
            d="M20 2L37 12V28L20 38L3 28V12L20 2Z"
            fill="url(#grad1)"
            stroke="#fff"
            stroke-width="1"></path>
          <path
            d="M20 8L30 14V26L20 32L10 26V14L20 8Z"
            fill="rgba(255,255,255,0.3)"></path>
          <defs>
            <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#667eea"></stop>
              <stop offset="100%" style="stop-color:#764ba2"></stop>
            </linearGradient>
          </defs>
        </svg>
        <div class="logo-text">
          <h1>RAYGOLD</h1>
          <span>{t("hero.badge")}</span>
        </div>
      </a>

      <nav class="nav">
        <a href={homePath}>{t("nav.home")}</a>
        <a href={modulosPath}>{t("nav.modules")}</a>
        <a href={porquePath}
          >{
            lang === "es"
              ? "Por qué RayGold"
              : lang === "en"
                ? "Why RayGold"
                : lang === "fr"
                  ? "Pourquoi RayGold"
                  : lang === "ca"
                    ? "Per què RayGold"
                    : "Por que RayGold"
          }</a
        >
        <a href={tecnologiaPath}>{t("nav.technology")}</a>
        <a href={preciosPath}>{t("nav.pricing")}</a>
        <a href={contactoPath} class="active">{t("nav.contact")}</a>
      </nav>

      <button class="menu-toggle" aria-label="Menu">☰</button>
    </div>
  </header>

  <!-- CONTACTO PAGE -->
  <main class="contacto-page">
    <section class="contacto-section">
      <div class="container">
        <!-- Header -->
        <div class="section-header">
          <span class="section-badge">
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
              ></path>
            </svg>
            {t("nav.contact")}
          </span>
          <h2 class="section-title">
            {t("cta.title").split("?")[0]}? <span class="gradient-text"
              >{t("hero.titleHighlight")}</span
            >
          </h2>
          <p class="section-subtitle">
            {t("cta.description")}
          </p>
        </div>

        <!-- Cards Container -->
        <div class="contact-grid">
          <!-- Card 1: Formulario de Contacto -->
          <div class="contact-card contact-form-card">
            <div class="card-header">
              <div class="card-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                  ></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div>
                <h3>{t("contact.form.submit")}</h3>
                <p>
                  {
                    lang === "es"
                      ? "Te contactaremos en menos de 24h"
                      : lang === "en"
                        ? "We will contact you within 24h"
                        : lang === "fr"
                          ? "Nous vous contacterons sous 24h"
                          : lang === "ca"
                            ? "Et contactarem en menys de 24h"
                            : "Entraremos em contato em 24h"
                  }
                </p>
              </div>
            </div>

            <form id="contactForm" class="contact-form">
              <div class="form-row">
                <div class="form-group">
                  <label for="empresa">{t("contact.form.company")}</label>
                  <input
                    type="text"
                    id="empresa"
                    name="empresa"
                    placeholder={lang === "es"
                      ? "Joyería Ejemplo S.L."
                      : lang === "en"
                        ? "Example Jewelry Ltd."
                        : lang === "fr"
                          ? "Bijouterie Exemple SARL"
                          : lang === "ca"
                            ? "Joieria Exemple S.L."
                            : "Joalheria Exemplo Ltda."}
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="nombre">{t("contact.form.name")}</label>
                  <input
                    type="text"
                    id="nombre"
                    name="nombre"
                    placeholder={lang === "es"
                      ? "Juan García"
                      : lang === "en"
                        ? "John Smith"
                        : lang === "fr"
                          ? "Jean Dupont"
                          : lang === "ca"
                            ? "Joan Garcia"
                            : "João Silva"}
                    required
                  />
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="telefono">{t("contact.form.phone")}</label>
                  <div class="input-prefix">
                    <span>+34</span>
                    <input
                      type="tel"
                      id="telefono"
                      name="telefono"
                      placeholder="612 345 678"
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="email">{t("contact.form.email")}</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="juan@joyeria.com"
                    required
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="interes"
                  >{
                    lang === "es"
                      ? "Interés principal"
                      : lang === "en"
                        ? "Main interest"
                        : lang === "fr"
                          ? "Intérêt principal"
                          : lang === "ca"
                            ? "Interès principal"
                            : "Interesse principal"
                  }</label
                >
                <select id="interes" name="interes">
                  <option value="informacion"
                    >{
                      lang === "es"
                        ? "Información general"
                        : lang === "en"
                          ? "General information"
                          : lang === "fr"
                            ? "Informations générales"
                            : lang === "ca"
                              ? "Informació general"
                              : "Informação geral"
                    }</option
                  >
                  <option value="demo"
                    >{
                      lang === "es"
                        ? "Solicitar demostración"
                        : lang === "en"
                          ? "Request demo"
                          : lang === "fr"
                            ? "Demander une démo"
                            : lang === "ca"
                              ? "Sol·licitar demostració"
                              : "Solicitar demonstração"
                    }</option
                  >
                  <option value="presupuesto"
                    >{
                      lang === "es"
                        ? "Presupuesto personalizado"
                        : lang === "en"
                          ? "Custom quote"
                          : lang === "fr"
                            ? "Devis personnalisé"
                            : lang === "ca"
                              ? "Pressupost personalitzat"
                              : "Orçamento personalizado"
                    }</option
                  >
                  <option value="migracion"
                    >{
                      lang === "es"
                        ? "Migración desde otro sistema"
                        : lang === "en"
                          ? "Migration from another system"
                          : lang === "fr"
                            ? "Migration depuis un autre système"
                            : lang === "ca"
                              ? "Migració des d'un altre sistema"
                              : "Migração de outro sistema"
                    }</option
                  >
                  <option value="soporte"
                    >{
                      lang === "es"
                        ? "Soporte técnico"
                        : lang === "en"
                          ? "Technical support"
                          : lang === "fr"
                            ? "Support technique"
                            : lang === "ca"
                              ? "Suport tècnic"
                              : "Suporte técnico"
                    }</option
                  >
                </select>
              </div>

              <div class="form-group">
                <label for="tamano"
                  >{
                    lang === "es"
                      ? "Tamaño de la empresa"
                      : lang === "en"
                        ? "Company size"
                        : lang === "fr"
                          ? "Taille de l'entreprise"
                          : lang === "ca"
                            ? "Mida de l'empresa"
                            : "Tamanho da empresa"
                  }</label
                >
                <select id="tamano" name="tamano">
                  <option value="1-5"
                    >{
                      lang === "es"
                        ? "1-5 empleados"
                        : lang === "en"
                          ? "1-5 employees"
                          : lang === "fr"
                            ? "1-5 employés"
                            : lang === "ca"
                              ? "1-5 empleats"
                              : "1-5 funcionários"
                    }</option
                  >
                  <option value="6-15"
                    >{
                      lang === "es"
                        ? "6-15 empleados"
                        : lang === "en"
                          ? "6-15 employees"
                          : lang === "fr"
                            ? "6-15 employés"
                            : lang === "ca"
                              ? "6-15 empleats"
                              : "6-15 funcionários"
                    }</option
                  >
                  <option value="16-50"
                    >{
                      lang === "es"
                        ? "16-50 empleados"
                        : lang === "en"
                          ? "16-50 employees"
                          : lang === "fr"
                            ? "16-50 employés"
                            : lang === "ca"
                              ? "16-50 empleats"
                              : "16-50 funcionários"
                    }</option
                  >
                  <option value="50+"
                    >{
                      lang === "es"
                        ? "Más de 50 empleados"
                        : lang === "en"
                          ? "More than 50 employees"
                          : lang === "fr"
                            ? "Plus de 50 employés"
                            : lang === "ca"
                              ? "Més de 50 empleats"
                              : "Mais de 50 funcionários"
                    }</option
                  >
                </select>
              </div>

              <div class="form-group">
                <label for="mensaje"
                  >{t("contact.form.message")} ({
                    lang === "es"
                      ? "opcional"
                      : lang === "en"
                        ? "optional"
                        : lang === "fr"
                          ? "optionnel"
                          : lang === "ca"
                            ? "opcional"
                            : "opcional"
                  })</label
                >
                <textarea
                  id="mensaje"
                  name="mensaje"
                  rows="3"
                  placeholder={lang === "es"
                    ? "Cuéntanos más sobre tu joyería..."
                    : lang === "en"
                      ? "Tell us more about your jewelry business..."
                      : lang === "fr"
                        ? "Parlez-nous de votre bijouterie..."
                        : lang === "ca"
                          ? "Explica'ns més sobre la teva joieria..."
                          : "Conte-nos mais sobre sua joalheria..."}></textarea>
              </div>

              <div class="form-privacy">
                <svg
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                <span>
                  {
                    lang === "es"
                      ? "Trataremos tus datos según nuestra"
                      : lang === "en"
                        ? "We will process your data according to our"
                        : lang === "fr"
                          ? "Nous traiterons vos données selon notre"
                          : lang === "ca"
                            ? "Tractarem les teves dades segons la nostra"
                            : "Trataremos seus dados de acordo com nossa"
                  }
                  <a href="/privacidad">{t("footer.legal.privacy")}</a>
                </span>
              </div>

              <button type="submit" class="btn-submit">
                <span>{t("contact.form.submit")}</span>
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <line x1="22" y1="2" x2="11" y2="13"></line>
                  <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                </svg>
              </button>
            </form>
          </div>

          <!-- Card 2: Prueba Gratis -->
          <div class="contact-card demo-card">
            <div class="demo-content">
              <div class="demo-badge">
                ✨ {
                  lang === "es"
                    ? "Sin compromiso"
                    : lang === "en"
                      ? "No commitment"
                      : lang === "fr"
                        ? "Sans engagement"
                        : lang === "ca"
                          ? "Sense compromís"
                          : "Sem compromisso"
                }
              </div>
              <h3>
                {
                  lang === "es"
                    ? "Prueba RayGold"
                    : lang === "en"
                      ? "Try RayGold"
                      : lang === "fr"
                        ? "Essayez RayGold"
                        : lang === "ca"
                          ? "Prova RayGold"
                          : "Experimente RayGold"
                }
                <span
                  >{
                    lang === "es"
                      ? "gratis"
                      : lang === "en"
                        ? "free"
                        : lang === "fr"
                          ? "gratuitement"
                          : lang === "ca"
                            ? "gratis"
                            : "grátis"
                  }</span>
              </h3>
              <p>
                {
                  lang === "es"
                    ? "Accede a una demostración completa del sistema sin necesidad de instalación"
                    : lang === "en"
                      ? "Access a complete system demo without installation"
                      : lang === "fr"
                        ? "Accédez à une démonstration complète du système sans installation"
                        : lang === "ca"
                          ? "Accedeix a una demostració completa del sistema sense instal·lació"
                          : "Acesse uma demonstração completa do sistema sem instalação"
                }
              </p>

              <ul class="demo-features">
                <li>
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {
                    lang === "es"
                      ? "Acceso inmediato al sistema"
                      : lang === "en"
                        ? "Immediate system access"
                        : lang === "fr"
                          ? "Accès immédiat au système"
                          : lang === "ca"
                            ? "Accés immediat al sistema"
                            : "Acesso imediato ao sistema"
                  }
                </li>
                <li>
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {
                    lang === "es"
                      ? "Datos de ejemplo precargados"
                      : lang === "en"
                        ? "Preloaded sample data"
                        : lang === "fr"
                          ? "Données exemples préchargées"
                          : lang === "ca"
                            ? "Dades d'exemple precarregades"
                            : "Dados de exemplo pré-carregados"
                  }
                </li>
                <li>
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {
                    lang === "es"
                      ? "Todas las funcionalidades"
                      : lang === "en"
                        ? "All features included"
                        : lang === "fr"
                          ? "Toutes les fonctionnalités"
                          : lang === "ca"
                            ? "Totes les funcionalitats"
                            : "Todas as funcionalidades"
                  }
                </li>
                <li>
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  {
                    lang === "es"
                      ? "Soporte técnico incluido"
                      : lang === "en"
                        ? "Technical support included"
                        : lang === "fr"
                          ? "Support technique inclus"
                          : lang === "ca"
                            ? "Suport tècnic inclòs"
                            : "Suporte técnico incluído"
                  }
                </li>
              </ul>

              <button id="btnPruebaGratis" class="btn-demo">
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <polygon points="5 3 19 12 5 21 5 3"></polygon>
                </svg>
                <span
                  >{
                    lang === "es"
                      ? "Probar ahora"
                      : lang === "en"
                        ? "Try now"
                        : lang === "fr"
                          ? "Essayer maintenant"
                          : lang === "ca"
                            ? "Provar ara"
                            : "Experimentar agora"
                  }</span
                >
              </button>
            </div>

            <!-- Decoración -->
            <div class="demo-decoration">
              <div class="deco-circle"></div>
              <div class="deco-circle"></div>
              <div class="deco-circle"></div>
            </div>
          </div>
        </div>

        <!-- Info adicional -->
        <div class="contact-info">
          <div class="info-item">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <div>
              <strong>{t("contact.info.address")}</strong>
              <p>Montgat, Barcelona, España</p>
            </div>
          </div>
          <div class="info-item">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            <div>
              <strong>{t("contact.info.phone")}</strong>
              <p>+34 933 741 047</p>
            </div>
          </div>
          <div class="info-item">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <div>
              <strong>{t("contact.info.email")}</strong>
              <p>info@raytecno.es</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- FOOTER -->
  <footer class="footer">
    <div class="footer-grid">
      <div class="footer-col">
        <div class="footer-logo">
          <svg class="footer-icon" viewBox="0 0 40 40" fill="none">
            <path
              d="M20 2L37 12V28L20 38L3 28V12L20 2Z"
              fill="url(#grad2)"
              stroke="#fff"
              stroke-width="1"></path>
            <defs>
              <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#667eea"></stop>
                <stop offset="100%" style="stop-color:#764ba2"></stop>
              </linearGradient>
            </defs>
          </svg>
          <h4>RAYGOLD</h4>
        </div>
        <p>{t("footer.description")}</p>
      </div>

      <div class="footer-col">
        <h5>{t("footer.links.product")}</h5>
        <p><a href={modulosPath}>{t("nav.modules")}</a></p>
        <p><a href={preciosPath}>{t("nav.pricing")}</a></p>
        <p><a href={tecnologiaPath}>{t("nav.technology")}</a></p>
      </div>

      <div class="footer-col">
        <h5>{t("footer.links.company")}</h5>
        <p><a href="#">{t("nav.contact")}</a></p>
      </div>

      <div class="footer-col">
        <h5>{t("footer.links.legal")}</h5>
        <p><a href="/privacidad">{t("footer.legal.privacy")}</a></p>
        <p><a href="/terminos">{t("footer.legal.terms")}</a></p>
        <p><a href="/cookies">{t("footer.legal.cookies")}</a></p>
      </div>
    </div>

    <div class="footer-bottom">
      <p>
        © {new Date().getFullYear()} Raytecno BCN SL. {t("footer.copyright")}
      </p>
    </div>
  </footer>

  <!-- MODAL LOGIN/REGISTRO -->
  <div id="authModal" class="auth-modal">
    <div class="auth-modal-content">
      <button class="modal-close" id="closeModal">×</button>

      <div class="auth-tabs">
        <button class="auth-tab active" data-tab="login"
          >{
            lang === "es"
              ? "Iniciar Sesión"
              : lang === "en"
                ? "Login"
                : lang === "fr"
                  ? "Connexion"
                  : lang === "ca"
                    ? "Iniciar Sessió"
                    : "Entrar"
          }</button
        >
        <button class="auth-tab" data-tab="register"
          >{
            lang === "es"
              ? "Crear Cuenta"
              : lang === "en"
                ? "Create Account"
                : lang === "fr"
                  ? "Créer un Compte"
                  : lang === "ca"
                    ? "Crear Compte"
                    : "Criar Conta"
          }</button
        >
      </div>

      <!-- LOGIN FORM -->
      <form id="loginForm" class="auth-form active">
        <div class="form-group">
          <label for="loginUsuario"
            >{
              lang === "es"
                ? "Usuario"
                : lang === "en"
                  ? "Username"
                  : lang === "fr"
                    ? "Utilisateur"
                    : lang === "ca"
                      ? "Usuari"
                      : "Usuário"
            }</label
          >
          <input type="text" id="loginUsuario" name="usuario" required />
        </div>
        <div class="form-group">
          <label for="loginPassword"
            >{
              lang === "es"
                ? "Contraseña"
                : lang === "en"
                  ? "Password"
                  : lang === "fr"
                    ? "Mot de passe"
                    : lang === "ca"
                      ? "Contrasenya"
                      : "Senha"
            }</label
          >
          <input type="password" id="loginPassword" name="password" required />
        </div>
        <div id="loginError" class="error-message"></div>
        <button type="submit" class="btn-auth"
          >{
            lang === "es"
              ? "Entrar"
              : lang === "en"
                ? "Enter"
