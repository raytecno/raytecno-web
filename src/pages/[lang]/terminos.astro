const c = content[lang] || content.es;
---

<Layout title={c.title} description={c.metaDescription} lang={lang}>
  <main class="legal-page">
    <div class="legal-container">
      <h1>{c.title}</h1>
      <p class="last-update">{c.lastUpdate}</p>
      
      {c.sections.map((section) => (
        <section class="legal-section">
          <h2>{section.title}</h2>
          <p set:html={section.text.replace(/\n/g, '<br>')} />
        </section>
      ))}
    </div>
  </main>
</Layout>

<style>
  .legal-page {
    background: linear-gradient(180deg, #0f172a 0%, #020617 100%);
    min-height: 100vh;
    padding: 120px 24px 80px;
  }

  .legal-container {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 8px;
    font-weight: 700;
  }

  .last-update {
    color: #94a3b8;
    font-size: 0.9rem;
    margin-bottom: 48px;
    padding-bottom: 24px;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .legal-section {
    margin-bottom: 40px;
  }

  h2 {
    font-size: 1.15rem;
    color: white;
    margin-bottom: 16px;
    font-weight: 600;
  }

  .legal-section p {
    color: #cbd5e1;
    font-size: 0.95rem;
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .legal-page {
      padding: 100px 20px 60px;
    }
    h1 { font-size: 1.75rem; }
    h2 { font-size: 1.05rem; }
  }
</style>
