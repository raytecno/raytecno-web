    padding: 10px 18px;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 1px;
    color: #334155;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #1e3a5f;
    background: rgba(30, 58, 95, 0.08);
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #1e3a5f;
  }

  /* ================================
     HERO
     ================================ */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
