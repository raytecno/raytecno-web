---
import Layout from "../layouts/Layout.astro";
import { getPageBySlug } from "../wordpress.js";
import { getProductImageUrl } from "../config.js";

// Obtener contenido de WordPress (incluye imagen destacada)
const page = await getPageBySlug("inicio");

// Usar imagen de WordPress si existe, sino usar imagen por defecto del Storage
const heroImage =
  page?.featuredImage?.node?.sourceUrl ||
  getProductImageUrl(" HILO-001619-", "2.jpg");

const imageAlt = page?.featuredImage?.node?.altText || "Imagen principal";
---

<Layout title={page?.title || "Raytecno"}>
  <main class="card">
    <!-- Header con imagen -->
    <div class="hero">
      <img src={heroImage} alt={imageAlt} />
      <div class="hero-overlay">
        <h1>{page?.title || "Bienvenido"}</h1>
      </div>
    </div>

    <!-- Contenido de WordPress -->
    <div class="content">
      {
        page ? (
          <div class="wp-content" set:html={page.content} />
        ) : (
          <p class="error">‚ö†Ô∏è No se pudo cargar el contenido de WordPress.</p>
        )
      }
    </div>

    <!-- Footer con info -->
    <footer class="footer">
      <div class="source-info">
        <span class="badge wp">üìù Texto: WordPress</span>
        <span class="badge storage"
          >üñºÔ∏è Imagen: {
            page?.featuredImage ? "WordPress" : "Azure Storage"
          }</span
        >
      </div>
    </footer>
  </main>
</Layout>

<style>
  .card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .hero {
    position: relative;
    height: 300px;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px 30px 30px;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  }

  .hero-overlay h1 {
    color: white;
    font-size: 2rem;
    font-weight: 700;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .content {
    padding: 30px;
  }

  .wp-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #334155;
  }

  .wp-content :global(p) {
    margin-bottom: 1em;
  }

  .wp-content :global(h2),
  .wp-content :global(h3),
  .wp-content :global(strong) {
    font-size: 1.3rem;
    margin: 1.5em 0 0.5em;
    color: #1e293b;
  }

  .error {
    padding: 20px;
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 10px;
    color: #991b1b;
    text-align: center;
  }

  .footer {
    padding: 20px 30px;
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
  }

  .source-info {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .badge {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .badge.wp {
    background: #dbeafe;
    color: #1e40af;
  }

  .badge.storage {
    background: #d1fae5;
    color: #065f46;
  }

  @media (max-width: 600px) {
    .hero {
      height: 200px;
    }
    .hero-overlay h1 {
      font-size: 1.5rem;
    }
    .content {
      padding: 20px;
    }
  }
</style>
