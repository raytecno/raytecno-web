<style>
  :root {
    --primary: #667eea;
    --dark: #1a202c;
    --gray: #64748b;
    --light: #f8fafc;
  }

  /* HEADER */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
