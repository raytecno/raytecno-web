---
// src/pages/modulos/maestros.astro
// LEE DATOS DESDE WORDPRESS
import Layout from "../../layouts/Layout.astro";
import { getModuloBySlug } from "../../wordpress.js";

// Obtener datos del módulo desde WordPress
const modulo = await getModuloBySlug("maestros");

// Valores por defecto si no hay datos de WordPress
