    nombre: "Fases",
    descripcion: "Control de fases productivas",
    imagenes: [
      {
        url: `${blobBaseUrl}/FAS01.png`,
        titulo: "Fases de Producción",
        descripcion: "Definición del proceso productivo",
      },
      {
        url: `${blobBaseUrl}/FAS02.png`,
        titulo: "Tiempos",
        descripcion: "Control de tiempos por fase",
