<style>
  .tech-page {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    background: linear-gradient(180deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
    min-height: 100vh;
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Back link */
  .back-link {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: all 0.2s ease;
    z-index: 10;
  }

  .back-link:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Header */
  .page-header {
    padding: 3rem 1.5rem 2rem;
    text-align: center;
  }

  .header-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    font-size: 0.8rem;
    color: #94a3b8;
    backdrop-filter: blur(10px);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .page-header h1 {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.75rem;
  }

  .page-header h1 span {
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-header p {
    font-size: 1.1rem;
    color: #94a3b8;
    margin: 0;
  }

  /* Diagrama */
  .diagram-section {
    padding: 0 1.5rem 2rem;
  }

  .diagram {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .diagram-title {
    text-align: center;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #667eea;
    margin-bottom: 1.5rem;
  }

  /* Grid de arquitectura */
  .arch-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  /* Nodos */
  .node {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .node:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
  }

  .node-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .node-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  .node-title {
    font-size: 1rem;
    font-weight: 600;
    color: white;
  }

  .node-subtitle {
    font-size: 0.75rem;
    color: #94a3b8;
  }

  .node-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    padding: 0.25rem 0.625rem;
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 500;
  }

  /* Colores por tipo */
  .node-frontend .node-icon {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
  }
  .node-frontend .tag {
    background: rgba(16, 185, 129, 0.2);
    color: #34d399;
    border: 1px solid rgba(16, 185, 129, 0.3);
  }
  .node-frontend:hover {
    border-color: #10b981;
    background: rgba(16, 185, 129, 0.1);
  }

  .node-backend .node-icon {
    background: linear-gradient(135deg, #6366f1, #4f46e5);
    color: white;
  }
  .node-backend .tag {
    background: rgba(99, 102, 241, 0.2);
    color: #a5b4fc;
    border: 1px solid rgba(99, 102, 241, 0.3);
  }
  .node-backend:hover {
    border-color: #6366f1;
    background: rgba(99, 102, 241, 0.1);
  }

  .node-web .node-icon {
    background: linear-gradient(135deg, #f97316, #ea580c);
    color: white;
  }
  .node-web .tag {
    background: rgba(249, 115, 22, 0.2);
    color: #fdba74;
    border: 1px solid rgba(249, 115, 22, 0.3);
  }
  .node-web:hover {
    border-color: #f97316;
    background: rgba(249, 115, 22, 0.1);
  }

  .node-data .node-icon {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
    color: white;
  }
  .node-data .tag {
    background: rgba(139, 92, 246, 0.2);
    color: #c4b5fd;
    border: 1px solid rgba(139, 92, 246, 0.3);
  }
  .node-data:hover {
    border-color: #8b5cf6;
    background: rgba(139, 92, 246, 0.1);
  }

  .node-storage .node-icon {
    background: linear-gradient(135deg, #14b8a6, #0d9488);
    color: white;
  }
  .node-storage .tag {
    background: rgba(20, 184, 166, 0.2);
    color: #5eead4;
    border: 1px solid rgba(20, 184, 166, 0.3);
  }
  .node-storage:hover {
    border-color: #14b8a6;
    background: rgba(20, 184, 166, 0.1);
  }

  /* AI Node - Claude */
  .node-ai {
    grid-column: 1 / 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(217, 119, 87, 0.15) 0%,
