        color: white;
      }
      .node-storage .tag {
        background: #f0fdfa;
        color: #0d9488;
      }
      .node-storage:hover {
        border-color: #14b8a6;
      }

      /* Cloud node */
      .node-cloud {
        grid-column: 1 / 4;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        border-color: #93c5fd;
        padding: 1rem 1.5rem;
      }

      .node-cloud .node-header {
        justify-content: center;
        margin-bottom: 0.5rem;
      }

      .node-cloud .services {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        justify-content: center;
      }

      .service {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
      }

      .service-icon {
        width: 38px;
        height: 38px;
        border-radius: 8px;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
      }

      .service-name {
        font-size: 0.65rem;
        font-weight: 500;
        color: #64748b;
      }

      /* Base de datos y Storage */
      .node-data {
        grid-column: 1 / 2;
      }

      .node-storage {
        grid-column: 2 / 4;
      }

      /* Tech logos footer */
      .tech-footer {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 1.5rem;
        padding-top: 1.25rem;
        border-top: 1px solid #e2e8f0;
      }

      .tech-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.375rem;
      }

      .tech-logo {
        width: 44px;
        height: 44px;
