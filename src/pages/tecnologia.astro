    width: 52px;
    height: 52px;
  }

  .node-ai:hover {
    border-color: #d97757;
    background: linear-gradient(
      135deg,
      rgba(217, 119, 87, 0.25) 0%,
      rgba(191, 90, 60, 0.25) 100%
    );
  }

  .node-ai .node-header {
    justify-content: center;
    margin-bottom: 0.75rem;
  }

  .ai-features {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .ai-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(217, 119, 87, 0.2);
    border: 1px solid rgba(217, 119, 87, 0.3);
    border-radius: 8px;
    font-size: 0.8rem;
    color: #f5d0c5;
  }

  .ai-feature-icon {
    font-size: 1rem;
  }

  /* Cloud node */
  .node-cloud {
    grid-column: 1 / 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(14, 165, 233, 0.15) 0%,
      rgba(2, 132, 199, 0.15) 100%
    );
    border: 1px solid rgba(14, 165, 233, 0.3);
    padding: 1.25rem 1.5rem;
  }

  .node-cloud .node-icon {
    background: linear-gradient(135deg, #0ea5e9, #0284c7);
    width: 52px;
    height: 52px;
  }

  .node-cloud:hover {
    border-color: #0ea5e9;
    background: linear-gradient(
      135deg,
      rgba(14, 165, 233, 0.25) 0%,
      rgba(2, 132, 199, 0.25) 100%
    );
  }

  .node-cloud .node-header {
    justify-content: center;
    margin-bottom: 0.75rem;
  }

  .services {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .service {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.375rem;
  }

  .service-icon {
    width: 42px;
    height: 42px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
  }

  .service-name {
    font-size: 0.65rem;
    font-weight: 500;
    color: #94a3b8;
  }

  /* Base de datos y Storage */
  .node-data {
    grid-column: 1 / 2;
  }

  .node-storage {
    grid-column: 2 / 4;
  }

  /* Flecha de conexi√≥n */
  .connection-arrow {
    grid-column: 1 / 4;
    display: flex;
    justify-content: center;
    padding: 0.5rem 0;
  }

  .arrow-down {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    color: #667eea;
  }

  .arrow-line {
    width: 2px;
    height: 20px;
    background: linear-gradient(180deg, #667eea, #764ba2);
    border-radius: 2px;
  }

  .arrow-head {
    font-size: 1.25rem;
  }

  /* RayGold Result */
  .node-result {
    grid-column: 1 / 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.2) 0%,
      rgba(118, 75, 162, 0.2) 100%
    );
    border: 2px solid rgba(102, 126, 234, 0.5);
    padding: 1.5rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .node-result::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.1) 0%,
      rgba(118, 75, 162, 0.1) 100%
    );
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%,
    100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
    }
  }

  .node-result .node-icon {
    background: linear-gradient(135deg, #667eea, #764ba2);
    width: 64px;
    height: 64px;
    font-size: 1.75rem;
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
    position: relative;
    z-index: 1;
  }

  .node-result .node-header {
    justify-content: center;
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .node-result .node-title {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #667eea, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .node-result .node-subtitle {
    font-size: 0.9rem;
    color: #c4b5fd;
  }

  .result-features {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.75rem;
    position: relative;
    z-index: 1;
  }

  .result-feature {
    display: flex;
