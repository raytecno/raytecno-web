    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        /* Degradado de fondo p√∫rpura/azul suave */
        background: linear-gradient(
          180deg,
          #f1f5f9 0%,
          #e0e7ff 20%,
          #ddd6fe 40%,
          #c7d2fe 60%,
          #e0e7ff 80%,
          #f1f5f9 100%
        );
        min-height: 100vh;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      /* Header compacto */
      .page-header {
        padding: 2rem 1.5rem 1.5rem;
        text-align: center;
      }

      .header-content {
        max-width: 600px;
        margin: 0 auto;
      }

      .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.875rem;
        background: white;
        border-radius: 100px;
        font-size: 0.75rem;
        color: #64748b;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        margin-bottom: 1rem;
      }

      .badge-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #22c55e;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }

      .page-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #0f172a;
        margin: 0 0 0.5rem;
      }

      .page-header h1 span {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .page-header p {
        font-size: 1rem;
        color: #64748b;
        margin: 0;
      }

      /* Diagrama */
      .diagram-section {
        padding: 0 1.5rem 1.5rem;
      }

      .diagram {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        box-shadow:
          0 4px 24px rgba(99, 102, 241, 0.1),
          0 1px 3px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.8);
      }

      .diagram-title {
        text-align: center;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #8b5cf6;
        margin-bottom: 1.25rem;
      }

      /* Grid de arquitectura */
      .arch-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
      }

      /* Nodos */
      .node {
        background: white;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
      }

      .node:hover {
        border-color: transparent;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
      }

      .node-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
      }

      .node-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
      }

      .node-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
      }

      .node-subtitle {
        font-size: 0.75rem;
        color: #94a3b8;
      }

      .node-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.375rem;
      }

      .tag {
        padding: 0.25rem 0.625rem;
        border-radius: 5px;
        font-size: 0.7rem;
        font-weight: 500;
      }

      /* Colores por tipo */
      .node-frontend .node-icon {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
      }
      .node-frontend .tag {
        background: #ecfdf5;
        color: #059669;
      }
      .node-frontend:hover {
        border-color: #10b981;
      }

      .node-backend .node-icon {
        background: linear-gradient(135deg, #6366f1, #4f46e5);
        color: white;
      }
      .node-backend .tag {
        background: #eef2ff;
        color: #4f46e5;
      }
      .node-backend:hover {
        border-color: #6366f1;
      }

      .node-web .node-icon {
        background: linear-gradient(135deg, #f97316, #ea580c);
        color: white;
      }
      .node-web .tag {
        background: #fff7ed;
        color: #ea580c;
      }
      .node-web:hover {
        border-color: #f97316;
      }

      .node-cloud .node-icon {
        background: linear-gradient(135deg, #0ea5e9, #0284c7);
        color: white;
      }
      .node-cloud:hover {
        border-color: #0ea5e9;
      }

      .node-data .node-icon {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
      }
      .node-data .tag {
        background: #f5f3ff;
        color: #7c3aed;
      }
      .node-data:hover {
        border-color: #8b5cf6;
      }

      .node-storage .node-icon {
