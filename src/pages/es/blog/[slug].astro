---
/**
 * Blog - Artículo Individual (Fondo Blanco)
 * @file src/pages/es/blog/[slug].astro
 */
import Layout from "@/layouts/Layout.astro";
import { getBlogPostBySlug, getAllBlogSlugs, getRelatedPosts, getFeaturedImageUrl, calculateReadingTime } from "@/lib/blog.js";

const lang = 'es';

const t = {
  home: 'Inicio',
  blog: 'Blog',
  share: 'Compartir',
  minRead: 'min de lectura',
  publishedOn: 'Publicado el',
  relatedPosts: 'También te puede interesar',
  backToBlog: '← Volver al blog',
  ctaTitle: '¿Listo para optimizar tu negocio?',
  ctaText: 'Descubre cómo RayGold puede transformar la gestión de tu joyería.',
  ctaButton: 'Solicitar Demo'
};

export async function getStaticPaths() {
  const slugs = await getAllBlogSlugs();
  return slugs
    .filter(item => item.lang === 'es')
    .map(item => ({ params: { slug: item.slug } }));
}

const { slug } = Astro.params;
const post = await getBlogPostBySlug(slug, lang);

if (!post) {
  return Astro.redirect(`/${lang}/blog`);
}

const categorySlug = post.blogCategories?.nodes?.[0]?.slug;
const relatedPosts = categorySlug 
  ? await getRelatedPosts(slug, categorySlug, lang, 3) 
  : [];

const featuredImage = getFeaturedImageUrl(post);
const readingTime = post.blogSeo?.readingTime || calculateReadingTime(post.content);

function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}

const seoTitle = post.blogSeo?.seoTitle || post.title;
const seoDescription = post.blogSeo?.seoDescription || post.excerpt?.replace(/<[^>]*>/g, '').slice(0, 160);
const currentUrl = `https://raygold.es/${lang}/blog/${slug}`;

const alternateUrls = [
  { lang: 'es', url: `/es/blog/${slug}` },
];
---

<Layout 
  title={`${seoTitle} | RayGold`}
  description={seoDescription}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <article class="article-page">
    <!-- Header del artículo -->
    <header class="article-header">
      <div class="container">
        <nav class="breadcrumb">
          <a href={`/${lang}`}>{t.home}</a>
          <span>/</span>
          <a href={`/${lang}/blog`}>{t.blog}</a>
        </nav>

        {post.blogCategories?.nodes?.[0] && (
          <span class="category">{post.blogCategories.nodes[0].name}</span>
        )}

        <h1>{post.title}</h1>

        <div class="meta">
          <time datetime={post.date}>{formatDate(post.date)}</time>
          <span class="dot">·</span>
          <span>{readingTime} {t.minRead}</span>
        </div>
      </div>
    </header>

    <!-- Imagen destacada -->
    {featuredImage && (
      <figure class="featured-image">
        <div class="container-wide">
          <img src={featuredImage} alt={post.title} />
        </div>
      </figure>
    )}

    <!-- Contenido del artículo -->
    <div class="article-content">
      <div class="container-narrow">
        <div class="content" set:html={post.content} />

        <!-- Tags -->
        {post.blogTags?.nodes?.length > 0 && (
          <div class="tags">
            {post.blogTags.nodes.map(tag => (
              <span class="tag">{tag.name}</span>
            ))}
          </div>
        )}

        <!-- Compartir -->
        <div class="share">
          <span class="share-label">{t.share}</span>
          <div class="share-buttons">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(currentUrl)}`}
              target="_blank"
              rel="noopener"
              class="share-btn"
              aria-label="Twitter"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`}
              target="_blank"
              rel="noopener"
              class="share-btn"
              aria-label="LinkedIn"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <button class="share-btn copy-link" data-url={currentUrl} aria-label="Copiar enlace">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    {post.blogSeo?.ctaEnabled && (
      <section class="cta-section">
        <div class="container-narrow">
          <div class="cta-box">
            <h3>{t.ctaTitle}</h3>
            <p>{t.ctaText}</p>
            <a href={`/${lang}/contacto`} class="cta-btn">{t.ctaButton}</a>
          </div>
        </div>
      </section>
    )}

    <!-- Posts relacionados -->
    {relatedPosts.length > 0 && (
      <section class="related-section">
        <div class="container">
          <h2>{t.relatedPosts}</h2>
          <div class="related-grid">
            {relatedPosts.map(related => (
              <a href={`/${lang}/blog/${related.slug}`} class="related-card">
                {getFeaturedImageUrl(related) && (
                  <div class="related-image">
                    <img src={getFeaturedImageUrl(related)} alt={related.title} loading="lazy" />
                  </div>
                )}
                <div class="related-body">
                  <h3>{related.title}</h3>
                  <span class="related-date">{formatDate(related.date)}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Volver -->
    <nav class="back-link">
      <div class="container">
        <a href={`/${lang}/blog`}>{t.backToBlog}</a>
      </div>
    </nav>
  </article>
</Layout>

<style>
  /* Variables */
  .article-page {
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --blue-dark: #0f172a;
    --white: #ffffff;
    --gray-50: #f8fafc;
    --gray-100: #f1f5f9;
    --gray-200: #e2e8f0;
    --gray-300: #cbd5e1;
    --gray-400: #94a3b8;
    --gray-500: #64748b;
    --gray-600: #475569;
    --gray-700: #334155;
    --gray-900: #0f172a;
    
    background: var(--white);
  }

  .container {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .container-narrow {
    max-width: 740px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .container-wide {
    max-width: 940px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ========== HEADER ========== */
  .article-header {
    background: var(--white);
    padding: 4rem 0 3rem;
    text-align: center;
  }

  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--gray-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--gold);
  }

  .breadcrumb span {
    color: var(--gray-300);
  }

  .category {
    display: inline-block;
    color: var(--gold);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .article-header h1 {
    font-size: 2.75rem;
    font-weight: 700;
    color: var(--gray-900);
    line-height: 1.2;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: var(--gray-500);
  }

  .dot {
    color: var(--gray-300);
  }

  /* ========== IMAGEN DESTACADA ========== */
  .featured-image {
    margin: 0 0 3rem;
    background: var(--white);
  }

  .featured-image img {
    width: 100%;
    border-radius: 20px;
    aspect-ratio: 21/9;
    object-fit: cover;
  }

  /* ========== CONTENIDO ========== */
  .article-content {
    background: var(--white);
    padding-bottom: 3rem;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.85;
    color: var(--gray-600);
  }

  .content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--gray-900);
    margin: 3rem 0 1.25rem;
    letter-spacing: -0.02em;
  }

  .content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--gray-900);
    margin: 2.5rem 0 1rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(strong) {
    color: var(--gray-900);
    font-weight: 600;
  }

  .content :global(a) {
    color: var(--gold);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }

  .content :global(a:hover) {
    color: var(--gold-dark);
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--gold);
    padding: 1rem 0 1rem 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--gray-700);
    background: var(--gray-50);
    border-radius: 0 8px 8px 0;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 2rem auto;
    display: block;
  }

  .content :global(pre) {
    background: var(--gray-900);
    color: var(--gray-100);
    padding: 1.5rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 2rem 0;
    font-size: 0.9rem;
  }

  .content :global(code) {
    background: var(--gray-100);
    color: var(--gray-700);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--gray-200);
  }

  .tag {
    background: var(--gray-100);
    color: var(--gray-600);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  /* Share */
  .share {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--gray-200);
  }

  .share-label {
    font-size: 0.9rem;
    color: var(--gray-500);
    font-weight: 500;
  }

  .share-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .share-btn {
    width: 42px;
    height: 42px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: var(--gray-100);
    color: var(--gray-600);
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .share-btn:hover {
    background: var(--gray-900);
    color: var(--white);
  }

  /* ========== CTA ========== */
  .cta-section {
    background: var(--white);
    padding: 2rem 0 4rem;
  }

  .cta-box {
    background: var(--blue-dark);
    color: var(--white);
    padding: 3rem;
    border-radius: 20px;
    text-align: center;
  }

  .cta-box h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .cta-box p {
    color: var(--gray-400);
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .cta-btn {
    display: inline-block;
    background: var(--gold);
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.2s;
  }

  .cta-btn:hover {
    background: var(--gold-dark);
    transform: translateY(-2px);
  }

  /* ========== RELATED ========== */
  .related-section {
    background: var(--gray-50);
    padding: 4rem 0;
  }

  .related-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 2rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .related-card {
    text-decoration: none;
  }

  .related-image {
    aspect-ratio: 4/3;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .related-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .related-card:hover .related-image img {
    transform: scale(1.05);
  }

  .related-body h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .related-card:hover .related-body h3 {
    color: var(--gold);
  }

  .related-date {
    font-size: 0.8rem;
    color: var(--gray-400);
  }

  /* ========== BACK LINK ========== */
  .back-link {
    background: var(--white);
    padding: 3rem 0;
    text-align: center;
  }

  .back-link a {
    color: var(--gray-500);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link a:hover {
    color: var(--gold);
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 2rem;
    }

    .featured-image img {
      border-radius: 0;
      aspect-ratio: 16/9;
    }

    .content {
      font-size: 1rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cta-box {
      padding: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.querySelector('.copy-link');
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const url = copyBtn.getAttribute('data-url');
        try {
          await navigator.clipboard.writeText(url);
          copyBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          setTimeout(() => {
            copyBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>';
          }, 2000);
        } catch (err) {
          console.error('Error:', err);
        }
      });
    }
  });
</script>
