---
/**
 * Blog - Artículo Individual Minimalista
 * @file src/pages/es/blog/[slug].astro
 */
import Layout from "@/layouts/Layout.astro";
import { getBlogPostBySlug, getAllBlogSlugs, getRelatedPosts, getFeaturedImageUrl, calculateReadingTime } from "@/lib/blog.js";

const lang = 'es';

const t = {
  home: 'Inicio',
  blog: 'Blog',
  share: 'Compartir',
  minRead: 'min de lectura',
  publishedOn: 'Publicado el',
  relatedPosts: 'También te puede interesar',
  backToBlog: '← Volver al blog',
  ctaTitle: '¿Listo para optimizar tu negocio?',
  ctaText: 'Descubre cómo RayGold puede transformar la gestión de tu joyería.',
  ctaButton: 'Solicitar Demo'
};

export async function getStaticPaths() {
  const slugs = await getAllBlogSlugs();
  return slugs
    .filter(item => item.lang === 'es')
    .map(item => ({ params: { slug: item.slug } }));
}

const { slug } = Astro.params;
const post = await getBlogPostBySlug(slug, lang);

if (!post) {
  return Astro.redirect(`/${lang}/blog`);
}

const categorySlug = post.blogCategories?.nodes?.[0]?.slug;
const relatedPosts = categorySlug 
  ? await getRelatedPosts(slug, categorySlug, lang, 3) 
  : [];

const featuredImage = getFeaturedImageUrl(post);
const readingTime = post.blogSeo?.readingTime || calculateReadingTime(post.content);

function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}

const seoTitle = post.blogSeo?.seoTitle || post.title;
const seoDescription = post.blogSeo?.seoDescription || post.excerpt?.replace(/<[^>]*>/g, '').slice(0, 160);
const currentUrl = `https://raygold.es/${lang}/blog/${slug}`;

const alternateUrls = [
  { lang: 'es', url: `/es/blog/${slug}` },
];
---

<Layout 
  title={`${seoTitle} | RayGold`}
  description={seoDescription}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <article class="article">
    <!-- Header -->
    <header class="article-header">
      <div class="container">
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
          <a href={`/${lang}`}>{t.home}</a>
          <span>/</span>
          <a href={`/${lang}/blog`}>{t.blog}</a>
        </nav>

        <!-- Category -->
        {post.blogCategories?.nodes?.[0] && (
          <span class="category">{post.blogCategories.nodes[0].name}</span>
        )}

        <!-- Title -->
        <h1>{post.title}</h1>

        <!-- Meta -->
        <div class="meta">
          <time datetime={post.date}>
            {t.publishedOn} {formatDate(post.date)}
          </time>
          <span class="dot">·</span>
          <span>{readingTime} {t.minRead}</span>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {featuredImage && (
      <figure class="featured-image">
        <div class="container-wide">
          <img src={featuredImage} alt={post.title} />
        </div>
      </figure>
    )}

    <!-- Content -->
    <div class="article-body">
      <div class="container-narrow">
        <div class="content" set:html={post.content} />

        <!-- Tags -->
        {post.blogTags?.nodes?.length > 0 && (
          <div class="tags">
            {post.blogTags.nodes.map(tag => (
              <span class="tag">{tag.name}</span>
            ))}
          </div>
        )}

        <!-- Share -->
        <div class="share">
          <span>{t.share}</span>
          <div class="share-buttons">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(currentUrl)}`}
              target="_blank"
              rel="noopener"
              aria-label="Compartir en Twitter"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`}
              target="_blank"
              rel="noopener"
              aria-label="Compartir en LinkedIn"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <button 
              class="copy-link"
              data-url={currentUrl}
              aria-label="Copiar enlace"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    {post.blogSeo?.ctaEnabled && (
      <section class="cta">
        <div class="container-narrow">
          <div class="cta-box">
            <h3>{t.ctaTitle}</h3>
            <p>{t.ctaText}</p>
            <a href={`/${lang}/contacto`} class="cta-btn">{t.ctaButton}</a>
          </div>
        </div>
      </section>
    )}

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="related">
        <div class="container">
          <h2>{t.relatedPosts}</h2>
          <div class="related-grid">
            {relatedPosts.map(related => (
              <a href={`/${lang}/blog/${related.slug}`} class="related-card">
                {getFeaturedImageUrl(related) && (
                  <div class="related-image">
                    <img src={getFeaturedImageUrl(related)} alt={related.title} loading="lazy" />
                  </div>
                )}
                <div class="related-body">
                  <h3>{related.title}</h3>
                  <span class="related-meta">{formatDate(related.date)}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Back Link -->
    <nav class="back-nav">
      <div class="container">
        <a href={`/${lang}/blog`}>{t.backToBlog}</a>
      </div>
    </nav>
  </article>
</Layout>

<style>
  .article {
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --text: #111;
    --text-muted: #555;
    --text-light: #888;
    --bg: #fff;
    --bg-alt: #fafafa;
    --border: #eee;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .container-narrow {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .container-wide {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .article-header {
    padding: 4rem 0 3rem;
    text-align: center;
  }

  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    margin-bottom: 2rem;
  }

  .breadcrumb a {
    color: var(--text-light);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--gold);
  }

  .breadcrumb span {
    color: var(--border);
  }

  .category {
    display: inline-block;
    color: var(--gold);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 1rem;
  }

  .article-header h1 {
    font-size: 2.75rem;
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-light);
  }

  .dot {
    opacity: 0.5;
  }

  /* Featured Image */
  .featured-image {
    margin: 0 0 3rem;
  }

  .featured-image img {
    width: 100%;
    border-radius: 16px;
    aspect-ratio: 21/9;
    object-fit: cover;
  }

  /* Content */
  .article-body {
    padding-bottom: 3rem;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-muted);
  }

  .content :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text);
    margin: 3rem 0 1.25rem;
    letter-spacing: -0.02em;
  }

  .content :global(h3) {
    font-size: 1.35rem;
    font-weight: 600;
    color: var(--text);
    margin: 2.5rem 0 1rem;
    letter-spacing: -0.01em;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(strong) {
    color: var(--text);
    font-weight: 600;
  }

  .content :global(a) {
    color: var(--gold);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(a:hover) {
    color: var(--gold-dark);
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--gold);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text);
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 2rem 0;
  }

  .content :global(pre) {
    background: var(--bg-alt);
    padding: 1.5rem;
    border-radius: 12px;
    overflow-x: auto;
    margin: 2rem 0;
    font-size: 0.9rem;
  }

  .content :global(code) {
    background: var(--bg-alt);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .tag {
    background: var(--bg-alt);
    color: var(--text-muted);
    padding: 0.4rem 0.9rem;
    border-radius: 100px;
    font-size: 0.8rem;
  }

  /* Share */
  .share {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .share > span {
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .share-buttons {
    display: flex;
    gap: 0.75rem;
  }

  .share-buttons a,
  .share-buttons button {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: var(--bg-alt);
    color: var(--text-muted);
    border: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .share-buttons a:hover,
  .share-buttons button:hover {
    background: var(--text);
    color: white;
  }

  /* CTA */
  .cta {
    padding: 3rem 0;
  }

  .cta-box {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    color: white;
    padding: 3rem;
    border-radius: 16px;
    text-align: center;
  }

  .cta-box h3 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .cta-box p {
    color: rgba(255,255,255,0.75);
    margin-bottom: 1.5rem;
  }

  .cta-btn {
    display: inline-block;
    background: var(--gold);
    color: white;
    padding: 0.9rem 2rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .cta-btn:hover {
    background: var(--gold-dark);
    transform: translateY(-2px);
  }

  /* Related Posts */
  .related {
    padding: 4rem 0;
    background: var(--bg-alt);
  }

  .related h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .related-card {
    text-decoration: none;
  }

  .related-image {
    aspect-ratio: 4/3;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .related-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .related-card:hover .related-image img {
    transform: scale(1.05);
  }

  .related-body h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.5rem;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .related-card:hover .related-body h3 {
    color: var(--gold);
  }

  .related-meta {
    font-size: 0.8rem;
    color: var(--text-light);
  }

  /* Back Nav */
  .back-nav {
    padding: 3rem 0;
    text-align: center;
  }

  .back-nav a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .back-nav a:hover {
    color: var(--gold);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 2rem;
    }

    .featured-image img {
      border-radius: 0;
      aspect-ratio: 16/9;
    }

    .related-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cta-box {
      padding: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.querySelector('.copy-link');
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const url = copyBtn.getAttribute('data-url');
        try {
          await navigator.clipboard.writeText(url);
          copyBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          setTimeout(() => {
            copyBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>';
          }, 2000);
        } catch (err) {
          console.error('Error copying:', err);
        }
      });
    }
  });
</script>
