---
/**
 * Blog - Categoría Minimalista
 * @file src/pages/es/blog/categoria/[slug].astro
 */
import Layout from "@/layouts/Layout.astro";
import { getBlogPostsByCategory, getBlogCategories, getFeaturedImageUrl, calculateReadingTime } from "@/lib/blog.js";

const lang = 'es';

const t = {
  blog: 'Blog',
  minRead: 'min',
  noPosts: 'No hay artículos en esta categoría',
  viewAll: 'Ver todos',
  backToBlog: '← Volver al blog'
};

export async function getStaticPaths() {
  const categories = await getBlogCategories();
  return categories.map(cat => ({
    params: { slug: cat.slug },
    props: { category: cat }
  }));
}

const { slug } = Astro.params;
const { category } = Astro.props;

const [posts, categories] = await Promise.all([
  getBlogPostsByCategory(slug, lang),
  getBlogCategories()
]);

function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}

function getReadingTime(post) {
  return post.blogSeo?.readingTime || calculateReadingTime(post.content || post.excerpt);
}

const alternateUrls = [
  { lang: 'es', url: `/es/blog/categoria/${slug}` },
];
---

<Layout 
  title={`${category.name} | Blog | RayGold`}
  description={`Artículos sobre ${category.name.toLowerCase()} en el blog de RayGold.`}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="blog">
    <!-- Header -->
    <header class="blog-header">
      <div class="container">
        <nav class="breadcrumb">
          <a href={`/${lang}/blog`}>{t.blog}</a>
          <span>/</span>
          <span>{category.name}</span>
        </nav>
        <h1>{category.name}</h1>
        <p>{posts.length} {posts.length === 1 ? 'artículo' : 'artículos'}</p>
      </div>
    </header>

    <!-- Filtros -->
    <nav class="blog-nav">
      <div class="container">
        <div class="categories-inline">
          <a href={`/${lang}/blog`}>{t.viewAll}</a>
          {categories.map(cat => (
            <a 
              href={`/${lang}/blog/categoria/${cat.slug}`}
              class={cat.slug === slug ? 'active' : ''}
            >
              {cat.name}
            </a>
          ))}
        </div>
      </div>
    </nav>

    <!-- Grid de Posts -->
    <section class="posts">
      <div class="container">
        {posts.length > 0 ? (
          <div class="posts-grid">
            {posts.map(post => (
              <article class="post-card">
                <a href={`/${lang}/blog/${post.slug}`} class="post-link">
                  {getFeaturedImageUrl(post) ? (
                    <div class="post-image">
                      <img src={getFeaturedImageUrl(post)} alt={post.title} loading="lazy" />
                    </div>
                  ) : (
                    <div class="post-image placeholder">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                      </svg>
                    </div>
                  )}
                  <div class="post-body">
                    <h3>{post.title}</h3>
                    <div class="meta">
                      <time>{formatDate(post.date)}</time>
                      <span class="dot">·</span>
                      <span>{getReadingTime(post)} {t.minRead}</span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="no-posts">
            <p>{t.noPosts}</p>
            <a href={`/${lang}/blog`} class="back-btn">{t.backToBlog}</a>
          </div>
        )}
      </div>
    </section>

    <!-- Back Nav -->
    <nav class="back-nav">
      <div class="container">
        <a href={`/${lang}/blog`}>{t.backToBlog}</a>
      </div>
    </nav>
  </main>
</Layout>

<style>
  .blog {
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --text: #111;
    --text-muted: #666;
    --text-light: #999;
    --bg: #fff;
    --bg-alt: #fafafa;
    --border: #eee;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .blog-header {
    padding: 4rem 0 3rem;
    text-align: center;
    background: var(--bg);
  }

  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: var(--text-light);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--gold);
  }

  .breadcrumb span {
    color: var(--border);
  }

  .blog-header h1 {
    font-size: 3rem;
    font-weight: 300;
    letter-spacing: -0.03em;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .blog-header p {
    font-size: 1rem;
    color: var(--text-light);
  }

  /* Navigation */
  .blog-nav {
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
    position: sticky;
    top: 80px;
    background: var(--bg);
    z-index: 10;
  }

  .categories-inline {
    display: flex;
    justify-content: center;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  .categories-inline a {
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
    color: var(--text-muted);
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.2s;
  }

  .categories-inline a:hover {
    color: var(--text);
    background: var(--bg-alt);
  }

  .categories-inline a.active {
    background: var(--text);
    color: white;
  }

  /* Posts Grid */
  .posts {
    padding: 4rem 0 5rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .post-card {
    background: var(--bg);
  }

  .post-link {
    display: block;
    text-decoration: none;
  }

  .post-image {
    aspect-ratio: 4/3;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
    background: var(--bg-alt);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .post-image.placeholder svg {
    width: 40px;
    height: 40px;
    color: var(--border);
  }

  .post-body h3 {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: var(--text);
    letter-spacing: -0.01em;
    transition: color 0.2s;
  }

  .post-link:hover .post-body h3 {
    color: var(--gold);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: var(--text-light);
  }

  .dot {
    opacity: 0.5;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 0;
  }

  .no-posts p {
    color: var(--text-light);
    margin-bottom: 1.5rem;
  }

  .back-btn {
    display: inline-block;
    background: var(--gold);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: var(--gold-dark);
  }

  /* Back Nav */
  .back-nav {
    padding: 0 0 4rem;
    text-align: center;
  }

  .back-nav a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .back-nav a:hover {
    color: var(--gold);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .blog-header h1 {
      font-size: 2.25rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
