---
/**
 * Blog - Listado Minimalista
 * @file src/pages/es/blog/index.astro
 */
import Layout from "@/layouts/Layout.astro";
import {
  getBlogPosts,
  getFeaturedPosts,
  getFeaturedImageUrl,
  calculateReadingTime,
} from "@/lib/blog.js";

const lang = "es";

const t = {
  title: "Blog",
  metaTitle: "Blog | RayGold ERP para Joyería",
  metaDescription:
    "Artículos sobre gestión de joyería, control de inventario y mejores prácticas del sector.",
  featured: "Destacado",
  latestPosts: "Últimos artículos",
  allPosts: "Todos los artículos",
  categories: "Categorías",
  minRead: "min",
  noPosts: "No hay artículos disponibles",
  searchPlaceholder: "Buscar...",
  viewAll: "Todos",
  ctaTitle: "¿Quieres ver RayGold en acción?",
  ctaButton: "Solicitar Demo",
};

const [posts, featuredPosts] = await Promise.all([
  getBlogPosts(lang),
  getFeaturedPosts(lang, 1),
]);

// Extraer categorías SOLO de los posts del idioma actual
const categoriesMap = new Map();
posts.forEach((post: any) => {
  post.blogCategories?.nodes?.forEach((cat: any) => {
    if (!categoriesMap.has(cat.slug)) {
      categoriesMap.set(cat.slug, { ...cat, count: 1 });
    } else {
      categoriesMap.get(cat.slug).count++;
    }
  });
});
const categories = Array.from(categoriesMap.values());

const alternateUrls = [
  { lang: "es", url: "/es/blog" },
  { lang: "en", url: "/en/blog" },
  { lang: "fr", url: "/fr/blog" },
  { lang: "ca", url: "/ca/blog" },
  { lang: "pt-br", url: "/pt-br/blog" },
];

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString("es-ES", {
    day: "numeric",
    month: "short",
    year: "numeric",
  });
}

function getReadingTime(post: any) {
  return (
    post.blogSeo?.readingTime ||
    calculateReadingTime(post.content || post.excerpt)
  );
}

const regularPosts = posts.filter(
  (p: any) => !featuredPosts.find((f: any) => f.slug === p.slug)
);
---

<Layout
  title={t.metaTitle}
  description={t.metaDescription}
  lang={lang}
  alternateUrls={alternateUrls as any}
>
  <main class="blog-page">
    <!-- Hero con fondo azul oscuro -->
    <section class="hero">
      <div class="container">
        <h1>{t.title}</h1>
        <p>{t.metaDescription}</p>

        <!-- Categorías en el hero -->
        <div class="hero-categories">
          <a href={`/${lang}/blog`} class="cat-pill active">{t.viewAll}</a>
          {
            categories.map((cat: any) => (
              <a href={`/${lang}/blog/categoria/${cat.slug}`} class="cat-pill">
                {cat.name}
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Contenido con fondo blanco -->
    <section class="content-area">
      <!-- Post Destacado -->
      {
        featuredPosts.length > 0 && (
          <div class="container">
            <div class="featured-section">
              <article class="featured-card">
                <a
                  href={`/${lang}/blog/${featuredPosts[0].slug}`}
                  class="featured-link"
                >
                  {getFeaturedImageUrl(featuredPosts[0]) && (
                    <div class="featured-image">
                      <img
                        src={getFeaturedImageUrl(featuredPosts[0])}
                        alt={featuredPosts[0].title}
                      />
                      <span class="badge">{t.featured}</span>
                    </div>
                  )}
                  <div class="featured-body">
                    {featuredPosts[0].blogCategories?.nodes?.[0] && (
                      <span class="category">
                        {featuredPosts[0].blogCategories.nodes[0].name}
                      </span>
                    )}
                    <h2>{featuredPosts[0].title}</h2>
                    <p set:html={featuredPosts[0].excerpt} />
                    <div class="meta">
                      <time>{formatDate(featuredPosts[0].date)}</time>
                      <span>·</span>
                      <span>
                        {getReadingTime(featuredPosts[0])} {t.minRead}
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            </div>
          </div>
        )
      }

      <!-- Grid de Posts -->
      <div class="container">
        <div class="posts-section">
          <div class="section-header">
            <h2>{t.latestPosts}</h2>
            <div class="search-box">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
              <input
                type="search"
                id="blogSearch"
                placeholder={t.searchPlaceholder}
              />
            </div>
          </div>

          {
            regularPosts.length > 0 ? (
              <div class="posts-grid" id="postsGrid">
                {regularPosts.map((post: any) => (
                  <article
                    class="post-card"
                    data-title={post.title.toLowerCase()}
                    data-categories={post.blogCategories?.nodes
                      ?.map((c) => c.slug)
                      .join(" ")}
                  >
                    <a href={`/${lang}/blog/${post.slug}`} class="post-link">
                      {getFeaturedImageUrl(post) ? (
                        <div class="post-image">
                          <img
                            src={getFeaturedImageUrl(post)}
                            alt={post.title}
                            loading="lazy"
                          />
                        </div>
                      ) : (
                        <div class="post-image placeholder">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1"
                          >
                            <rect x="3" y="3" width="18" height="18" rx="2" />
                            <circle cx="8.5" cy="8.5" r="1.5" />
                            <polyline points="21 15 16 10 5 21" />
                          </svg>
                        </div>
                      )}
                      <div class="post-body">
                        {post.blogCategories?.nodes?.[0] && (
                          <span class="category">
                            {post.blogCategories.nodes[0].name}
                          </span>
                        )}
                        <h3>{post.title}</h3>
                        <div class="meta">
                          <time>{formatDate(post.date)}</time>
                          <span>·</span>
                          <span>
                            {getReadingTime(post)} {t.minRead}
                          </span>
                        </div>
                      </div>
                    </a>
                  </article>
                ))}
              </div>
            ) : (
              <p class="no-posts">{t.noPosts}</p>
            )
          }
        </div>
      </div>

      <!-- CTA -->
      <div class="container">
        <div class="cta-section">
          <h3>{t.ctaTitle}</h3>
          <a href={`/${lang}/contacto`} class="cta-btn">{t.ctaButton}</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById("blogSearch");
    const postsGrid = document.getElementById("postsGrid");

    if (searchInput && postsGrid) {
      searchInput.addEventListener("input", (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
        const posts = postsGrid.querySelectorAll(".post-card");

        posts.forEach((post) => {
          const title = post.getAttribute("data-title") || "";
          const categories = post.getAttribute("data-categories") || "";

          if (
            title.includes(query) ||
            categories.includes(query) ||
            query === ""
          ) {
            post.classList.remove("hidden");
          } else {
            post.classList.add("hidden");
          }
        });
      });
    }
  });
</script>

<style>
  /* Variables */
  .blog-page {
    --blue-dark: #0f172a;
    --blue-medium: #1e293b;
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --white: #ffffff;
    --gray-50: #f8fafc;
    --gray-100: #f1f5f9;
    --gray-200: #e2e8f0;
    --gray-400: #94a3b8;
    --gray-500: #64748b;
    --gray-600: #475569;
    --gray-900: #0f172a;
  }

  .container {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ========== HERO - AZUL OSCURO ========== */
  .hero {
    background: linear-gradient(
      135deg,
      var(--blue-dark) 0%,
      var(--blue-medium) 100%
    );
    color: var(--white);
    padding: 5rem 0 4rem;
    text-align: center;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 300;
    letter-spacing: -0.04em;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.1rem;
    color: var(--gray-400);
    max-width: 500px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  .hero-categories {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .cat-pill {
    padding: 0.5rem 1.25rem;
    font-size: 0.85rem;
    color: var(--gray-400);
    text-decoration: none;
    border-radius: 100px;
    border: 1px solid transparent;
    transition: all 0.2s;
  }

  .cat-pill:hover {
    color: var(--white);
    border-color: var(--gray-500);
  }

  .cat-pill.active {
    background: var(--gold);
    color: var(--white);
  }

  /* ========== CONTENIDO - FONDO BLANCO ========== */
  .content-area {
    background: var(--white);
    padding: 4rem 0 5rem;
  }

  /* Featured Post */
  .featured-section {
    margin-bottom: 4rem;
  }

  .featured-card {
    background: var(--white);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.08);
  }

  .featured-link {
    display: grid;
    grid-template-columns: 1fr 1fr;
    text-decoration: none;
    color: inherit;
  }

  .featured-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-link:hover .featured-image img {
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: 1.25rem;
    left: 1.25rem;
    background: var(--gold);
    color: var(--white);
    padding: 0.4rem 1rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-radius: 100px;
  }

  .featured-body {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .featured-body .category {
    color: var(--gold);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 1rem;
  }

  .featured-body h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--gray-900);
    line-height: 1.3;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .featured-link:hover .featured-body h2 {
    color: var(--gold);
  }

  .featured-body p {
    color: var(--gray-500);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--gray-400);
  }

  /* Posts Section */
  .posts-section {
    margin-bottom: 4rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--gray-200);
  }

  .section-header h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--gray-900);
    letter-spacing: -0.02em;
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gray-50);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    border: 1px solid var(--gray-200);
  }

  .search-box svg {
    color: var(--gray-400);
  }

  .search-box input {
    border: none;
    background: transparent;
    font-size: 0.9rem;
    width: 150px;
    color: var(--gray-900);
  }

  .search-box input::placeholder {
    color: var(--gray-400);
  }

  .search-box input:focus {
    outline: none;
    width: 200px;
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .post-card {
    background: var(--white);
  }

  .post-card.hidden {
    display: none;
  }

  .post-link {
    display: block;
    text-decoration: none;
  }

  .post-image {
    aspect-ratio: 4/3;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 1.25rem;
    background: var(--gray-100);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .post-image.placeholder svg {
    width: 40px;
    height: 40px;
    color: var(--gray-200);
  }

  .post-body .category {
    display: inline-block;
    color: var(--gold);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-bottom: 0.5rem;
  }

  .post-body h3 {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: var(--gray-900);
    letter-spacing: -0.01em;
    transition: color 0.2s;
  }

  .post-link:hover .post-body h3 {
    color: var(--gold);
  }

  .post-body .meta {
    font-size: 0.8rem;
  }

  .no-posts {
    text-align: center;
    color: var(--gray-400);
    padding: 4rem;
  }

  /* CTA */
  .cta-section {
    background: var(--blue-dark);
    color: var(--white);
    padding: 3rem;
    border-radius: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cta-section h3 {
    font-size: 1.5rem;
    font-weight: 500;
  }

  .cta-btn {
    background: var(--gold);
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .cta-btn:hover {
    background: var(--gold-dark);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .featured-link {
      grid-template-columns: 1fr;
    }

    .featured-body {
      padding: 2rem;
    }

    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .section-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .search-box {
      width: 100%;
    }

    .search-box input {
      width: 100%;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .cta-section {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
  }
</style>
