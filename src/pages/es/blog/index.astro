---
/**
 * Blog - Listado Minimalista
 * @file src/pages/es/blog/index.astro
 */
import Layout from "@/layouts/Layout.astro";
import {
  getBlogPosts,
  getFeaturedPosts,
  getFeaturedImageUrl,
  calculateReadingTime,
} from "@/lib/blog.js";

const lang = "es";

const t = {
  title: "Blog",
  metaTitle: "Blog | RayGold ERP para Joyería",
  metaDescription:
    "Artículos sobre gestión de joyería, control de inventario y mejores prácticas del sector.",
  featured: "Destacado",
  latestPosts: "Artículos",
  minRead: "min",
  noPosts: "No hay artículos disponibles",
  searchPlaceholder: "Buscar...",
  viewAll: "Todos",
  ctaTitle: "¿Quieres ver RayGold en acción?",
  ctaButton: "Solicitar Demo",
};

const [posts, featuredPosts] = await Promise.all([
  getBlogPosts(lang),
  getFeaturedPosts(lang, 1),
]);

// Extraer categorías SOLO de los posts del idioma actual
const categoriesMap = new Map();
posts.forEach((post: any) => {
  post.blogCategories?.nodes?.forEach((cat: any) => {
    if (!categoriesMap.has(cat.slug)) {
      categoriesMap.set(cat.slug, { ...cat, count: 1 });
    } else {
      categoriesMap.get(cat.slug).count++;
    }
  });
});
const categories = Array.from(categoriesMap.values());

const alternateUrls = [
  { lang: "es", url: "/es/blog" },
  { lang: "en", url: "/en/blog" },
  { lang: "fr", url: "/fr/blog" },
  { lang: "ca", url: "/ca/blog" },
  { lang: "pt-br", url: "/pt-br/blog" },
];

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString("es-ES", {
    day: "numeric",
    month: "long",
    year: "numeric",
  });
}

function getReadingTime(post: any) {
  return (
    post.blogSeo?.readingTime ||
    calculateReadingTime(post.content || post.excerpt)
  );
}

const regularPosts = posts.filter(
  (p: any) => !featuredPosts.find((f: any) => f.slug === p.slug)
);
---

<Layout
  title={t.metaTitle}
  description={t.metaDescription}
  lang={lang}
  alternateUrls={alternateUrls as any}
>
  <main class="blog-page">
    <!-- Header compacto -->
    <header class="blog-header">
      <div class="container">
        <div class="header-top">
          <div class="title-area">
            <h1>{t.title}</h1>
            <p>{t.metaDescription}</p>
          </div>
          <div class="search-area">
            <div class="search-box">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
              <input
                type="search"
                id="blogSearch"
                placeholder={t.searchPlaceholder}
              />
            </div>
          </div>
        </div>

        <!-- Categorías en línea -->
        <nav class="categories-nav">
          <a href={`/${lang}/blog`} class="cat-link active">{t.viewAll}</a>
          {
            categories.map((cat: any) => (
              <a href={`/${lang}/blog/categoria/${cat.slug}`} class="cat-link">
                {cat.name}
                <span class="count">{cat.count}</span>
              </a>
            ))
          }
        </nav>
      </div>
    </header>

    <!-- Contenido -->
    <section class="blog-content">
      <div class="container">
        <!-- Post Destacado -->
        {
          featuredPosts.length > 0 && (
            <article class="featured-post">
              <a
                href={`/${lang}/blog/${featuredPosts[0].slug}`}
                class="featured-link"
              >
                {getFeaturedImageUrl(featuredPosts[0]) && (
                  <div class="featured-image">
                    <img
                      src={getFeaturedImageUrl(featuredPosts[0])}
                      alt={featuredPosts[0].title}
                    />
                    <span class="featured-badge">{t.featured}</span>
                  </div>
                )}
                <div class="featured-info">
                  {featuredPosts[0].blogCategories?.nodes?.[0] && (
                    <span class="featured-category">
                      {featuredPosts[0].blogCategories.nodes[0].name}
                    </span>
                  )}
                  <h2>{featuredPosts[0].title}</h2>
                  <p set:html={featuredPosts[0].excerpt} />
                  <div class="featured-meta">
                    <time>{formatDate(featuredPosts[0].date)}</time>
                    <span>·</span>
                    <span>
                      {getReadingTime(featuredPosts[0])} {t.minRead}
                    </span>
                  </div>
                </div>
              </a>
            </article>
          )
        }

        <!-- Grid de artículos -->
        <div class="posts-section">
          <h2 class="section-title">{t.latestPosts}</h2>

          {
            regularPosts.length > 0 ? (
              <div class="posts-grid" id="postsGrid">
                {regularPosts.map((post: any) => (
                  <article
                    class="post-card"
                    data-title={post.title.toLowerCase()}
                    data-categories={post.blogCategories?.nodes
                      ?.map((c: any) => c.slug)
                      .join(" ")}
                  >
                    <a href={`/${lang}/blog/${post.slug}`} class="post-link">
                      <div class="post-image">
                        {getFeaturedImageUrl(post) ? (
                          <img
                            src={getFeaturedImageUrl(post)}
                            alt={post.title}
                            loading="lazy"
                          />
                        ) : (
                          <div class="placeholder">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="28"
                              height="28"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="1.5"
                            >
                              <rect x="3" y="3" width="18" height="18" rx="2" />
                              <circle cx="8.5" cy="8.5" r="1.5" />
                              <polyline points="21 15 16 10 5 21" />
                            </svg>
                          </div>
                        )}
                      </div>
                      <div class="post-info">
                        {post.blogCategories?.nodes?.[0] && (
                          <span class="post-category">
                            {post.blogCategories.nodes[0].name}
                          </span>
                        )}
                        <h3>{post.title}</h3>
                        <div class="post-meta">
                          <time>{formatDate(post.date)}</time>
                          <span>·</span>
                          <span>
                            {getReadingTime(post)} {t.minRead}
                          </span>
                        </div>
                      </div>
                    </a>
                  </article>
                ))}
              </div>
            ) : (
              <p class="no-posts">{t.noPosts}</p>
            )
          }
        </div>

        <!-- CTA -->
        <div class="cta-banner">
          <span>{t.ctaTitle}</span>
          <a href={`/${lang}/contacto`}>{t.ctaButton}</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .blog-page {
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --dark: #0f172a;
    --dark-medium: #1e293b;
    --gray-900: #111;
    --gray-600: #525252;
    --gray-500: #6b7280;
    --gray-400: #9ca3af;
    --gray-300: #d1d5db;
    --gray-200: #e5e7eb;
    --gray-100: #f3f4f6;
    --gray-50: #f9fafb;
    --white: #fff;
    background: var(--white);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ===== HEADER ===== */
  .blog-header {
    background: linear-gradient(
      135deg,
      var(--dark) 0%,
      var(--dark-medium) 100%
    );
    color: var(--white);
    padding: 2.5rem 0 2rem;
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }

  .title-area h1 {
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 0 0 0.375rem 0;
  }

  .title-area p {
    font-size: 0.9rem;
    color: var(--gray-400);
    margin: 0;
    max-width: 400px;
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 0.5rem 0.75rem;
    min-width: 200px;
  }

  .search-box svg {
    color: var(--gray-400);
    flex-shrink: 0;
  }

  .search-box input {
    background: transparent;
    border: none;
    color: var(--white);
    font-size: 0.875rem;
    width: 100%;
    outline: none;
  }

  .search-box input::placeholder {
    color: var(--gray-500);
  }

  /* Categorías */
  .categories-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .cat-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--gray-400);
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.15s;
  }

  .cat-link:hover {
    color: var(--white);
    background: rgba(255, 255, 255, 0.08);
  }

  .cat-link.active {
    color: var(--dark);
    background: var(--gold);
  }

  .cat-link .count {
    font-size: 0.6875rem;
    opacity: 0.6;
  }

  .cat-link.active .count {
    opacity: 0.8;
  }

  /* ===== CONTENIDO ===== */
  .blog-content {
    padding: 3rem 0 4rem;
  }

  /* Featured */
  .featured-post {
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--gray-200);
  }

  .featured-link {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: 2.5rem;
    text-decoration: none;
    align-items: center;
  }

  .featured-image {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 16/10;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .featured-link:hover .featured-image img {
    transform: scale(1.03);
  }

  .featured-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--gold);
    color: var(--white);
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.375rem 0.75rem;
    border-radius: 4px;
  }

  .featured-info {
    padding: 0.5rem 0;
  }

  .featured-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gold);
    margin-bottom: 0.75rem;
  }

  .featured-info h2 {
    font-size: 1.625rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--gray-900);
    margin: 0 0 0.75rem 0;
    transition: color 0.2s;
  }

  .featured-link:hover .featured-info h2 {
    color: var(--gold);
  }

  .featured-info p {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--gray-500);
    margin: 0 0 1rem 0;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--gray-400);
  }

  /* Posts Section */
  .posts-section {
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gray-900);
    margin: 0 0 1.5rem 0;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  /* Card */
  .post-card {
    position: relative;
  }

  .post-card.hidden {
    display: none;
  }

  .post-link {
    display: block;
    text-decoration: none;
  }

  .post-image {
    position: relative;
    aspect-ratio: 3/2;
    border-radius: 10px;
    overflow: hidden;
    background: var(--gray-100);
    margin-bottom: 0.875rem;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.03);
  }

  .post-image .placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-300);
  }

  .post-info {
    padding: 0 0.125rem;
  }

  .post-category {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--gold);
    margin-bottom: 0.375rem;
  }

  .post-info h3 {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--gray-900);
    margin: 0 0 0.5rem 0;
    transition: color 0.2s;
  }

  .post-link:hover .post-info h3 {
    color: var(--gold);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--gray-400);
  }

  .no-posts {
    text-align: center;
    color: var(--gray-400);
    padding: 3rem;
  }

  /* CTA */
  .cta-banner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--gray-900);
    color: var(--white);
    padding: 1.25rem 1.5rem;
    border-radius: 10px;
  }

  .cta-banner span {
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .cta-banner a {
    background: var(--gold);
    color: var(--white);
    padding: 0.625rem 1.25rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    transition: background 0.2s;
  }

  .cta-banner a:hover {
    background: var(--gold-dark);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 900px) {
    .featured-link {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .blog-header {
      padding: 2rem 0 1.5rem;
    }

    .header-top {
      flex-direction: column;
      gap: 1rem;
    }

    .search-box {
      width: 100%;
    }

    .title-area h1 {
      font-size: 1.5rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .cta-banner {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById("blogSearch");
    const postsGrid = document.getElementById("postsGrid");

    if (searchInput && postsGrid) {
      searchInput.addEventListener("input", (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
        const posts = postsGrid.querySelectorAll(".post-card");

        posts.forEach((post) => {
          const title = post.getAttribute("data-title") || "";
          const categories = post.getAttribute("data-categories") || "";

          if (
            title.includes(query) ||
            categories.includes(query) ||
            query === ""
          ) {
            post.classList.remove("hidden");
          } else {
            post.classList.add("hidden");
          }
        });
      });
    }
  });
</script>
