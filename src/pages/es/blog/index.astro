---
/**
 * Blog - Listado Minimalista
 * @file src/pages/es/blog/index.astro
 */
import Layout from "@/layouts/Layout.astro";
import { getBlogPosts, getFeaturedPosts, getBlogCategories, getFeaturedImageUrl, calculateReadingTime } from "@/lib/blog.js";

const lang = 'es';

const t = {
  title: 'Blog',
  metaTitle: 'Blog | RayGold ERP para Joyería',
  metaDescription: 'Artículos sobre gestión de joyería, control de inventario y mejores prácticas del sector.',
  featured: 'Destacado',
  latestPosts: 'Últimos artículos',
  allPosts: 'Todos los artículos',
  categories: 'Categorías',
  minRead: 'min',
  noPosts: 'No hay artículos disponibles',
  searchPlaceholder: 'Buscar...',
  viewAll: 'Ver todos',
  ctaTitle: '¿Quieres ver RayGold en acción?',
  ctaButton: 'Solicitar Demo'
};

const [posts, featuredPosts, categories] = await Promise.all([
  getBlogPosts(lang),
  getFeaturedPosts(lang, 1),
  getBlogCategories()
]);

const alternateUrls = [
  { lang: 'es', url: '/es/blog' },
  { lang: 'en', url: '/en/blog' },
  { lang: 'fr', url: '/fr/blog' },
  { lang: 'ca', url: '/ca/blog' },
  { lang: 'pt-br', url: '/pt-br/blog' },
];

function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}

function getReadingTime(post) {
  return post.blogSeo?.readingTime || calculateReadingTime(post.content || post.excerpt);
}

// Obtener posts no destacados
const regularPosts = posts.filter(p => !featuredPosts.find(f => f.slug === p.slug));
---

<Layout 
  title={t.metaTitle}
  description={t.metaDescription}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="blog">
    <!-- Hero Minimalista -->
    <header class="blog-header">
      <div class="container">
        <h1>{t.title}</h1>
        <p>{t.metaDescription}</p>
      </div>
    </header>

    <!-- Filtros y Búsqueda -->
    <nav class="blog-nav">
      <div class="container">
        <div class="categories-inline">
          <a href={`/${lang}/blog`} class="active">{t.viewAll}</a>
          {categories.map(cat => (
            <a href={`/${lang}/blog/categoria/${cat.slug}`}>{cat.name}</a>
          ))}
        </div>
        <div class="search-inline">
          <input 
            type="search" 
            id="blogSearch" 
            placeholder={t.searchPlaceholder}
          />
        </div>
      </div>
    </nav>

    <!-- Post Destacado -->
    {featuredPosts.length > 0 && (
      <section class="featured">
        <div class="container">
          <article class="featured-post">
            {getFeaturedImageUrl(featuredPosts[0]) && (
              <a href={`/${lang}/blog/${featuredPosts[0].slug}`} class="featured-image">
                <img 
                  src={getFeaturedImageUrl(featuredPosts[0])} 
                  alt={featuredPosts[0].title}
                />
                <span class="badge">{t.featured}</span>
              </a>
            )}
            <div class="featured-content">
              {featuredPosts[0].blogCategories?.nodes?.[0] && (
                <span class="category">
                  {featuredPosts[0].blogCategories.nodes[0].name}
                </span>
              )}
              <h2>
                <a href={`/${lang}/blog/${featuredPosts[0].slug}`}>
                  {featuredPosts[0].title}
                </a>
              </h2>
              <p set:html={featuredPosts[0].excerpt} />
              <div class="meta">
                <time>{formatDate(featuredPosts[0].date)}</time>
                <span class="dot">·</span>
                <span>{getReadingTime(featuredPosts[0])} {t.minRead}</span>
              </div>
            </div>
          </article>
        </div>
      </section>
    )}

    <!-- Grid de Posts -->
    <section class="posts">
      <div class="container">
        <h2 class="section-title">{t.latestPosts}</h2>
        
        {regularPosts.length > 0 ? (
          <div class="posts-grid" id="postsGrid">
            {regularPosts.map(post => (
              <article class="post-card" data-title={post.title.toLowerCase()} data-categories={post.blogCategories?.nodes?.map(c => c.slug).join(' ')}>
                <a href={`/${lang}/blog/${post.slug}`} class="post-link">
                  {getFeaturedImageUrl(post) ? (
                    <div class="post-image">
                      <img src={getFeaturedImageUrl(post)} alt={post.title} loading="lazy" />
                    </div>
                  ) : (
                    <div class="post-image placeholder">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                      </svg>
                    </div>
                  )}
                  <div class="post-body">
                    {post.blogCategories?.nodes?.[0] && (
                      <span class="category">{post.blogCategories.nodes[0].name}</span>
                    )}
                    <h3>{post.title}</h3>
                    <div class="meta">
                      <time>{formatDate(post.date)}</time>
                      <span class="dot">·</span>
                      <span>{getReadingTime(post)} {t.minRead}</span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <p class="no-posts">{t.noPosts}</p>
        )}
      </div>
    </section>

    <!-- CTA Minimalista -->
    <section class="cta">
      <div class="container">
        <div class="cta-box">
          <h3>{t.ctaTitle}</h3>
          <a href={`/${lang}/contacto`} class="cta-btn">{t.ctaButton}</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .blog {
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --text: #111;
    --text-muted: #666;
    --text-light: #999;
    --bg: #fff;
    --bg-alt: #fafafa;
    --border: #eee;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .blog-header {
    padding: 5rem 0 3rem;
    text-align: center;
    background: var(--bg);
  }

  .blog-header h1 {
    font-size: 3.5rem;
    font-weight: 300;
    letter-spacing: -0.03em;
    margin-bottom: 0.75rem;
    color: var(--text);
  }

  .blog-header p {
    font-size: 1.1rem;
    color: var(--text-muted);
    max-width: 500px;
    margin: 0 auto;
    font-weight: 400;
  }

  /* Navigation */
  .blog-nav {
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
    position: sticky;
    top: 80px;
    background: var(--bg);
    z-index: 10;
  }

  .blog-nav .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .categories-inline {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  .categories-inline a {
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
    color: var(--text-muted);
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.2s;
  }

  .categories-inline a:hover {
    color: var(--text);
    background: var(--bg-alt);
  }

  .categories-inline a.active {
    color: var(--text);
    background: var(--text);
    color: white;
  }

  .search-inline input {
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    border: 1px solid var(--border);
    border-radius: 100px;
    width: 200px;
    transition: all 0.2s;
  }

  .search-inline input:focus {
    outline: none;
    border-color: var(--gold);
    width: 250px;
  }

  /* Featured Post */
  .featured {
    padding: 4rem 0;
    background: var(--bg-alt);
  }

  .featured-post {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .featured-image {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 16/10;
    display: block;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-image:hover img {
    transform: scale(1.03);
  }

  .badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--gold);
    color: white;
    padding: 0.35rem 0.85rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 100px;
  }

  .featured-content .category {
    display: inline-block;
    color: var(--gold);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .featured-content h2 {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .featured-content h2 a {
    color: var(--text);
    text-decoration: none;
  }

  .featured-content h2 a:hover {
    color: var(--gold);
  }

  .featured-content p {
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-light);
  }

  .dot {
    opacity: 0.5;
  }

  /* Posts Grid */
  .posts {
    padding: 4rem 0 5rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: var(--text);
    letter-spacing: -0.02em;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .post-card {
    background: var(--bg);
  }

  .post-card.hidden {
    display: none;
  }

  .post-link {
    display: block;
    text-decoration: none;
  }

  .post-image {
    aspect-ratio: 4/3;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1rem;
    background: var(--bg-alt);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .post-image.placeholder svg {
    width: 40px;
    height: 40px;
    color: var(--border);
  }

  .post-body .category {
    display: inline-block;
    color: var(--gold);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .post-body h3 {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: var(--text);
    letter-spacing: -0.01em;
    transition: color 0.2s;
  }

  .post-link:hover .post-body h3 {
    color: var(--gold);
  }

  .post-body .meta {
    font-size: 0.8rem;
  }

  .no-posts {
    text-align: center;
    color: var(--text-light);
    padding: 4rem;
  }

  /* CTA */
  .cta {
    padding: 0 0 5rem;
  }

  .cta-box {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    color: white;
    padding: 3rem;
    border-radius: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cta-box h3 {
    font-size: 1.5rem;
    font-weight: 500;
  }

  .cta-btn {
    background: var(--gold);
    color: white;
    padding: 0.9rem 2rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .cta-btn:hover {
    background: var(--gold-dark);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .featured-post {
      grid-template-columns: 1fr;
    }

    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .blog-header h1 {
      font-size: 2.5rem;
    }

    .blog-nav .container {
      flex-direction: column;
      gap: 1rem;
    }

    .search-inline input {
      width: 100%;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .cta-box {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('blogSearch');
    const postsGrid = document.getElementById('postsGrid');
    
    if (searchInput && postsGrid) {
      searchInput.addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase().trim();
        const posts = postsGrid.querySelectorAll('.post-card');
        
        posts.forEach((post) => {
          const title = post.getAttribute('data-title') || '';
          const categories = post.getAttribute('data-categories') || '';
          
          if (title.includes(query) || categories.includes(query) || query === '') {
            post.classList.remove('hidden');
          } else {
            post.classList.add('hidden');
          }
        });
      });
    }
  });
</script>
