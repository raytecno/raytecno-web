---
import Layout from "../layouts/Layout.astro";
import { imagenesMenu, STORAGE_MENU_URL } from "../data/imagenes-menu.js";

// Filtrar imágenes que NO contengan "Fondo" (por si acaso)
const imagenes = imagenesMenu.filter((img) => !img.includes("Fondo"));
---

<Layout title="Galería - Raytecno">
  <main class="galeria-page">
    <header class="galeria-header">
      <h1>Nuestras Marcas</h1>
      <p>{imagenes.length} productos</p>
    </header>

    <div class="galeria-grid">
      {
        imagenes.map((imagen) => {
          const nombre = imagen.replace(".jpg", "").replace(/-/g, " ");
          const url = STORAGE_MENU_URL + encodeURIComponent(imagen);

          return (
            <div class="galeria-item">
              <img src={url} alt={nombre} loading="lazy" />
              <span class="galeria-nombre">{nombre}</span>
            </div>
          );
        })
      }
    </div>
  </main>
</Layout>

<style>
  .galeria-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  }

  .galeria-header {
    text-align: center;
    padding: 40px 20px;
    color: white;
  }

  .galeria-header h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
  }

  .galeria-header p {
    opacity: 0.7;
  }

  .galeria-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 20px;
    padding: 20px 40px 60px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .galeria-item {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    cursor: pointer;
  }

  .galeria-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .galeria-item img {
    width: 100%;
    height: 120px;
    object-fit: contain;
    background: #f8fafc;
    padding: 10px;
  }

  .galeria-nombre {
    display: block;
    padding: 10px;
    font-size: 0.75rem;
    text-align: center;
    color: #334155;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (max-width: 600px) {
    .galeria-grid {
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      gap: 12px;
      padding: 15px;
    }

    .galeria-item img {
      height: 80px;
    }

    .galeria-nombre {
      font-size: 0.65rem;
      padding: 8px;
    }
  }
</style>
