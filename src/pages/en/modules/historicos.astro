    descripcion: "Histórico de órdenes de fabricación",
    imagenes: [
      {
        url: `${blobBaseUrl}/HIF01.png`,
        titulo: "Histórico Fabricación",
        descripcion: "Órdenes completadas",
      },
      {
        url: `${blobBaseUrl}/HIF02.png`,
        titulo: "Tiempos",
        descripcion: "Análisis de tiempos",
      },
      {
        url: `${blobBaseUrl}/HIF03.png`,
        titulo: "Costes",
        descripcion: "Evolución de costes",
      },
    ],
  },
  {
    id: "movimientos",
    nombre: "Movimientos",
    descripcion: "Trazabilidad de movimientos de stock",
    imagenes: [
      {
        url: `${blobBaseUrl}/HIM01.png`,
        titulo: "Movimientos",
