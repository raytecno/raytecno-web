const iconosSecciones: Record<string, string> = {
  ventas: `<svg viewBox="0 0 48 48" fill="none"><rect x="8" y="8" width="32" height="32" rx="3" fill="#8b5cf6" opacity="0.15"/><rect x="12" y="14" width="24" height="3" rx="1" fill="#8b5cf6"/><rect x="12" y="20" width="18" height="2" rx="1" fill="#8b5cf6" opacity="0.6"/><rect x="12" y="26" width="20" height="2" rx="1" fill="#8b5cf6" opacity="0.6"/><rect x="12" y="32" width="14" height="2" rx="1" fill="#8b5cf6" opacity="0.6"/><circle cx="36" cy="32" r="6" fill="#8b5cf6" opacity="0.4"/></svg>`,
  compras: `<svg viewBox="0 0 48 48" fill="none"><rect x="8" y="12" width="32" height="28" rx="3" fill="#8b5cf6" opacity="0.15"/><path d="M16 18l8 6 8-6" stroke="#8b5cf6" stroke-width="2" stroke-linecap="round"/><rect x="14" y="26" width="20" height="10" rx="2" fill="#8b5cf6" opacity="0.4"/></svg>`,
  fabricacion: `<svg viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="14" fill="#8b5cf6" opacity="0.15"/><circle cx="24" cy="24" r="14" stroke="#8b5cf6" stroke-width="2"/><path d="M24 14v10l7 5" stroke="#8b5cf6" stroke-width="2" stroke-linecap="round"/></svg>`,
