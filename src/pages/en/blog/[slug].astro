---
/**
 * Blog - Individual Article (English)
 * @file src/pages/en/blog/[slug].astro
 */
import Layout from "@/layouts/Layout.astro";
import { getAllBlogSlugs, getBlogPostBySlug, getRelatedPosts, getFeaturedImageUrl, calculateReadingTime } from "@/lib/blog.js";

const lang = 'en';

// Generate static paths
export async function getStaticPaths() {
  const slugs = await getAllBlogSlugs();
  return slugs
    .filter(item => item.lang === 'en')
    .map(item => ({ params: { slug: item.slug } }));
}

const { slug } = Astro.params;

// Get post
const post = await getBlogPostBySlug(slug, lang);

// If doesn't exist, redirect
if (!post) {
  return Astro.redirect(`/${lang}/blog`);
}

// Translations
const t = {
  backToBlog: 'Back to Blog',
  minRead: 'min read',
  share: 'Share',
  relatedPosts: 'Related Articles',
  publishedOn: 'Published on',
  updatedOn: 'Updated on',
  ctaDemo: {
    title: 'Ready to transform your business?',
    text: 'Discover how RayGold ERP can optimize your jewelry business management with a personalized demo.',
    button: 'Request Free Demo'
  }
};

// Get main category
const mainCategory = post.blogCategories?.nodes?.[0];

// Get related posts
const relatedPosts = mainCategory 
  ? await getRelatedPosts(slug, mainCategory.slug, lang, 3)
  : [];

// Alternate URLs
const alternateUrls = [
  { lang: 'es', url: `/es/blog/${slug}` },
  { lang: 'en', url: `/en/blog/${slug}` },
  { lang: 'fr', url: `/fr/blog/${slug}` },
  { lang: 'ca', url: `/ca/blog/${slug}` },
  { lang: 'pt-br', url: `/pt-br/blog/${slug}` },
];

// SEO
const metaTitle = post.blogSeo?.seoTitle || post.title;
const metaDescription = post.blogSeo?.seoDescription || post.excerpt?.replace(/<[^>]*>/g, '').slice(0, 160);

// Helpers
function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getReadingTime() {
  return post.blogSeo?.readingTime || calculateReadingTime(post.content);
}

const pageUrl = `https://raytecno.es/${lang}/blog/${slug}`;
const featuredImage = getFeaturedImageUrl(post);
---

<Layout 
  title={metaTitle}
  description={metaDescription}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <div class="blog-post-page">
    <!-- Breadcrumb -->
    <nav class="breadcrumb">
      <div class="container">
        <a href={`/${lang}`}>Home</a>
        <span>/</span>
        <a href={`/${lang}/blog`}>Blog</a>
        <span>/</span>
        <span class="current">{post.title}</span>
      </div>
    </nav>

    <article class="article">
      <div class="container">
        <!-- Header -->
        <header class="article-header">
          {mainCategory && (
            <a href={`/${lang}/blog/category/${mainCategory.slug}`} class="category-badge">
              {mainCategory.name}
            </a>
          )}
          
          <h1>{post.title}</h1>
          
          <div class="article-meta">
            <div class="meta-left">
              <time datetime={post.date}>
                {t.publishedOn} {formatDate(post.date)}
              </time>
              <span class="reading-time">
                â€¢ {getReadingTime()} {t.minRead}
              </span>
            </div>
            
            <div class="share-buttons">
              <span>{t.share}:</span>
              <a 
                href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(pageUrl)}&text=${encodeURIComponent(post.title)}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Share on Twitter"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(pageUrl)}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Share on LinkedIn"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <button id="copyLink" aria-label="Copy link" data-url={pageUrl}>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                  <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                </svg>
              </button>
            </div>
          </div>
        </header>

        <!-- Featured Image -->
        {featuredImage && (
          <figure class="featured-image">
            <img src={featuredImage} alt={post.title} loading="eager" />
          </figure>
        )}

        <!-- Content -->
        <div class="article-content">
          <div class="content-body" set:html={post.content} />

          <!-- Tags -->
          {post.blogTags?.nodes && post.blogTags.nodes.length > 0 && (
            <div class="article-tags">
              {post.blogTags.nodes.map(tag => (
                <a href={`/${lang}/blog/tag/${tag.slug}`} class="tag">
                  #{tag.name}
                </a>
              ))}
            </div>
          )}

          <!-- CTA -->
          {post.blogSeo?.ctaEnabled !== false && (
            <aside class="blog-cta">
              <div class="cta-content">
                <div class="cta-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                </div>
                <div class="cta-text">
                  <h3>{t.ctaDemo.title}</h3>
                  <p>{t.ctaDemo.text}</p>
                </div>
                <a href={`/${lang}/contact`} class="cta-button">
                  {t.ctaDemo.button}
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14"/>
                    <path d="m12 5 7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </aside>
          )}
        </div>

        <!-- Related Posts -->
        {relatedPosts.length > 0 && (
          <section class="related-posts">
            <h2>{t.relatedPosts}</h2>
            <div class="related-grid">
              {relatedPosts.map(relPost => (
                <article class="related-card">
                  {getFeaturedImageUrl(relPost) && (
                    <a href={`/${lang}/blog/${relPost.slug}`} class="related-image">
                      <img src={getFeaturedImageUrl(relPost)} alt={relPost.title} loading="lazy" />
                    </a>
                  )}
                  <div class="related-content">
                    <h3>
                      <a href={`/${lang}/blog/${relPost.slug}`}>{relPost.title}</a>
                    </h3>
                    <div class="related-meta">
                      <time datetime={relPost.date}>{formatDate(relPost.date)}</time>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </section>
        )}

        <!-- Back -->
        <div class="back-link">
          <a href={`/${lang}/blog`}>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m15 18-6-6 6-6"/>
            </svg>
            {t.backToBlog}
          </a>
        </div>
      </div>
    </article>
  </div>
</Layout>

<style>
  .blog-post-page {
    --primary: #c9a227;
    --primary-dark: #b8931f;
    --text: #1a1a1a;
    --text-light: #666;
    --bg-light: #f8f9fa;
    --border: #e5e5e5;
    background: white;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Breadcrumb */
  .breadcrumb {
    background: var(--bg-light);
    padding: 1rem 0;
    font-size: 0.9rem;
  }

  .breadcrumb .container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    max-width: 1200px;
  }

  .breadcrumb a {
    color: var(--text-light);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--primary);
  }

  .breadcrumb span {
    color: var(--text-light);
  }

  .breadcrumb .current {
    color: var(--text);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 300px;
  }

  /* Header */
  .article-header {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  .category-badge {
    display: inline-block;
    background: var(--primary);
    color: white;
    padding: 0.35rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    margin-bottom: 1.5rem;
  }

  .category-badge:hover {
    background: var(--primary-dark);
  }

  .article-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text);
    line-height: 1.3;
    margin-bottom: 1.5rem;
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .meta-left {
    font-size: 0.9rem;
    color: var(--text-light);
  }

  .reading-time {
    color: var(--text-light);
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .share-buttons span {
    font-size: 0.9rem;
    color: var(--text-light);
  }

  .share-buttons a,
  .share-buttons button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: var(--bg-light);
    color: var(--text-light);
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .share-buttons a:hover,
  .share-buttons button:hover {
    background: var(--primary);
    color: white;
  }

  /* Featured Image */
  .featured-image {
    margin: 0 0 3rem;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
  }

  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Content */
  .article-content {
    max-width: 720px;
    margin: 0 auto;
  }

  .content-body {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text);
  }

  .content-body :global(h2) {
    font-size: 1.75rem;
    margin: 2.5rem 0 1rem;
  }

  .content-body :global(h3) {
    font-size: 1.35rem;
    margin: 2rem 0 0.75rem;
  }

  .content-body :global(p) {
    margin-bottom: 1.5rem;
  }

  .content-body :global(ul),
  .content-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content-body :global(blockquote) {
    border-left: 4px solid var(--primary);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    background: var(--bg-light);
    font-style: italic;
    border-radius: 0 8px 8px 0;
  }

  .content-body :global(pre) {
    background: #1a1a1a;
    color: #f8f8f8;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .content-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .content-body :global(a) {
    color: var(--primary);
    text-decoration: underline;
  }

  /* Tags */
  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 3rem 0;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .tag {
    display: inline-block;
    background: var(--bg-light);
    color: var(--text-light);
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.85rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .tag:hover {
    background: var(--primary);
    color: white;
  }

  /* CTA */
  .blog-cta {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 16px;
    padding: 2.5rem;
    margin: 3rem 0;
    color: white;
  }

  .cta-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .cta-icon {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    background: rgba(201, 162, 39, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
  }

  .cta-text {
    flex: 1;
    min-width: 200px;
  }

  .cta-text h3 {
    font-size: 1.35rem;
    margin-bottom: 0.5rem;
  }

  .cta-text p {
    font-size: 0.95rem;
    opacity: 0.9;
    margin: 0;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary);
    color: white;
    padding: 0.9rem 1.75rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
  }

  .cta-button:hover {
    background: var(--primary-dark);
    transform: translateX(4px);
  }

  /* Related Posts */
  .related-posts {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid var(--border);
  }

  .related-posts h2 {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }

  .related-image {
    display: block;
    height: 140px;
    overflow: hidden;
  }

  .related-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .related-content {
    padding: 1rem;
  }

  .related-content h3 {
    font-size: 1rem;
    line-height: 1.4;
    margin-bottom: 0.5rem;
  }

  .related-content h3 a {
    color: var(--text);
    text-decoration: none;
  }

  .related-content h3 a:hover {
    color: var(--primary);
  }

  .related-meta {
    font-size: 0.8rem;
    color: var(--text-light);
  }

  /* Back Link */
  .back-link {
    text-align: center;
    padding: 3rem 0 4rem;
  }

  .back-link a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-light);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link a:hover {
    color: var(--primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 1.75rem;
    }

    .article-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .content-body {
      font-size: 1rem;
    }

    .cta-content {
      flex-direction: column;
      text-align: center;
    }

    .cta-button {
      width: 100%;
      justify-content: center;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Copy link
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('copyLink');
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const url = copyBtn.getAttribute('data-url');
        if (url) {
          try {
            await navigator.clipboard.writeText(url);
            const originalHTML = copyBtn.innerHTML;
            copyBtn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>`;
            setTimeout(() => { copyBtn.innerHTML = originalHTML; }, 2000);
          } catch (err) {
            console.error('Failed to copy:', err);
          }
        }
      });
    }
  });
</script>
