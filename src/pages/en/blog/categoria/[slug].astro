---
/**
 * Blog - Category
 * @file src/pages/en/blog/category/[slug].astro
 */
import Layout from "@/layouts/Layout.astro";
import { getBlogPostsByCategory, getBlogCategories, getFeaturedImageUrl, calculateReadingTime } from "@/lib/blog.js";

// Types
interface Category {
  slug: string;
  name: string;
  count?: number;
}

interface BlogPost {
  slug: string;
  title: string;
  date: string;
  excerpt?: string;
  content?: string;
  blogSeo?: {
    readingTime?: number;
  };
  featuredImage?: {
    node?: {
      sourceUrl?: string;
    };
  };
}

const lang = 'en';

const t = {
  blog: 'Blog',
  minRead: 'min',
  noPosts: 'No articles in this category',
  viewAll: 'All',
  backToBlog: '← Back to blog'
};

export async function getStaticPaths() {
  const categories: Category[] = await getBlogCategories();
  return categories.map((cat: Category) => ({
    params: { slug: cat.slug },
    props: { category: cat }
  }));
}

const { slug } = Astro.params;
const { category } = Astro.props as { category: Category };

const [posts, categories]: [BlogPost[], Category[]] = await Promise.all([
  getBlogPostsByCategory(slug, lang),
  getBlogCategories()
]);

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}

function getReadingTime(post: BlogPost): number {
  return post.blogSeo?.readingTime || calculateReadingTime(post.content || post.excerpt || '');
}

const alternateUrls = [
  { lang: 'es', url: `/es/blog/categoria/${slug}` },
  { lang: 'en', url: `/en/blog/category/${slug}` },
  { lang: 'fr', url: `/fr/blog/categorie/${slug}` },
  { lang: 'ca', url: `/ca/blog/categoria/${slug}` },
  { lang: 'pt-br', url: `/pt-br/blog/categoria/${slug}` },
];
---

<Layout 
  title={`${category.name} | Blog | RayGold`}
  description={`Articles about ${category.name.toLowerCase()} on the RayGold blog.`}
  lang={lang}
  alternateUrls={alternateUrls}
>
  <main class="category-page">
    <!-- Hero -->
    <section class="hero">
      <div class="container">
        <nav class="breadcrumb">
          <a href={`/${lang}/blog`}>{t.blog}</a>
          <span>/</span>
          <span>{category.name}</span>
        </nav>
        <h1>{category.name}</h1>
        <p>{posts.length} {posts.length === 1 ? 'article' : 'articles'}</p>
        
        <!-- Categories -->
        <div class="hero-categories">
          <a href={`/${lang}/blog`} class="cat-pill">{t.viewAll}</a>
          {categories.map((cat: Category) => (
            <a 
              href={`/${lang}/blog/category/${cat.slug}`} 
              class={`cat-pill ${cat.slug === slug ? 'active' : ''}`}
            >
              {cat.name}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="content-area">
      <div class="container">
        {posts.length > 0 ? (
          <div class="posts-grid">
            {posts.map((post: BlogPost) => (
              <article class="post-card">
                <a href={`/${lang}/blog/${post.slug}`} class="post-link">
                  {getFeaturedImageUrl(post) ? (
                    <div class="post-image">
                      <img src={getFeaturedImageUrl(post)} alt={post.title} loading="lazy" />
                    </div>
                  ) : (
                    <div class="post-image placeholder">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                        <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                      </svg>
                    </div>
                  )}
                  <div class="post-body">
                    <h3>{post.title}</h3>
                    <div class="meta">
                      <time>{formatDate(post.date)}</time>
                      <span>·</span>
                      <span>{getReadingTime(post)} {t.minRead}</span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="no-posts">
            <p>{t.noPosts}</p>
            <a href={`/${lang}/blog`} class="back-btn">{t.backToBlog}</a>
          </div>
        )}
      </div>

      <!-- Back -->
      <nav class="back-link">
        <div class="container">
          <a href={`/${lang}/blog`}>{t.backToBlog}</a>
        </div>
      </nav>
    </section>
  </main>
</Layout>

<style>
  /* Variables */
  .category-page {
    --blue-dark: #0f172a;
    --blue-medium: #1e293b;
    --gold: #c9a227;
    --gold-dark: #a8861e;
    --white: #ffffff;
    --gray-50: #f8fafc;
    --gray-100: #f1f5f9;
    --gray-200: #e2e8f0;
    --gray-300: #cbd5e1;
    --gray-400: #94a3b8;
    --gray-500: #64748b;
    --gray-600: #475569;
    --gray-900: #0f172a;
  }

  .container {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ========== HERO ========== */
  .hero {
    background: linear-gradient(135deg, var(--blue-dark) 0%, var(--blue-medium) 100%);
    color: var(--white);
    padding: 4rem 0 3.5rem;
    text-align: center;
  }

  .breadcrumb {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: var(--gray-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--white);
  }

  .breadcrumb span {
    color: var(--gray-500);
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 300;
    letter-spacing: -0.04em;
    margin-bottom: 0.5rem;
  }

  .hero > .container > p {
    font-size: 1rem;
    color: var(--gray-400);
    margin-bottom: 2rem;
  }

  .hero-categories {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .cat-pill {
    padding: 0.5rem 1.25rem;
    font-size: 0.85rem;
    color: var(--gray-400);
    text-decoration: none;
    border-radius: 100px;
    border: 1px solid transparent;
    transition: all 0.2s;
  }

  .cat-pill:hover {
    color: var(--white);
    border-color: var(--gray-500);
  }

  .cat-pill.active {
    background: var(--gold);
    color: var(--white);
  }

  /* ========== CONTENT ========== */
  .content-area {
    background: var(--white);
    padding: 4rem 0 3rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .post-card {
    background: var(--white);
  }

  .post-link {
    display: block;
    text-decoration: none;
  }

  .post-image {
    aspect-ratio: 4/3;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 1.25rem;
    background: var(--gray-100);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .post-image.placeholder svg {
    width: 40px;
    height: 40px;
    color: var(--gray-200);
  }

  .post-body h3 {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: var(--gray-900);
    letter-spacing: -0.01em;
    transition: color 0.2s;
  }

  .post-link:hover .post-body h3 {
    color: var(--gold);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: var(--gray-400);
  }

  .no-posts {
    text-align: center;
    padding: 4rem 0;
  }

  .no-posts p {
    color: var(--gray-500);
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }

  .back-btn {
    display: inline-block;
    background: var(--gold);
    color: var(--white);
    padding: 0.9rem 2rem;
    border-radius: 100px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: var(--gold-dark);
  }

  /* Back Link */
  .back-link {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--gray-200);
  }

  .back-link a {
    color: var(--gray-500);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link a:hover {
    color: var(--gold);
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 900px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .hero h1 {
      font-size: 2.25rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
