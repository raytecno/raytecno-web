  }

  .node-ai .node-subtitle {
    color: #d97757;
  }

  .ai-features {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .ai-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(217, 119, 87, 0.15);
    border: 1px solid rgba(217, 119, 87, 0.2);
    border-radius: 8px;
    font-size: 0.8rem;
    color: #fcd9c9;
  }

  .ai-feature-icon {
    font-size: 1rem;
  }

  /* Cloud Node */
  .node-cloud {
    grid-column: 1 / 4;
    background: linear-gradient(
      135deg,
      rgba(0, 120, 212, 0.1) 0%,
      rgba(0, 188, 242, 0.05) 100%
    );
    border-color: rgba(0, 120, 212, 0.3);
  }

  .node-cloud .node-title {
    color: #f1f5f9;
  }

  .node-cloud .node-subtitle {
    color: #0ea5e9;
  }

  .services {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .service {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.375rem;
  }

  .service-icon {
    width: 42px;
    height: 42px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
  }

  .service-name {
    font-size: 0.65rem;
    font-weight: 500;
    color: #94a3b8;
  }

  /* Data & Storage */
  .node-data {
    grid-column: 1 / 2;
  }

  .node-storage {
    grid-column: 2 / 4;
  }

  /* Connection Arrow */
  .connection-arrow {
    grid-column: 1 / 4;
    display: flex;
    justify-content: center;
    padding: 0.5rem 0;
  }

  .arrow-down {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    color: #667eea;
  }

  .arrow-line {
    width: 2px;
