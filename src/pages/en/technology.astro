    border-radius: 2px;
  }

  .arrow-head {
    font-size: 1.25rem;
  }

  /* RayGold Result */
  .node-result {
    grid-column: 1 / 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.2) 0%,
      rgba(118, 75, 162, 0.2) 100%
