---
/**
 * Pricing Page - RayGold (English)
 * File: src/pages/en/pricing.astro
 * URL: /en/pricing
 */
import Layout from "../../layouts/Layout.astro";

const lang = "en";
---

<Layout
  title="Pricing - RayGold ERP for Jewelry"
  description="RayGold ERP plans from €29/user/month"
  lang={lang}
>
  <!-- HEADER / NAV (igual que en tu index) -->
  <header class="header">
    <div class="header-container">
      <a href="/" class="logo">
        <div class="logo-icon">
          <svg
            viewBox="0 0 40 40"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M20 4L4 12L20 20L36 12L20 4Z"
              fill="url(#grad1)"
              opacity="0.9"></path>
            <path d="M4 12V28L20 36V20L4 12Z" fill="url(#grad2)" opacity="0.8"
            ></path>
            <path d="M36 12V28L20 36V20L36 12Z" fill="url(#grad3)" opacity="0.7"
            ></path>
            <defs>
              <linearGradient id="grad1" x1="4" y1="4" x2="36" y2="20">
                <stop stop-color="#a78bfa"></stop>
                <stop offset="1" stop-color="#6366f1"></stop>
              </linearGradient>
              <linearGradient id="grad2" x1="4" y1="12" x2="20" y2="36">
                <stop stop-color="#8b5cf6"></stop>
                <stop offset="1" stop-color="#6366f1"></stop>
              </linearGradient>
              <linearGradient id="grad3" x1="36" y1="12" x2="20" y2="36">
                <stop stop-color="#a78bfa"></stop>
                <stop offset="1" stop-color="#7c3aed"></stop>
              </linearGradient>
            </defs>
          </svg>
        </div>
        <div class="logo-text">
          <span class="logo-title">RAYGOLD</span>
          <span class="logo-subtitle">Jewelry Software</span>
        </div>
      </a>

      <nav class="nav">
        <a href="/en/">Home</a>
        <a href="/en/#modules">Modules</a>
        <a href="/en/#why">Why RayGold</a>
        <a href="/en/technology">Technology</a>
        <a href="/en/pricing" class="active">Pricing</a>
        <a href="/en/contact">Contact</a>
      </nav>
    </div>
  </header>

  <!-- CONTENIDO PRINCIPAL -->
  <main class="main-content">
    <!-- Hero de precios -->
    <section class="pricing-hero">
      <div class="container">
        <span class="hero-badge">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <line x1="12" y1="1" x2="12" y2="23"></line>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
          </svg>
          Transparent pricing
        </span>
        <h1 class="hero-title">
          Choose the perfect plan for
          <span class="gradient-text">your jewelry</span>
        </h1>
        <p class="hero-subtitle">
          No hidden costs. No surprises. Local support in Spain included.
        </p>
      </div>
    </section>

    <!-- Toggle -->
    <section class="toggle-section">
      <div class="container">
        <div class="pricing-toggle">
          <button class="toggle-btn active" data-plan="saas">
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"
              ></path>
            </svg>
            Monthly subscription
          </button>
          <button class="toggle-btn" data-plan="perpetual">
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
            Perpetual license
          </button>
        </div>
      </div>
    </section>

    <!-- PLANES SAAS -->
    <section class="pricing-section saas-plans active" id="saasPlans">
      <div class="container">
        <div class="plans-grid">
          <!-- STARTER -->
          <div class="plan-card">
            <div class="plan-header">
              <div class="plan-icon starter">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                  <path d="M2 17l10 5 10-5"></path>
                  <path d="M2 12l10 5 10-5"></path>
                </svg>
              </div>
              <h3 class="plan-name">Starter</h3>
              <p class="plan-description">For small jewelry stores</p>
            </div>

            <div class="plan-pricing">
              <span class="price-amount">€29</span>
              <span class="price-period">/user/month</span>
            </div>
            <p class="price-note">Annual billing · Min. 2 users</p>

            <ul class="plan-features">
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Point of Sale (POS)
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Inventory Management
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Customers and basic CRM
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Metal and carat control
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Specialized labels
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Email support
              </li>
            </ul>

            <a href="/en/contact" class="plan-cta">Get started</a>
          </div>

          <!-- PROFESIONAL -->
          <div class="plan-card featured">
            <div class="featured-badge">Most popular</div>
            <div class="plan-header">
              <div class="plan-icon professional">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <polygon
                    points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
                  ></polygon>
                </svg>
              </div>
              <h3 class="plan-name">Professional</h3>
              <p class="plan-description">For growing jewelry stores</p>
            </div>

            <div class="plan-pricing">
              <span class="price-amount">€49</span>
              <span class="price-period">/user/month</span>
            </div>
            <p class="price-note">Annual billing · Min. 3 users</p>

            <ul class="plan-features">
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                >
                <strong>Everything in Starter +</strong>
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Manufacturing Module
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Workshop and Repairs
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Integrated Accounting
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Supplier Management
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Advanced Reports
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Phone Support
              </li>
            </ul>

            <a href="/en/contact" class="plan-cta featured">Request demo</a>
          </div>

          <!-- ENTERPRISE -->
          <div class="plan-card">
            <div class="plan-header">
              <div class="plan-icon enterprise">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"
                  ></path>
                </svg>
              </div>
              <h3 class="plan-name">Enterprise</h3>
              <p class="plan-description">Para cadenas y fabricantes</p>
            </div>

            <div class="plan-pricing">
              <span class="price-amount">69€</span>
              <span class="price-period">/usuario/mes</span>
            </div>
            <p class="price-note">Facturación anual · Mín. 5 usuarios</p>

            <ul class="plan-features">
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                >
                <strong>Everything in Professional +</strong>
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Multi-tienda sincronizado
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > API para integraciones
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Business Intelligence
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Conexión e-commerce
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Dedicated account manager
              </li>
              <li>
                <svg viewBox="0 0 24 24" fill="currentColor"
                  ><path
                    d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                  ></path></svg
                > Guaranteed SLA
              </li>
            </ul>

            <a href="/en/contact" class="plan-cta">Contactar ventas</a>
          </div>
        </div>

        <div class="pricing-note">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
          </svg>
          <p>
            Todos los planes incluyen: hosting en Azure España, actualizaciones,
            copias de seguridad diarias y formación inicial.
          </p>
        </div>
      </div>
    </section>

    <!-- LICENCIA PERPETUA -->
    <section class="pricing-section perpetual-plans" id="perpetualPlans">
      <div class="container">
        <div class="perpetual-card">
          <div class="perpetual-content">
            <div class="perpetual-left">
              <div class="perpetual-icon">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                  <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                </svg>
              </div>
              <div class="perpetual-info">
                <h3>Perpetual License</h3>
                <p>
                  Buy the software and own it forever. Ideal para empresas
                  que prefieren inversión inicial en lugar de cuotas mensuales.
                </p>
              </div>
            </div>

            <div class="perpetual-right">
              <div class="perpetual-price">
                <span class="price-from">from</span>
                <span class="price-amount">12.000€</span>
              </div>
              <p class="price-detail">One-time payment · Unlimited users</p>
            </div>
          </div>

          <div class="perpetual-features">
            <div class="feature-col">
              <h4>Includes:</h4>
              <ul>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > All RayGold modules
                </li>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > Unlimited users
                </li>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > Installation on your server
                </li>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > On-site training (16h)
                </li>
              </ul>
            </div>
            <div class="feature-col">
              <h4>Optional maintenance:</h4>
              <ul>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > Version updates
                </li>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > Priority technical support
                </li>
                <li>
                  <svg viewBox="0 0 24 24" fill="currentColor"
                    ><path
                      d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"
                    ></path></svg
                  > 18% annual on license
                </li>
              </ul>
            </div>
          </div>

          <a href="/en/contact" class="perpetual-cta">
            Request custom quote
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- Comparativa -->
        <div class="comparison-box">
          <h4>¿SaaS o Perpetual License?</h4>
          <div class="comparison-grid">
            <div class="comparison-item">
              <span class="comparison-label">SaaS (Subscription)</span>
              <p>
                No large upfront investment. Ideal para empezar o crecer
                progresivamente. Todo incluido: hosting, actualizaciones y
                soporte.
              </p>
            </div>
            <div class="comparison-item">
              <span class="comparison-label">Perpetual License</span>
              <p>
                Greater control over your infrastructure. No monthly fees.
                Cost-effective long-term for teams of 10+ users.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="faq-section">
      <div class="container">
        <h2 class="faq-title">Frequently Asked Questions</h2>
        <div class="faq-grid">
          <div class="faq-item">
            <h4>Is there a commitment period?</h4>
            <p>
              No. Los planes SaaS son anuales pero puedes cancelar en cualquier
              momento sin penalización al finalizar tu período.
            </p>
          </div>
          <div class="faq-item">
            <h4>What does implementation include?</h4>
            <p>
              Configuración inicial, migración de datos, formación del equipo y
              acompañamiento durante el primer mes.
            </p>
          </div>
          <div class="faq-item">
            <h4>Can I change plans?</h4>
            <p>
              Sí, puedes escalar tu plan en cualquier momento. También puedes
              migrar de SaaS a licencia perpetua.
            </p>
          </div>
          <div class="faq-item">
            <h4>Do you offer a free trial?</h4>
            <p>
              Ofrecemos una demo personalizada gratuita donde verás RayGold
              funcionando con datos de ejemplo del sector joyero.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Final -->
    <section class="cta-section">
      <div class="container">
        <h2>¿Listo para transformar tu joyería?</h2>
        <p>
          Solicita una demo gratuita y descubre por qué más de 200 joyerías
          confían en RayGold
        </p>
        <a href="/en/contact" class="cta-button">
          Solicitar demo gratuita
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </section>
  </main>

  <!-- FOOTER -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-brand">
        <span class="footer-logo">RAYGOLD</span>
        <p>Software ERP especializado para el sector joyero from 1990</p>
      </div>
      <div class="footer-links">
        <a href="/">Home</a>
        <a href="/en/technology">Technology</a>
        <a href="/en/pricing">Pricing</a>
        <a href="/en/contact">Contact</a>
      </div>
      <div class="footer-copy">
        <p>© 2025 Raytecno BCN SL. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* ============================================
     VARIABLES Y RESET
     ============================================ */
  :root {
    --bg-dark: #0a0a0f;
    --bg-card: rgba(255, 255, 255, 0.03);
    --border-subtle: rgba(255, 255, 255, 0.08);
    --text-primary: #ffffff;
    --text-secondary: #94a3b8;
    --text-muted: #64748b;
    --accent-green: #10b981;
    --accent-green-light: #34d399;
    --accent-purple: #8b5cf6;
    --accent-amber: #f59e0b;
  }

  /* ============================================
     HEADER
     ============================================ */
  .header {
    background: linear-gradient(
      180deg,
      rgba(10, 10, 15, 0.98) 0%,
      rgba(10, 10, 15, 0.95) 100%
    );
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border-subtle);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 16px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
  }

  .logo-icon svg {
    width: 100%;
    height: 100%;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
  }

  .logo-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: 1px;
  }

  .logo-subtitle {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  .nav {
    display: flex;
    gap: 32px;
  }

  .nav a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav a:hover,
  .nav a.active {
    color: var(--text-primary);
  }

  /* ============================================
     MAIN CONTENT
     ============================================ */
  .main-content {
    background: var(--bg-dark);
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ============================================
     HERO
     ============================================ */
  .pricing-hero {
    padding: 80px 0 40px;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: var(--accent-green-light);
    padding: 8px 16px;
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 24px;
  }

  .hero-badge svg {
    width: 16px;
    height: 16px;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 800;
    color: var(--text-primary);
    margin: 0 0 16px 0;
    line-height: 1.1;
