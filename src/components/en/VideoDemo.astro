---
/**
 * VideoDemo.astro - Video demo section for RayGold - English version
 * File: src/components/en/VideoDemo.astro
 * 
 * USAGE:
 * <VideoDemo />
 * 
 * VIDEO OPTIONS:
 * 1. Self-hosted: Upload to Azure Blob Storage â†’ use videoSrc
 * 2. YouTube: Use youtubeId
 * 3. Vimeo: Use vimeoId
 * 
 * Change 'videoType' variable according to your choice
 */

// ============================================
// CONFIGURATION - Change as needed
// ============================================

const videoType = "self-hosted"; // "self-hosted" | "youtube" | "vimeo"

// Self-hosted (Azure Blob Storage or /public/videos/)
// const videoSrc = "/videos/raygold-demo.mp4";
// const posterSrc = "/videos/raygold-demo-poster.jpg";

const videoSrc = "https://raygoldstorage.blob.core.windows.net/web/Video_RayGold.mp4";
const posterSrc = "https://raygoldstorage.blob.core.windows.net/web/Video_RayGold_poster.jpg";

// YouTube (video ID only)
const youtubeId = "YOUR_VIDEO_ID"; // e.g.: "dQw4w9WgXcQ"

// Vimeo (ID only)
const vimeoId = "YOUR_VIMEO_ID"; // e.g.: "123456789"

// ============================================
---

<section class="video-section" id="demo">
  <div class="container">
    <!-- Header -->
    <div class="section-header">
      <span class="section-badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="5 3 19 12 5 21 5 3"></polygon>
        </svg>
        See it in action
      </span>
      <h2 class="section-title">
        Discover RayGold in 
        <span class="gradient-text">90 seconds</span>
      </h2>
      <p class="section-subtitle">
        A tour of the features that will transform your jewelry management
      </p>
    </div>

    <!-- Video Container -->
    <div class="video-wrapper">
      <div class="video-frame">
        <!-- Decorative glow effect -->
        <div class="glow-effect"></div>
        
        {videoType === "self-hosted" && (
          <div class="video-player" id="videoPlayer">
            <!-- Poster/Thumbnail with play button -->
            <div class="video-poster" id="videoPoster">
              <img 
                src={posterSrc} 
                alt="RayGold ERP Demo"
                class="poster-image"
                onerror="this.style.display='none'"
              />
              <div class="poster-overlay">
                <button class="play-button" id="playButton" aria-label="Play video">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </button>
                <span class="play-text">Watch demo</span>
              </div>
            </div>
            
            <!-- Video element (hidden until play is pressed) -->
            <video 
              id="demoVideo"
              class="video-element"
              poster={posterSrc}
              preload="metadata"
              playsinline
              controls
            >
              <source src={videoSrc} type="video/mp4" />
              Your browser does not support the video element.
            </video>
          </div>
        )}

        {videoType === "youtube" && (
          <div class="video-embed">
            <iframe
              src={`https://www.youtube.com/embed/${youtubeId}?rel=0&modestbranding=1`}
              title="RayGold ERP Demo"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        )}

        {videoType === "vimeo" && (
          <div class="video-embed">
            <iframe
              src={`https://player.vimeo.com/video/${vimeoId}?title=0&byline=0&portrait=0`}
              title="RayGold ERP Demo"
              frameborder="0"
              allow="autoplay; fullscreen; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
        )}
      </div>

      <!-- Features under video -->
      <div class="video-features">
        <div class="feature-item">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <div class="feature-text">
            <span class="feature-value">90 sec</span>
            <span class="feature-label">demo</span>
          </div>
        </div>
        
        <div class="feature-divider"></div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </div>
          <div class="feature-text">
            <span class="feature-value">8 modules</span>
            <span class="feature-label">in action</span>
          </div>
        </div>
        
        <div class="feature-divider"></div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </div>
          <div class="feature-text">
            <span class="feature-value">100%</span>
            <span class="feature-label">jewelry</span>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="video-cta">
      <p class="cta-text">Would you like to see a personalized demo for your business?</p>
      <a href="/en/contact" class="cta-button">
        Request free demo
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* ============================================
     MAIN SECTION
     ============================================ */
  .video-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #0a0a0f 0%, #12121a 50%, #0a0a0f 100%);
    position: relative;
    overflow: hidden;
  }

  /* Subtle background pattern */
  .video-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(rgba(139, 92, 246, 0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    pointer-events: none;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
    z-index: 1;
  }

  /* ============================================
     SECTION HEADER
     ============================================ */
  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    color: #a78bfa;
    padding: 8px 16px;
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .section-badge svg {
    width: 16px;
    height: 16px;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 2.75rem);
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .gradient-text {
    background: linear-gradient(135deg, #a78bfa 0%, #6366f1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #94a3b8;
    margin: 0;
    max-width: 500px;
    margin: 0 auto;
  }

  /* ============================================
     VIDEO WRAPPER
     ============================================ */
  .video-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .video-frame {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: #1a1a2e;
    box-shadow: 
      0 0 0 1px rgba(139, 92, 246, 0.2),
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 100px rgba(139, 92, 246, 0.1);
  }

  .glow-effect {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }

  /* ============================================
     VIDEO PLAYER (Self-hosted)
     ============================================ */
  .video-player {
    position: relative;
    aspect-ratio: 16 / 9;
    background: #0f0f1a;
  }

  .video-poster {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    cursor: pointer;
  }

  .poster-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .poster-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(10, 10, 15, 0.7) 0%,
      rgba(10, 10, 15, 0.4) 100%
    );
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 16px;
    transition: background 0.3s ease;
  }

  .video-poster:hover .poster-overlay {
    background: linear-gradient(
      135deg,
      rgba(10, 10, 15, 0.6) 0%,
      rgba(10, 10, 15, 0.3) 100%
    );
  }

  .play-button {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s ease;
    box-shadow: 
      0 10px 40px rgba(139, 92, 246, 0.4),
      0 0 0 0 rgba(139, 92, 246, 0.4);
    animation: pulse-play 2s ease-in-out infinite;
  }

  @keyframes pulse-play {
    0%, 100% {
      box-shadow: 
        0 10px 40px rgba(139, 92, 246, 0.4),
        0 0 0 0 rgba(139, 92, 246, 0.4);
    }
    50% {
      box-shadow: 
        0 10px 40px rgba(139, 92, 246, 0.4),
        0 0 0 20px rgba(139, 92, 246, 0);
    }
  }

  .play-button:hover {
    transform: scale(1.1);
    box-shadow: 0 15px 50px rgba(139, 92, 246, 0.5);
  }

  .play-button svg {
    width: 32px;
    height: 32px;
    margin-left: 4px; /* Optical adjustment to center play icon */
  }

  .play-text {
    color: white;
    font-size: 1rem;
    font-weight: 500;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .video-element {
    width: 100%;
    height: 100%;
    display: none;
    position: relative;
    z-index: 1;
  }

  .video-element.active {
    display: block;
  }

  .video-poster.hidden {
    display: none;
  }

  /* ============================================
     VIDEO EMBED (YouTube/Vimeo)
     ============================================ */
  .video-embed {
    position: relative;
    aspect-ratio: 16 / 9;
  }

  .video-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* ============================================
     FEATURES UNDER VIDEO
     ============================================ */
  .video-features {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 32px;
    padding: 24px;
    background: rgba(255, 255, 255, 0.02);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .feature-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(139, 92, 246, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon svg {
    width: 20px;
    height: 20px;
    color: #a78bfa;
  }

  .feature-text {
    display: flex;
    flex-direction: column;
  }

  .feature-value {
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
  }

  .feature-label {
    font-size: 0.75rem;
    color: #64748b;
  }

  .feature-divider {
    width: 1px;
    height: 32px;
    background: rgba(255, 255, 255, 0.1);
  }

  /* ============================================
     CTA
     ============================================ */
  .video-cta {
    text-align: center;
    margin-top: 48px;
  }

  .cta-text {
    color: #94a3b8;
    margin: 0 0 20px 0;
    font-size: 1rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
    color: white;
    padding: 14px 28px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.3);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(139, 92, 246, 0.4);
  }

  .cta-button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  @media (max-width: 768px) {
    .video-section {
      padding: 60px 0;
    }

    .section-header {
      margin-bottom: 32px;
    }

    .video-features {
      flex-direction: column;
      gap: 16px;
    }

    .feature-divider {
      width: 60px;
      height: 1px;
    }

    .play-button {
      width: 64px;
      height: 64px;
    }

    .play-button svg {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 480px) {
    .section-title {
      font-size: 1.75rem;
    }

    .section-subtitle {
      font-size: 1rem;
    }

    .cta-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  // ============================================
  // VIDEO PLAYER LOGIC (Self-hosted)
  // ============================================
  document.addEventListener('DOMContentLoaded', () => {
    const poster = document.getElementById('videoPoster');
    const video = document.getElementById('demoVideo') as HTMLVideoElement;
    const playButton = document.getElementById('playButton');

    if (poster && video && playButton) {
      const startVideo = () => {
        poster.classList.add('hidden');
        video.classList.add('active');
        video.play();
      };

      playButton.addEventListener('click', startVideo);
      poster.addEventListener('click', startVideo);

      // When video ends, show poster again
      video.addEventListener('ended', () => {
        poster.classList.remove('hidden');
        video.classList.remove('active');
      });
    }
  });
</script>
