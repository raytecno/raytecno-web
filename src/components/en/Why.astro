---
/**
 * Why RayGold Page (English)
 * File: src/pages/en/why.astro
 * URL: /en/why
 */
import Layout from "../../layouts/Layout.astro";

const lang = "en";
---

<Layout title="Why RayGold - ERP for Jewelry" lang={lang}>
  <!-- HEADER -->
  <header class="header">
    <div class="header-inner">
      <a href="/en/" class="logo">
        <svg class="logo-icon" viewBox="0 0 40 40" fill="none">
          <path
            d="M20 2L37 12V28L20 38L3 28V12L20 2Z"
            fill="url(#grad1)"
            stroke="#fff"
            stroke-width="1"></path>
          <path
            d="M20 8L30 14V26L20 32L10 26V14L20 8Z"
            fill="rgba(255,255,255,0.3)"></path>
          <defs>
            <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#667eea"></stop>
              <stop offset="100%" style="stop-color:#764ba2"></stop>
            </linearGradient>
          </defs>
        </svg>
        <div class="logo-text">
          <span class="logo-title">RAYGOLD</span>
          <span class="logo-subtitle">Jewelry Software</span>
        </div>
      </a>

      <nav class="nav">
        <a href="/en/">Home</a>
        <a href="/en/modules">Modules</a>
        <a href="/en/why" class="active">Why RayGold</a>
        <a href="/en/technology">Technology</a>
        <a href="/en/pricing">Pricing</a>
        <a href="/en/contact">Contact</a>
      </nav>

      <button class="menu-toggle" aria-label="Menu">☰</button>
    </div>
  </header>

  <!-- PAGE HEADER -->
  <section class="page-hero">
    <div class="container">
      <span class="badge">Our Difference</span>
      <h1>
        Why do <span class="highlight">+200 jewelry stores</span> choose RayGold?
      </h1>
      <p>
        We're not a generic ERP adapted. We're jewelers who create software.
      </p>
    </div>
  </section>

  <!-- DIFFERENTIATORS -->
  <section class="diferenciadores-section">
    <div class="container">
      <div class="diferenciadores-grid">
        <!-- 35 years -->
        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>35 years in jewelry</h3>
            <p>
              We don't learn about the industry from your company. We've been
              talking about carats, cuts and alloys since 1990.
            </p>
            <span class="diferenciador-stat">Since 1990</span>
          </div>
        </div>

        <!-- Jewelry-specific -->
        <div class="diferenciador-card featured">
          <div class="diferenciador-icon diamond">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M6 3h12l4 6-10 13L2 9z"></path>
              <path d="M2 9h20"></path>
              <path d="M12 22V9"></path>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>100% made for jewelers</h3>
            <p>
              Manufacturing orders with alloys, stone control by certificate,
              metal traceability. It's not an add-on module, it's the core.
            </p>
            <span class="diferenciador-stat">100% specialized</span>
          </div>
        </div>

        <!-- All integrated -->
        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>One single system</h3>
            <p>
              Sales, manufacturing, purchasing, accounting, POS, e-commerce. No
              patches or integrations that break.
            </p>
            <span class="diferenciador-stat">8 integrated modules</span>
          </div>
        </div>

        <!-- Real support -->
        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 00-3-3.87"></path>
              <path d="M16 3.13a4 4 0 010 7.75"></path>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>We know you by name</h3>
            <p>
              When you call, you don't talk to a call center. You talk to people
              who understand your business and have been with you for years.
            </p>
            <span class="diferenciador-stat">Direct support Spain</span>
          </div>
        </div>

        <!-- Modern cloud -->
        <div class="diferenciador-card">
          <div class="diferenciador-icon">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M18 10h-1.26A8 8 0 109 20h9a5 5 0 000-10z"></path>
            </svg>
          </div>
          <div class="diferenciador-content">
            <h3>Always up to date</h3>
            <p>
              Cloud on Azure, automatic updates, new features every quarter.
              Technology advances, RayGold does too.
            </p>
            <span class="diferenciador-stat">Cloud technology</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- STATS SECTION -->
  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-number">35+</div>
          <div class="stat-label">Years of experience</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">200+</div>
          <div class="stat-label">Active jewelry stores</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">8</div>
          <div class="stat-label">Integrated modules</div>
        </div>
        <div class="stat-card">
          <div class="stat-number">100%</div>
          <div class="stat-label">Specialized in jewelry</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-box">
        <h2>Ready to see how RayGold can transform your jewelry business?</h2>
        <p>
          Request a personalized demo and discover why more than 200 jewelry
          stores trust us.
        </p>
        <div class="cta-buttons">
          <a href="/en/contact" class="btn-primary">Request free demo →</a>
          <a href="/en/modules" class="btn-secondary">Explore modules</a>
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="footer">
    <div class="footer-inner">
      <div class="footer-brand">
        <span class="footer-logo">RAYGOLD</span>
        <p>© 2024 Raytecno BCN SL</p>
      </div>
      <div class="footer-links">
        <a href="/en/contact">Contact</a>
        <a href="/en/pricing">Pricing</a>
        <a href="/en/technology">Technology</a>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* HEADER */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
  }

  .logo-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    letter-spacing: 2px;
  }

  .logo-subtitle {
    font-size: 0.7rem;
    color: #94a3b8;
  }

  .nav {
    display: flex;
    gap: 2rem;
  }

  .nav a {
    color: #94a3b8;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav a:hover,
  .nav a.active {
    color: white;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    cursor: pointer;
  }

  /* PAGE HERO */
  .page-hero {
    padding: 8rem 1.5rem 4rem;
    background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
    text-align: center;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(245, 158, 11, 0.2);
    color: #fbbf24;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 50px;
    margin-bottom: 1.5rem;
  }

  .page-hero h1 {
    font-size: 2.75rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .page-hero h1 .highlight {
    background: linear-gradient(135deg, #667eea, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-hero p {
    color: #94a3b8;
    font-size: 1.2rem;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* DIFFERENTIATORS */
  .diferenciadores-section {
    padding: 4rem 1.5rem;
    background: #0f172a;
  }

  .diferenciadores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .diferenciador-card {
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid #334155;
    border-radius: 16px;
    padding: 1.75rem;
    display: flex;
    gap: 1.25rem;
    transition: all 0.3s ease;
  }

  .diferenciador-card:hover {
    border-color: #667eea;
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
  }

  .diferenciador-card.featured {
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.15) 0%,
      rgba(30, 41, 59, 0.5) 100%
    );
    border-color: rgba(102, 126, 234, 0.5);
    grid-column: span 2;
  }

  .diferenciador-icon {
    width: 56px;
    height: 56px;
    min-width: 56px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .diferenciador-icon.diamond {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }

  .diferenciador-icon svg {
    width: 28px;
    height: 28px;
  }

  .diferenciador-content h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.5rem;
  }

  .diferenciador-content p {
    font-size: 0.95rem;
    color: #94a3b8;
    line-height: 1.6;
    margin: 0 0 1rem;
  }

  .diferenciador-stat {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(102, 126, 234, 0.15);
    color: #818cf8;
    font-size: 0.8rem;
    font-weight: 600;
    border-radius: 50px;
  }

  /* STATS */
  .stats-section {
    padding: 4rem 1.5rem;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.1) 0%,
      rgba(118, 75, 162, 0.1) 100%
    );
    border-top: 1px solid rgba(102, 126, 234, 0.2);
    border-bottom: 1px solid rgba(102, 126, 234, 0.2);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .stat-card {
    text-align: center;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, #667eea, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: #94a3b8;
    font-size: 0.9rem;
  }

  /* CTA */
  .cta-section {
    padding: 5rem 1.5rem;
    background: #0f172a;
  }

  .cta-box {
    text-align: center;
    padding: 3rem;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.1) 0%,
      rgba(118, 75, 162, 0.1) 100%
    );
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 20px;
  }

  .cta-box h2 {
    font-size: 1.75rem;
    color: white;
    margin: 0 0 0.75rem;
  }

  .cta-box p {
    color: #94a3b8;
    font-size: 1.1rem;
    margin: 0 0 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
  }

  .btn-secondary {
    display: inline-flex;
    padding: 1rem 2rem;
    background: transparent;
    color: #818cf8;
    text-decoration: none;
    border: 2px solid #667eea;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: rgba(102, 126, 234, 0.1);
  }

  /* FOOTER */
  .footer {
    background: #020617;
    padding: 2rem 1.5rem;
    border-top: 1px solid #1e293b;
  }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-logo {
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    letter-spacing: 2px;
  }

  .footer-brand p {
    color: #64748b;
    font-size: 0.85rem;
    margin: 4px 0 0;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: #94a3b8;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: white;
  }

  /* RESPONSIVE */
  @media (max-width: 900px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .diferenciador-card.featured {
      grid-column: span 1;
    }
  }

  @media (max-width: 768px) {
    .nav {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #0f172a;
      flex-direction: column;
      padding: 1rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .nav.active {
      display: flex;
    }

    .menu-toggle {
      display: block;
    }

    .page-hero h1 {
      font-size: 2rem;
    }

    .diferenciadores-grid {
      grid-template-columns: 1fr;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .stat-number {
      font-size: 2.25rem;
    }

    .footer-inner {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>

<script>
  document.querySelector(".menu-toggle")?.addEventListener("click", () => {
    document.querySelector(".nav")?.classList.toggle("active");
  });
</script>
