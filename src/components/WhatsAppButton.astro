---
/**
 * WhatsApp Button - Minimal Premium Dark
 * Diseño minimalista que combina con la estética oscura de la web
 */
import { defaultLang, type Language } from "../i18n/config";
import { useTranslations } from "../i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const phoneNumber = "34648088550";
const message = t("whatsapp.message");
---

<a
  href={`https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`}
  class="wa-btn"
  target="_blank"
  rel="noopener noreferrer"
  aria-label="WhatsApp"
>
  <svg viewBox="0 0 24 24" fill="currentColor" class="wa-icon">
    <path
      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
    ></path>
  </svg>
  <span class="wa-text">WhatsApp</span>
</a>

<style>
  .wa-btn {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 9999;

    display: flex;
    align-items: center;
    gap: 10px;

    padding: 12px 20px;
    background: rgba(15, 23, 42, 0.92);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);

    border: 1px solid rgba(102, 126, 234, 0.2);
    border-radius: 50px;

    color: #c4b5fd;
    text-decoration: none;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.02em;

    box-shadow:
      0 4px 24px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(102, 126, 234, 0.1);

    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .wa-btn:hover {
    background: rgba(30, 41, 59, 0.95);
    border-color: rgba(102, 126, 234, 0.5);
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow:
      0 8px 32px rgba(102, 126, 234, 0.25),
      0 0 0 1px rgba(102, 126, 234, 0.3);
  }

  .wa-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }

  .wa-btn:hover .wa-icon {
    transform: scale(1.1);
  }

  .wa-text {
    white-space: nowrap;
  }

  /* Responsive - Solo icono en móvil */
  @media (max-width: 600px) {
    .wa-btn {
      padding: 14px;
      border-radius: 50%;
      bottom: 20px;
      right: 20px;
    }

    .wa-text {
      display: none;
    }

    .wa-icon {
      width: 22px;
      height: 22px;
    }
  }
</style>
