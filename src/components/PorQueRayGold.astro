<style>
  /* ============================================
     DESKTOP: Tema azul oscuro (default)
     ============================================ */
  .porque-section {
    padding: 5rem 1.5rem;
    background: #0f172a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(245, 158, 11, 0.2);
    color: #fbbf24;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 50px;
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.75rem;
  }

  .section-header p {
    color: #94a3b8;
    font-size: 1.1rem;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .diferenciadores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.25rem;
  }

  .diferenciador-card {
    background: rgba(30, 41, 59, 0.5);
    border: 1px solid #334155;
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  .diferenciador-card:hover {
    border-color: #667eea;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .diferenciador-card.featured {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(30, 41, 59, 0.5) 100%);
    border-color: rgba(102, 126, 234, 0.5);
    grid-column: span 2;
  }

  .diferenciador-icon {
    width: 48px;
    height: 48px;
    min-width: 48px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .diferenciador-icon.diamond {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }

  .diferenciador-icon svg {
    width: 24px;
    height: 24px;
  }

  .diferenciador-content {
    flex: 1;
  }

  .diferenciador-content h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.5rem;
  }

  .diferenciador-content p {
    font-size: 0.9rem;
    color: #94a3b8;
    line-height: 1.6;
    margin: 0 0 0.75rem;
  }

  .diferenciador-stat {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(102, 126, 234, 0.15);
    color: #818cf8;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 50px;
  }

  .porque-cta {
    text-align: center;
    margin-top: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 16px;
  }

  .porque-cta p {
    color: #e2e8f0;
    font-size: 1.1rem;
    margin: 0 0 1rem;
  }

  .cta-button {
    display: inline-flex;
    padding: 0.875rem 1.75rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
  }

  /* ============================================
     MÓVIL: Tema blanco claro
     ============================================ */
  @media (max-width: 768px) {
    .porque-section {
      padding: 3rem 1rem;
      background: #ffffff;
    }

    .section-badge {
      background: rgba(245, 158, 11, 0.1);
      color: #d97706;
    }

    .section-header h2 {
      font-size: 1.5rem;
      color: #1e293b;
    }

    .section-header p {
      color: #64748b;
    }

    .diferenciadores-grid {
      grid-template-columns: 1fr;
    }

    .diferenciador-card {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
    }

    .diferenciador-card:hover {
      background: #f1f5f9;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }

    .diferenciador-card.featured {
      grid-column: span 1;
      background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, #f8fafc 100%);
      border-color: rgba(245, 158, 11, 0.3);
    }

    .diferenciador-content h3 {
      color: #1e293b;
    }

    .diferenciador-content p {
      color: #64748b;
    }

    .diferenciador-stat {
      background: rgba(102, 126, 234, 0.1);
      color: #667eea;
    }

    .porque-cta {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
      border: 1px solid #e2e8f0;
    }

    .porque-cta p {
      color: #334155;
    }
  }
</style>
