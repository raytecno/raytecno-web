<style>
  /* ============================================
     DESKTOP: Tema azul oscuro (default)
     ============================================ */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 6rem 1.5rem 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
  }

  .hero-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      rgba(102, 126, 234, 0.1) 1px,
      transparent 1px
    );
    background-size: 40px 40px;
    opacity: 0.5;
  }

  .container {
    max-width: 1300px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1.1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text {
    max-width: 560px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(102, 126, 234, 0.15);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 50px;
    margin-bottom: 1.5rem;
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero-badge span:last-child {
    color: #c4b5fd;
    font-size: 0.8rem;
    font-weight: 500;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 1.25rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 2rem;
  }

  .hero-subtitle strong {
    color: #e2e8f0;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding: 1.25rem 0;
    border-top: 1px solid #334155;
    border-bottom: 1px solid #334155;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
  }

  .stat-label {
    font-size: 0.8rem;
    color: #64748b;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: #334155;
  }

  .hero-ctas {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
  }

  .cta-primary svg {
    width: 20px;
    height: 20px;
    transition: transform 0.2s ease;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
  }

  .cta-primary:hover svg {
    transform: translateX(4px);
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    padding: 1rem 1.75rem;
    background: transparent;
    color: #94a3b8;
    text-decoration: none;
    border: 1px solid #334155;
    border-radius: 12px;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .cta-secondary:hover {
    color: white;
    border-color: #94a3b8;
    background: rgba(255, 255, 255, 0.05);
  }

  /* Visual lado derecho */
  .hero-visual {
    position: relative;
    height: 500px;
  }

  .visual-card {
    position: absolute;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 24px 48px rgba(0, 0, 0, 0.4);
    border: 1px solid #334155;
  }

  .visual-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .visual-card.main {
    width: 100%;
    height: 320px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
  }

  .visual-label {
    position: absolute;
    bottom: 12px;
    left: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(8px);
    border-radius: 8px;
    font-size: 0.8rem;
    color: white;
    font-weight: 500;
  }

  .label-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .visual-card.floating-1 {
    width: 180px;
    height: 120px;
    top: 10px;
    right: -20px;
    z-index: 3;
    animation: float 6s ease-in-out infinite;
  }

  .visual-card.floating-2 {
    width: 160px;
    height: 110px;
    bottom: 20px;
    left: -30px;
    z-index: 1;
    animation: float 6s ease-in-out infinite 2s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .visual-badge {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 14px;
    background: rgba(30, 41, 59, 0.95);
    backdrop-filter: blur(8px);
    border: 1px solid #334155;
    border-radius: 10px;
    z-index: 4;
  }

  .visual-badge svg {
    width: 18px;
    height: 18px;
    color: #10b981;
  }

  .visual-badge span {
    font-size: 0.8rem;
    color: white;
    font-weight: 500;
  }

  .visual-badge.badge-1 {
    top: 60px;
    left: -40px;
    animation: float 5s ease-in-out infinite 1s;
  }

  .visual-badge.badge-2 {
    bottom: 80px;
    right: 20px;
    animation: float 5s ease-in-out infinite 3s;
  }

  .visual-badge.badge-2 svg {
    color: #f59e0b;
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.75rem;
    animation: bounce 2s ease-in-out infinite;
  }

  .scroll-indicator svg {
    width: 20px;
    height: 20px;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(8px);
    }
  }

  /* ============================================
     TABLET: Reorganizaci√≥n
     ============================================ */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero-text {
      max-width: 100%;
      text-align: center;
    }

    h1 {
      font-size: 2.25rem;
    }

    .hero-stats {
      justify-content: center;
    }

    .hero-ctas {
      justify-content: center;
    }

    .hero-visual {
      height: 350px;
      max-width: 500px;
      margin: 0 auto;
    }

    .visual-card.floating-1,
    .visual-card.floating-2,
    .visual-badge {
      display: none;
    }

    .visual-card.main {
      position: relative;
      transform: none;
      top: auto;
      height: 100%;
    }
  }

  /* ============================================
     M√ìVIL: Tema blanco claro
     ============================================ */
  @media (max-width: 768px) {
    .hero-section {
      padding: 5rem 1rem 3rem;
    }

    /* Fondo blanco */
    .hero-gradient {
      background: linear-gradient(
        135deg,
        #ffffff 0%,
        #f8fafc 50%,
        #ffffff 100%
      );
    }

    .hero-pattern {
      background-image: radial-gradient(
        rgba(102, 126, 234, 0.08) 1px,
        transparent 1px
      );
      opacity: 0.8;
    }

    /* Textos oscuros */
    h1 {
      font-size: 1.75rem;
      color: #1e293b;
    }

    .hero-subtitle {
      font-size: 1rem;
      color: #64748b;
    }

    .hero-subtitle strong {
      color: #334155;
    }

    /* Badge adaptado */
    .hero-badge {
      background: rgba(102, 126, 234, 0.1);
      border-color: rgba(102, 126, 234, 0.2);
    }

    .hero-badge span:last-child {
      color: #667eea;
    }

    /* Stats */
    .hero-stats {
      flex-direction: column;
      gap: 1rem;
      border-color: #e2e8f0;
    }

    .stat-number {
      color: #1e293b;
    }

    .stat-label {
      color: #64748b;
    }

    .stat-divider {
      width: 40px;
      height: 1px;
      background: #e2e8f0;
    }

    /* CTAs */
    .hero-ctas {
      flex-direction: column;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
    }

    .cta-secondary {
      color: #64748b;
      border-color: #e2e8f0;
    }

    .cta-secondary:hover {
      color: #1e293b;
      border-color: #94a3b8;
      background: rgba(0, 0, 0, 0.02);
    }

    /* Visual card */
    .visual-card {
      border-color: #e2e8f0;
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    }

    .visual-label {
      background: rgba(255, 255, 255, 0.95);
      color: #1e293b;
      border: 1px solid #e2e8f0;
    }

    .scroll-indicator {
      display: none;
    }
  }
</style>
