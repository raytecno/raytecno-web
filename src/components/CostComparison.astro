---
/**
 * Componente: Comparador de inversiÃ³n - VersiÃ³n Segura
 * Sin porcentajes agresivos, con disclaimer visible
 */
import type { Lang } from "@/config/pages";
import {
  getComparisonData,
  formatEUR,
  comparisonTexts,
  competitors as competitorsConfig,
} from "@/config/competitors";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = comparisonTexts[lang] || comparisonTexts.es;
const data = getComparisonData();

// Recopilar todas las fuentes
const allSources = Object.values(competitorsConfig)
  .filter((c) => c.enabled)
  .flatMap((c) => c.sources);

// Textos del botÃ³n
const sourcesButtonText: Record<string, string> = {
  es: "Ver fuentes verificadas",
  en: "View verified sources",
  fr: "Voir les sources vÃ©rifiÃ©es",
  ca: "Veure fonts verificades",
  "pt-br": "Ver fontes verificadas",
};
---

<section class="cost-comparison">
  <div class="container">
    <!-- Header -->
    <div class="header">
      <span class="badge">ðŸ“Š {t.estimated}</span>
      <h2>{t.title}</h2>
      <p>{t.scenario}</p>
    </div>

    <!-- Tabla compacta -->
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th class="concept-col"></th>
            <th class="raygold-col">
              <div class="brand raygold">
                <span class="logo">â—†</span>
                RayGold
              </div>
            </th>
            {
              data.competitors.map((c) => (
                <th>
                  <div class="brand" style={`--brand-color: ${c.color}`}>
                    {c.name}
                    <span class="estimated-tag">*</span>
                  </div>
                </th>
              ))
            }
          </tr>
        </thead>
        <tbody>
          <!-- Licencias -->
          <tr>
            <td class="label">{t.license}</td>
            <td class="raygold-cell">{formatEUR(data.raygold.license)}</td>
            {data.competitors.map((c) => <td>{formatEUR(c.license)}</td>)}
          </tr>

          <!-- ImplementaciÃ³n -->
          <tr>
            <td class="label">{t.implementation}</td>
            <td class="raygold-cell"
              >{formatEUR(data.raygold.implementation)}</td
            >
            {
              data.competitors.map((c) => (
                <td>{formatEUR(c.implementation)}</td>
              ))
            }
          </tr>

          <!-- AdaptaciÃ³n -->
          <tr>
            <td class="label">{t.customization}</td>
            <td class="raygold-cell highlight">
              {
                data.raygold.customization === 0
                  ? "âœ“ " + t.included
                  : formatEUR(data.raygold.customization)
              }
            </td>
            {
              data.competitors.map((c) => (
                <td class={c.isSpecialized ? "highlight" : ""}>
                  {c.customization === 0
                    ? "âœ“ " + t.included
                    : formatEUR(c.customization)}
                </td>
              ))
            }
          </tr>

          <!-- Mantenimiento -->
          <tr>
            <td class="label">{t.maintenance}</td>
            <td class="raygold-cell highlight">
              {
                data.raygold.maintenance === 0
                  ? "âœ“ " + t.included
                  : formatEUR(data.raygold.maintenance)
              }
            </td>
            {
              data.competitors.map((c) => (
                <td>
                  {c.maintenance === 0
                    ? "âœ“ " + t.included
                    : formatEUR(c.maintenance)}
                </td>
              ))
            }
          </tr>
        </tbody>
        <tfoot>
          <tr class="total-row">
            <td class="label"><strong>{t.total}</strong></td>
            <td class="raygold-cell total">
              <span class="total-amount">{formatEUR(data.raygold.total)}</span>
            </td>
            {
              data.competitors.map((c) => (
                <td class="total">
                  <span class="total-amount">{formatEUR(c.total)}</span>
                </td>
              ))
            }
          </tr>
        </tfoot>
      </table>

      <!-- Disclaimer dentro de la tabla -->
      <div class="table-footer">
        <span class="asterisk">*</span>
        {t.disclaimer}
      </div>
    </div>

    <!-- BotÃ³n de fuentes -->
    <div class="sources-section">
      <button class="sources-btn" id="toggleSources">
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
          ></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
        </svg>
        {sourcesButtonText[lang] || sourcesButtonText.es}
      </button>

      <div class="sources-panel" id="sourcesPanel">
        <div class="sources-grid">
          {
            allSources.map((s) => (
              <a
                href={s.url}
                target="_blank"
                rel="noopener"
                class="source-card"
              >
                <span class="source-name">{s.name}</span>
                <span class="source-quote">"{s.quote}"</span>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cost-comparison {
    padding: 80px 0;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header */
  .header {
    text-align: center;
    margin-bottom: 40px;
  }

  .badge {
    display: inline-block;
    padding: 6px 16px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 20px;
    margin-bottom: 16px;
    letter-spacing: 0.5px;
  }

  .header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary, #1e293b);
    margin: 0 0 8px 0;
    background: linear-gradient(135deg, #1e293b 0%, #475569 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .header p {
    font-size: 0.95rem;
    color: var(--text-secondary, #64748b);
    margin: 0;
  }

  /* Tabla */
  .table-container {
    background: white;
    border-radius: 20px;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 10px 40px -10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid #e2e8f0;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.85rem;
  }

  th,
  td {
    padding: 16px 12px;
    text-align: center;
  }

  thead th {
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
    font-weight: 600;
  }

  .concept-col {
    width: 140px;
  }

  .brand {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--brand-color, #64748b);
  }

  .brand.raygold {
    color: #10b981;
  }

  .brand .logo {
    font-size: 1rem;
  }

  .estimated-tag {
    font-size: 0.7rem;
    color: #94a3b8;
    margin-left: 2px;
  }

  tbody tr {
    border-bottom: 1px solid #f1f5f9;
  }

  tbody tr:hover {
    background: #fafbfc;
  }

  .label {
    text-align: left;
    color: #64748b;
    font-weight: 500;
    font-size: 0.8rem;
  }

  td {
    color: #334155;
    font-weight: 500;
  }

  .raygold-cell {
    background: rgba(16, 185, 129, 0.04);
    color: #059669;
    font-weight: 600;
  }

  .highlight {
    color: #10b981 !important;
  }

  /* Total row */
  tfoot .total-row {
    background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
  }

  tfoot .total-row td {
    padding: 20px 12px;
    border-top: 2px solid #e2e8f0;
  }

  .total-amount {
    display: block;
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e293b;
  }

  .raygold-cell .total-amount {
    color: #059669;
    font-size: 1.25rem;
  }

  /* Disclaimer en tabla */
  .table-footer {
    padding: 16px 20px;
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
    font-size: 0.72rem;
    color: #64748b;
    line-height: 1.5;
  }

  .table-footer .asterisk {
    color: #f59e0b;
    font-weight: 700;
  }

  /* BotÃ³n de fuentes */
  .sources-section {
    margin-top: 32px;
    text-align: center;
  }

  .sources-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: white;
    color: #64748b;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .sources-btn:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
    color: #334155;
  }

  .sources-btn svg {
    opacity: 0.6;
  }

  /* Panel de fuentes */
  .sources-panel {
    display: none;
    margin-top: 24px;
    padding: 24px;
    background: white;
    border-radius: 16px;
    border: 1px solid #e2e8f0;
    text-align: left;
  }

  .sources-panel.active {
    display: block;
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .sources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 12px;
  }

  .source-card {
    display: block;
    padding: 14px 16px;
    background: #f8fafc;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .source-card:hover {
    background: #f1f5f9;
    border-color: #e2e8f0;
    transform: translateY(-2px);
  }

  .source-name {
    display: block;
    font-size: 0.8rem;
    font-weight: 600;
    color: #667eea;
    margin-bottom: 4px;
  }

  .source-quote {
    display: block;
    font-size: 0.75rem;
    color: #64748b;
    font-style: italic;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cost-comparison {
      padding: 60px 0;
    }

    .header h2 {
      font-size: 1.5rem;
    }

    .table-container {
      margin: 0 -10px;
      border-radius: 16px;
      overflow-x: auto;
    }

    table {
      min-width: 600px;
      font-size: 0.75rem;
    }

    th,
    td {
      padding: 12px 8px;
    }

    .concept-col {
      width: 100px;
    }

    .table-footer {
      font-size: 0.65rem;
      padding: 12px 16px;
    }

    .sources-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode en desktop */
  @media (min-width: 769px) and (prefers-color-scheme: dark) {
    .table-container {
      background: #1e293b;
      border-color: #334155;
    }

    thead th {
      background: #0f172a;
      border-color: #334155;
    }

    tbody tr {
      border-color: #334155;
    }

    tbody tr:hover {
      background: rgba(255, 255, 255, 0.02);
    }

    .label {
      color: #94a3b8;
    }

    td {
      color: #e2e8f0;
    }

    .total-amount {
      color: #f8fafc;
    }

    .table-footer {
      background: #0f172a;
      border-color: #334155;
      color: #94a3b8;
    }

    .sources-btn,
    .sources-panel {
      background: #1e293b;
      border-color: #334155;
      color: #94a3b8;
    }

    .source-card {
      background: #0f172a;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("toggleSources");
    const panel = document.getElementById("sourcesPanel");

    btn?.addEventListener("click", () => {
      panel?.classList.toggle("active");

      if (panel?.classList.contains("active")) {
        btn.style.background = "#f0fdf4";
        btn.style.borderColor = "#86efac";
        btn.style.color = "#059669";
      } else {
        btn.style.background = "";
        btn.style.borderColor = "";
        btn.style.color = "";
      }
    });
  });
</script>
