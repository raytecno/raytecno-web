---
/**
 * Componente: Costes aproximados seg√∫n opci√≥n
 * 
 * Dise√±o: Blanco minimalista - TABLA EXTRA ANCHA
 * Formato n√∫meros: 1.234‚Ç¨ (con punto de miles)
 */
import type { Lang } from "@/config/pages";
import { 
  getComparisonData, 
  comparisonTexts,
  getAllSources,
} from "@/config/competitors";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = comparisonTexts[lang] || comparisonTexts.es;
const data = getComparisonData();
const allSources = getAllSources();

// Formato EUR con punto de miles: 1.234‚Ç¨, 12.000‚Ç¨
function formatEUR(value: number): string {
  if (value === 0) return "‚Äî";
  return value.toLocaleString("de-DE") + "‚Ç¨";
}

// Helper para mostrar valor o "Incluido"
function displayValue(value: number, includedText: string): string {
  return value === 0 ? `‚úì ${includedText}` : formatEUR(value);
}

// Textos del bot√≥n de fuentes
const sourcesButtonText: Record<string, string> = {
  es: "üìÑ Ver fuentes consultadas",
  en: "üìÑ View consulted sources",
  fr: "üìÑ Voir les sources consult√©es",
  ca: "üìÑ Veure fonts consultades",
  "pt-br": "üìÑ Ver fontes consultadas",
};
---

<section class="cost-comparison">
  <div class="container">
    
    <!-- Caja blanca principal -->
    <div class="comparison-card">
      
      <!-- Header -->
      <div class="header">
        <span class="badge">üìä Orientativo</span>
        <h2>{t.title}</h2>
        <p class="subtitle">{t.subtitle}</p>
      </div>

      <!-- Tabs de a√±os -->
      <div class="year-tabs">
        <button class="year-tab active" data-year="1">
          <span class="tab-year">{t.year1}</span>
          <span class="tab-desc">{t.year1Desc}</span>
        </button>
        <button class="year-tab" data-year="2">
          <span class="tab-year">{t.year2}</span>
          <span class="tab-desc">{t.year2Desc}</span>
        </button>
        <button class="year-tab" data-year="3">
          <span class="tab-year">{t.year3}</span>
          <span class="tab-desc">{t.year3Desc}</span>
        </button>
        <button class="year-tab total-tab" data-year="total">
          <span class="tab-year">{t.total3Years}</span>
          <span class="tab-desc">‚àë</span>
        </button>
      </div>

      <!-- Tablas por a√±o -->
      {[1, 2, 3].map((yearNum) => (
        <div class={`year-content ${yearNum === 1 ? 'active' : ''}`} data-year-content={yearNum}>
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th class="concept-col"></th>
                  <th class="raygold-col">
                    <div class="brand raygold">‚óÜ {data.raygold.name}</div>
                  </th>
                  {data.competitors.map(c => (
                    <th>
                      <div class="brand" style={`color: ${c.color}`}>
                        {c.name}<span class="est">*</span>
                      </div>
                    </th>
                  ))}
                </tr>
              </thead>
              <tbody>
                <!-- Licencias -->
                <tr>
                  <td class="label">{t.licenses}</td>
                  <td class="raygold-cell">{formatEUR(data.raygold.years[yearNum-1].licenses)}</td>
                  {data.competitors.map(c => (
                    <td>{formatEUR(c.years[yearNum-1].licenses)}</td>
                  ))}
                </tr>
                
                <!-- Solo A√±o 1: Implementaci√≥n, Configuraci√≥n, Formaci√≥n, Migraci√≥n -->
                {yearNum === 1 && (
                  <>
                    <tr>
                      <td class="label">{t.implementation}</td>
                      <td class="raygold-cell">{displayValue(data.raygold.years[0].implementation, t.included)}</td>
                      {data.competitors.map(c => (
                        <td>{displayValue(c.years[0].implementation, t.included)}</td>
                      ))}
                    </tr>
                    <tr>
                      <td class="label">{t.configuration}</td>
                      <td class="raygold-cell">{displayValue(data.raygold.years[0].configuration, t.included)}</td>
                      {data.competitors.map(c => (
                        <td>{displayValue(c.years[0].configuration, t.included)}</td>
                      ))}
                    </tr>
                    <tr>
                      <td class="label">{t.training}</td>
                      <td class="raygold-cell">{displayValue(data.raygold.years[0].training, t.included)}</td>
                      {data.competitors.map(c => (
                        <td>{displayValue(c.years[0].training, t.included)}</td>
                      ))}
                    </tr>
                    <tr>
                      <td class="label">{t.migration}</td>
                      <td class="raygold-cell">{displayValue(data.raygold.years[0].dataMigration, t.included)}</td>
                      {data.competitors.map(c => (
                        <td>{displayValue(c.years[0].dataMigration, t.included)}</td>
                      ))}
                    </tr>
                  </>
                )}

                <!-- Hosting (todos los a√±os) -->
                <tr>
                  <td class="label">{t.hosting}</td>
                  <td class="raygold-cell">{displayValue(data.raygold.years[yearNum-1].hosting, t.included)}</td>
                  {data.competitors.map(c => (
                    <td>{displayValue(c.years[yearNum-1].hosting, t.included)}</td>
                  ))}
                </tr>
                
                <!-- A√±os 2-3: Mantenimiento -->
                {yearNum > 1 && (
                  <tr>
                    <td class="label">{t.maintenance}</td>
                    <td class="raygold-cell">{displayValue(data.raygold.years[yearNum-1].maintenance, t.included)}</td>
                    {data.competitors.map(c => (
                      <td>{displayValue(c.years[yearNum-1].maintenance, t.included)}</td>
                    ))}
                  </tr>
                )}
              </tbody>
              <tfoot>
                <tr class="total-row">
                  <td class="label"><strong>{t.yearTotal}</strong></td>
                  <td class="raygold-cell total">
                    <span class="amount">{formatEUR(data.raygold.years[yearNum-1].total)}</span>
                  </td>
                  {data.competitors.map(c => (
                    <td class="total">
                      <span class="amount">{formatEUR(c.years[yearNum-1].total)}</span>
                    </td>
                  ))}
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      ))}

      <!-- Total 3 a√±os -->
      <div class="year-content" data-year-content="total">
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th class="concept-col"></th>
                <th class="raygold-col">
                  <div class="brand raygold">‚óÜ {data.raygold.name}</div>
                </th>
                {data.competitors.map(c => (
                  <th>
                    <div class="brand" style={`color: ${c.color}`}>
                      {c.name}<span class="est">*</span>
                    </div>
                  </th>
                ))}
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="label">{t.year1}</td>
                <td class="raygold-cell">{formatEUR(data.raygold.years[0].total)}</td>
                {data.competitors.map(c => (
                  <td>{formatEUR(c.years[0].total)}</td>
                ))}
              </tr>
              <tr>
                <td class="label">{t.year2}</td>
                <td class="raygold-cell">{formatEUR(data.raygold.years[1].total)}</td>
                {data.competitors.map(c => (
                  <td>{formatEUR(c.years[1].total)}</td>
                ))}
              </tr>
              <tr>
                <td class="label">{t.year3}</td>
                <td class="raygold-cell">{formatEUR(data.raygold.years[2].total)}</td>
                {data.competitors.map(c => (
                  <td>{formatEUR(c.years[2].total)}</td>
                ))}
              </tr>
            </tbody>
            <tfoot>
              <tr class="total-row grand-total">
                <td class="label"><strong>{t.total3Years}</strong></td>
                <td class="raygold-cell total">
                  <span class="amount big">{formatEUR(data.raygold.total)}</span>
                </td>
                {data.competitors.map(c => (
                  <td class="total">
                    <span class="amount">{formatEUR(c.total)}</span>
                  </td>
                ))}
              </tr>
            </tfoot>
          </table>
        </div>
      </div>

      <!-- Disclaimer corto dentro de la caja -->
      <p class="disclaimer-short">{t.disclaimer}</p>

    </div>
    <!-- Fin caja blanca -->

    <!-- Disclaimer extendido fuera de la caja -->
    <div class="disclaimer-box">
      <div class="disclaimer-icon">‚ÑπÔ∏è</div>
      <p>{t.disclaimerExtended}</p>
    </div>

    <!-- Bot√≥n de fuentes -->
    <div class="sources-section">
      <button class="sources-btn" id="toggleSources">
        {sourcesButtonText[lang] || sourcesButtonText.es}
      </button>
      
      <div class="sources-panel" id="sourcesPanel">
        <div class="sources-grid">
          {allSources.map(s => (
            <a href={s.url} target="_blank" rel="noopener" class="source-card">
              <span class="source-name">{s.name}</span>
              <span class="source-quote">"{s.quote}"</span>
            </a>
          ))}
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .cost-comparison {
    padding: 60px 0;
  }

  .container {
    max-width: 1200px; /* MUY ANCHO */
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Caja blanca principal */
  .comparison-card {
    background: white;
    border-radius: 20px;
    padding: 44px 56px; /* M√ÅS PADDING */
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 10px 40px -10px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
  }

  /* Header */
  .header {
    text-align: center;
    margin-bottom: 36px;
  }

  .badge {
    display: inline-block;
    padding: 6px 16px;
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    color: #059669;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 20px;
    margin-bottom: 12px;
    border: 1px solid #bbf7d0;
  }

  .header h2 {
    font-size: 1.85rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 8px 0;
  }

  .subtitle {
    font-size: 1rem;
    color: #64748b;
    margin: 0;
  }

  /* Year Tabs */
  .year-tabs {
    display: flex;
    gap: 12px;
    margin-bottom: 32px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .year-tab {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 14px 28px;
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    min-width: 120px;
  }

  .year-tab:hover {
    background: #f1f5f9;
    border-color: #cbd5e1;
  }

  .year-tab.active {
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    border-color: #86efac;
  }

  .year-tab.total-tab.active {
    background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
    border-color: #a5b4fc;
  }

  .tab-year {
    font-size: 1rem;
    font-weight: 600;
    color: #1e293b;
  }

  .tab-desc {
    font-size: 0.75rem;
    color: #64748b;
    margin-top: 3px;
  }

  /* Year Content */
  .year-content {
    display: none;
  }

  .year-content.active {
    display: block;
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .table-wrapper {
    overflow-x: auto;
  }

  /* Table - EXTRA ESPACIOSA */
  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
  }

  th, td {
    padding: 18px 22px; /* M√ÅS PADDING */
    text-align: center;
  }

  thead th {
    background: #f8fafc;
    border-bottom: 2px solid #e2e8f0;
  }

  .concept-col {
    width: 180px; /* M√ÅS ANCHO para que quepa "Configuraci√≥n sector" en 1 l√≠nea */
    min-width: 180px;
    white-space: nowrap;
  }

  .raygold-col {
    min-width: 140px;
  }

  th:not(.concept-col):not(.raygold-col) {
    min-width: 130px;
  }

  .brand {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .brand.raygold {
    color: #059669;
  }

  .est {
    font-size: 0.65rem;
    color: #94a3b8;
    margin-left: 2px;
  }

  tbody tr {
    border-bottom: 1px solid #f1f5f9;
  }

  tbody tr:hover {
    background: #fafbfc;
  }

  .label {
    text-align: left;
    color: #64748b;
    font-weight: 500;
    font-size: 0.9rem;
    white-space: nowrap; /* NO SALTAR L√çNEA */
  }

  td {
    color: #334155;
  }

  .raygold-cell {
    background: rgba(16, 185, 129, 0.06);
    color: #059669;
    font-weight: 600;
  }

  /* Total row */
  tfoot .total-row {
    background: #f8fafc;
  }

  tfoot .total-row td {
    padding: 20px 22px;
    border-top: 2px solid #e2e8f0;
  }

  .amount {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e293b;
  }

  .raygold-cell .amount {
    color: #059669;
    font-size: 1.2rem;
  }

  .amount.big {
    font-size: 1.5rem;
  }

  .grand-total {
    background: #f0fdf4 !important;
  }

  /* Disclaimer corto */
  .disclaimer-short {
    text-align: center;
    font-size: 0.78rem;
    color: #94a3b8;
    margin: 32px 0 0 0;
    padding-top: 28px;
    border-top: 1px solid #f1f5f9;
  }

  /* Disclaimer extendido */
  .disclaimer-box {
    margin-top: 32px;
    padding: 24px 32px;
    background: linear-gradient(135deg, #fefce8 0%, #fef9c3 100%);
    border: 1px solid #fde047;
    border-radius: 14px;
    display: flex;
    gap: 18px;
    align-items: flex-start;
  }

  .disclaimer-icon {
    font-size: 1.4rem;
    flex-shrink: 0;
  }

  .disclaimer-box p {
    font-size: 0.88rem;
    color: #713f12;
    line-height: 1.7;
    margin: 0;
  }

  /* Sources */
  .sources-section {
    text-align: center;
    margin-top: 32px;
  }

  .sources-btn {
    padding: 14px 28px;
    background: white;
    color: #64748b;
    font-size: 0.88rem;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .sources-btn:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
    color: #334155;
  }

  .sources-panel {
    display: none;
    margin-top: 24px;
    padding: 28px;
    background: white;
    border-radius: 14px;
    border: 1px solid #e2e8f0;
    text-align: left;
  }

  .sources-panel.active {
    display: block;
    animation: fadeIn 0.3s ease;
  }

  .sources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 16px;
  }

  .source-card {
    display: block;
    padding: 16px 18px;
    background: #f8fafc;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .source-card:hover {
    background: #f1f5f9;
    border-color: #e2e8f0;
    transform: translateY(-2px);
  }

  .source-name {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    color: #667eea;
    margin-bottom: 6px;
  }

  .source-quote {
    display: block;
    font-size: 0.78rem;
    color: #64748b;
    font-style: italic;
  }

  /* ============================================
     M√ìVIL
     ============================================ */
  @media (max-width: 768px) {
    .cost-comparison {
      padding: 40px 0;
    }

    .container {
      padding: 0 16px;
    }

    .comparison-card {
      padding: 24px 16px;
      border-radius: 16px;
    }

    .header h2 {
      font-size: 1.4rem;
    }

    .year-tabs {
      gap: 6px;
    }

    .year-tab {
      padding: 10px 12px;
      min-width: 70px;
    }

    .tab-year {
      font-size: 0.8rem;
    }

    .tab-desc {
      font-size: 0.65rem;
    }

    table {
      min-width: 650px;
      font-size: 0.82rem;
    }

    td, th {
      padding: 14px 12px;
    }

    .concept-col {
      min-width: 150px;
    }

    .label {
      white-space: normal; /* En m√≥vil s√≠ puede saltar */
    }

    .disclaimer-box {
      padding: 18px;
      flex-direction: column;
      gap: 12px;
    }

    .disclaimer-box p {
      font-size: 0.8rem;
    }

    .sources-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Tabs de a√±os
    const tabs = document.querySelectorAll('.year-tab');
    const contents = document.querySelectorAll('.year-content');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const year = tab.getAttribute('data-year');
        
        // Activar tab
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        // Mostrar contenido
        contents.forEach(c => {
          if (c.getAttribute('data-year-content') === year) {
            c.classList.add('active');
          } else {
            c.classList.remove('active');
          }
        });
      });
    });
    
    // Bot√≥n de fuentes
    const sourcesBtn = document.getElementById('toggleSources');
    const sourcesPanel = document.getElementById('sourcesPanel');
    
    sourcesBtn?.addEventListener('click', () => {
      sourcesPanel?.classList.toggle('active');
    });
  });
</script>