---
/**
 * SEO Component - Meta tags, Open Graph, Twitter Cards & JSON-LD
 * 
 * Uso básico:
 * <SEO title="Mi Página" description="Descripción de la página" />
 * 
 * Uso completo:
 * <SEO 
 *   title="Módulo Maestros"
 *   description="Gestión de artículos, proveedores y clientes"
 *   image="/images/maestros-og.jpg"
 *   type="product"
 *   noindex={false}
 * />
 */

interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article' | 'product';
  noindex?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  keywords?: string[];
}

// Configuración base del sitio
const SITE_CONFIG = {
  name: 'RayGold ERP',
  company: 'Raytecno BCN SL',
  domain: 'https://www.raytecno.es',
  defaultTitle: 'RayGold - Software ERP para Joyería',
  defaultDescription: 'Software de gestión integral para el sector joyero. ERP especializado con módulos de fabricación, comercial, finanzas y más. +30 años de experiencia.',
  defaultImage: '/images/og-default.jpg',
  locale: 'es_ES',
  twitterHandle: '@raytecno',
  themeColor: '#667eea',
  // Datos de la empresa para Schema.org
  address: {
    streetAddress: 'Montgat',
    addressLocality: 'Barcelona',
    addressRegion: 'Cataluña',
    postalCode: '08390',
    addressCountry: 'ES'
  },
  contact: {
    phone: '+34648088550',
    email: 'info@raytecno.es'
  }
};

const {
  title,
  description = SITE_CONFIG.defaultDescription,
  image = SITE_CONFIG.defaultImage,
  url = Astro.url.href,
  type = 'website',
  noindex = false,
  publishedTime,
  modifiedTime,
  author = SITE_CONFIG.company,
  keywords = ['ERP joyería', 'software joyería', 'gestión joyería', 'RayGold', 'fabricación joyas', 'Raytecno']
} = Astro.props;

// Construir título completo
const fullTitle = title 
  ? `${title} | ${SITE_CONFIG.name}`
  : SITE_CONFIG.defaultTitle;

// URL absoluta de la imagen
const absoluteImageUrl = image.startsWith('http') 
  ? image 
  : `${SITE_CONFIG.domain}${image}`;

// Schema.org - Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE_CONFIG.company,
  "url": SITE_CONFIG.domain,
  "logo": `${SITE_CONFIG.domain}/images/logo.png`,
  "description": "Empresa especializada en software de gestión para el sector joyero desde 1990.",
  "foundingDate": "1990",
  "address": {
    "@type": "PostalAddress",
    ...SITE_CONFIG.address
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": SITE_CONFIG.contact.phone,
    "email": SITE_CONFIG.contact.email,
    "contactType": "sales",
    "availableLanguage": ["Spanish", "Catalan"]
  },
  "sameAs": [
    // Añadir redes sociales cuando estén disponibles
    // "https://www.linkedin.com/company/raytecno",
    // "https://twitter.com/raytecno"
  ]
};

// Schema.org - Software Application (para páginas de producto)
const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "RayGold ERP",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Windows, Web",
  "description": description,
  "url": SITE_CONFIG.domain,
  "author": {
    "@type": "Organization",
    "name": SITE_CONFIG.company
  },
  "offers": {
    "@type": "Offer",
    "price": "29",
    "priceCurrency": "EUR",
    "priceValidUntil": "2025-12-31",
    "availability": "https://schema.org/InStock"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "45"
  }
};

// Schema.org - BreadcrumbList
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Inicio",
      "item": SITE_CONFIG.domain
    }
  ]
};

// Añadir breadcrumb según la URL actual
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
pathSegments.forEach((segment, index) => {
  breadcrumbSchema.itemListElement.push({
    "@type": "ListItem",
    "position": index + 2,
    "name": segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' '),
    "item": `${SITE_CONFIG.domain}/${pathSegments.slice(0, index + 1).join('/')}`
  });
});

// Schema.org - WebPage
const webPageSchema = {
  "@context": "https://schema.org",
  "@type": type === 'article' ? 'Article' : 'WebPage',
  "name": fullTitle,
  "description": description,
  "url": url,
  "image": absoluteImageUrl,
  "inLanguage": "es",
  "isPartOf": {
    "@type": "WebSite",
    "name": SITE_CONFIG.name,
    "url": SITE_CONFIG.domain
  },
  ...(publishedTime && { "datePublished": publishedTime }),
  ...(modifiedTime && { "dateModified": modifiedTime }),
  ...(type === 'article' && {
    "author": {
      "@type": "Organization",
      "name": author
    }
  })
};
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(', ')} />
<meta name="author" content={author} />
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
<meta name="language" content="Spanish" />
<meta name="revisit-after" content="7 days" />

<!-- Canonical URL -->
<link rel="canonical" href={url} />

<!-- Theme Color -->
<meta name="theme-color" content={SITE_CONFIG.themeColor} />
<meta name="msapplication-TileColor" content={SITE_CONFIG.themeColor} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={absoluteImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content={SITE_CONFIG.locale} />
<meta property="og:site_name" content={SITE_CONFIG.name} />

{type === 'article' && publishedTime && (
  <meta property="article:published_time" content={publishedTime} />
)}
{type === 'article' && modifiedTime && (
  <meta property="article:modified_time" content={modifiedTime} />
)}
{type === 'article' && (
  <meta property="article:author" content={author} />
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={url} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={absoluteImageUrl} />
<meta name="twitter:site" content={SITE_CONFIG.twitterHandle} />
<meta name="twitter:creator" content={SITE_CONFIG.twitterHandle} />

<!-- Geo Tags (para SEO local) -->
<meta name="geo.region" content="ES-CT" />
<meta name="geo.placename" content="Barcelona" />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(webPageSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
{type === 'product' && (
  <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
)}
